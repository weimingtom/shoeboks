		protected var _oTMP		:ByteArray;		protected var _oSTREAM		:ByteArray;		protected var _nsMAPTYPE	:Namespace;		protected var _uMAPWIDTH	:uint;		protected var _uMAPHEIGHT	:uint;				// -------o constructor					public function MMapRenderer() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {						}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {						}						/**			* set datas function			* @public			* @param 			* @return			*/			public function set datas( o : ByteArray ) : void {				_oTMP = o;				_oSTREAM = o ;				_parse();				//update('osef');			}						/**			* get gridWidth function			* @public			* @param 			* @return			*/			public function get gridWidth() : uint {				return _uMAPWIDTH;			}						/**			* get gridHeight function			* @public			* @param 			* @return			*/			public function get gridHeight() :  uint {				return _uMAPHEIGHT;			}						/**			* getAt function			* @public			* @param 			* @return			*/			public function getAt(iX : uint , iY : uint) : Vector.<int> {				return _aCONTENT[iX][iY];			}					// -------o protected						/**			* Parsing the map file datas			* and stock them in to an 2D Array			*			* @return void			*/			protected function _parse() : void {				trc('parse');								_oSTREAM.position = 0;				_oSTREAM.uncompress();								_nsMAPTYPE = (_oSTREAM.readShort() == 0) ? IsoGrid : TwoD;				_uMAPWIDTH = _oSTREAM.readInt();				_uMAPHEIGHT = _oSTREAM.readInt();								var uSIZE : uint = _uMAPWIDTH;				_aCONTENT = new Array(_uMAPWIDTH);				var i : int = 0;				for( i ; i < uSIZE ; i++)					_aCONTENT[i] = new Array(_uMAPHEIGHT);								_next();			}						/**			* 			*			* @param 			* @return			*/			protected function _next() : void {				if(_oSTREAM.bytesAvailable==0){					update('osef');					return;				}								//					_aCONTENT[_oSTREAM.readInt()][_oSTREAM.readInt()] = _oSTREAM.readObject();					_next();						}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(MMapRenderer, arguments);			}	}}