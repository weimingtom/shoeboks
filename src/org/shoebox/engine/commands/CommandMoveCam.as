	/**	 * org.shoebox.engine.commands.CommandMoveCam	* @author shoebox	*/	public class CommandMoveCam extends AbstractCommand implements ICommand {				public var toPosition			:Vector3D;				protected var _oEVENT			:PlayerEvent = new PlayerEvent( PlayerEvent.PLAYER_MOVE);		protected var _uCOUNT			:uint = 0;		protected var _vPOS			:Vector3D;		protected var _vMOVE			:Vector3D = new Vector3D( 10 , 0 );		protected var _uFRAMES			:uint = 0;		protected var _oTWEEN			:TweenLite;		protected static var __instance	:CommandMoveCam = null;				// -------o constructor					/**			* Constructor of the AScript command class			*			* @public			* @return	void			*/			public function CommandMoveCam( e : SingletonEnforcer ) : void {							}		// -------o public						/**			* Execution of the command			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			override public function onExecute( e : Event = null ) : void {				trc('onExecute');				LightSignal.getInstance().connect(Event.ENTER_FRAME , _onUpdate );				_oTWEEN = new TweenLite( Camera , 2 , { 											x : 0 , y : 0 , 											ease : Equations.easeInOutCubic,											onComplete : _onComplete 										} );			}			/**			* When the command is canceled			* 			* @public			* @param	e : optional event (Event)	 			* @return	void			*/			override public function onCancel( e : Event = null ) : void {							}					// -------o protected				/**			* 			*			* @param 			* @return			*/			final protected function _onUpdate( ) : void {				Camera.x = Math.floor( Camera.x );				Camera.y = Math.floor( Camera.y );				LightSignal.getInstance().emit( CameraEvent.MOVE_CAM );			}						/**			* 			*			* @param 			* @return			*/			final protected function _onComplete() : void {				LightSignal.getInstance().disconnect(Event.ENTER_FRAME , _onUpdate );			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandMoveCam, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (CommandMoveCam)			*/			static public function getInstance() : CommandMoveCam {								if( !__instance )					__instance = new CommandMoveCam( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}