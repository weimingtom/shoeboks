	import org.shoebox.engine.core.variables.DisplayObjectCache;	import org.shoebox.engine.core.variables.RootPath;	import org.shoebox.engine.core.variables.SpritesCache;	import org.shoebox.engine.datas.TileProps;	import org.shoebox.patterns.service.HTTP_Service;	import org.shoebox.patterns.service.IService;	import org.shoebox.utils.logger.Logger;	import flash.display.Bitmap;	import flash.display.DisplayObject;	import flash.display.Loader;	import flash.events.Event;	import flash.geom.Point;	import flash.net.URLLoaderDataFormat;	import flash.net.URLRequest;	import flash.utils.ByteArray;	/**	 * Load a tile BWT file and digest it	* 	* org.shoebox.engine.services.STile	* @author shoebox	*/	public class STile extends HTTP_Service implements IService {				public var tileID			:uint;				protected var _oMEDIA		:DisplayObject;		protected var _oPROPS		:TileProps;		protected var _oMEDIALOADER	:Loader;				// -------o constructor					/**			* Constructor of the STile class			*			* @public			* @param 	u	: Tile ID (uint)			* @return	void			*/			public function STile( ) : void {				useCaching = true;				dataFormat = URLLoaderDataFormat.BINARY;			}		// -------o public						/**			* onCall function			* @public			* @param 			* @return			*/			final override public function onCall() : void {								request = new URLRequest(RootPath+'tiles/' + tileID + '.bwt');				super.onCall();						}						/**			* onRefresh function			* @public			* @param 			* @return			*/			final override public function onRefresh() : void {						}					// -------o protected						/**			* When the raw map datas are loaded			* override the method of the HTT_Service class		 	*			* @param        e : complete event (Event)			* @return       void			*/			override protected function _onDatas( e : Event ) : void {								var	oBA 	: ByteArray = e.target.data as ByteArray;					oBA.uncompress();									// Checking in the filetype is valid					if( oBA.readUTF() !== 'BWT'){						Logger.fatal( this , 'Invalid BWT file');						return;					}				//					_oPROPS = new TileProps();					_oPROPS.collidable 	= (oBA.readInt() == 1);					_oPROPS.ptDecal 		= new Point( oBA.readInt() , oBA.readInt() );					_oPROPS.mediaDatas 	= oBA.readObject();					_oPROPS.ground 		= (oBA.readInt() == 1);								SpritesCache[tileID] = _oPROPS;								//					var 	oCONTEXT : LoaderContext = new LoaderContext( );						oCONTEXT.allowCodeImport = true;							//					_oMEDIALOADER = new Loader();					_oMEDIALOADER.contentLoaderInfo.addEventListener(Event.COMPLETE, _onMedia , false, 10, true);					_oMEDIALOADER.loadBytes(_oPROPS.mediaDatas , oCONTEXT); 								//				//dispose();			}						/**			* 			*			* @param 			* @return			*/			final protected function _onMedia( e : Event ) : void {								if(_oMEDIALOADER.content is Bitmap)					DisplayObjectCache[tileID] = (_oMEDIALOADER.content as Bitmap).bitmapData.clone();				else					DisplayObjectCache[tileID] = _oMEDIALOADER;										dispatch( _oPROPS );					dispose();											}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(STile, args);			}	}}