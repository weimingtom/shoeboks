ATH		:String;				// -------o constructor					/**			* Constructor of the SProject class			*			* @public			* @return	void			*/			public function SProject() : void {				dataFormat = URLLoaderDataFormat.BINARY;			}		// -------o public						/**			* Setter of the filepath to the BWY project file			* 			* @public			* @param	s : bwy filepath (String) 			* @return	void			*/			public function set path( s : String ) : void {				trc('set path ::: '+s);				_sPATH = s;				request = new URLRequest(s);			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			override protected function _onDatas(e:Event) : void {				trc('onDatas ::: '+e);				var 	oDIGESTER : SProjectDigester = ServiceFactory.getService( SProjectDigester) as SProjectDigester;					oDIGESTER.datas = _oLOADER.data;					oDIGESTER.call();									dispatch( null );				onComplete();							}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(SProject, args);			}	}}