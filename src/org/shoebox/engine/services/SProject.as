ted the datas	* 	* org.shoebox.engine.services.SProject	* @author shoebox	*/	public class SProject extends HTTP_Service implements IService {				protected var _baRAW		:ByteArray;		protected var _sPATH		:String;				// -------o constructor					/**			* Constructor of the SProject class			*			* @public			* @return	void			*/			public function SProject() : void {				dataFormat = URLLoaderDataFormat.BINARY;				}		// -------o public						/**			* When the service is called			* 			* @public			* @return void			*/			final override public function onCall() : void {				request = new URLRequest( RootPath +'project.bwy' );				addEventListener( ServiceEvent.ON_DATAS , _onRawDatas , false , 1000 , true );				super.onCall();			}			/**			* When the datas are refreshed			* 			* @public			* @return void			*/			final override public function onRefresh() : void {							}				// -------o protected						/**			* When the raw project file is loaded			* 			* @param	e : service response event (ServiceEvent) 			* @return	void			*/			protected function _onRawDatas( e : ServiceEvent ) : void {								//					removeEventListener( ServiceEvent.ON_DATAS , _onRawDatas , false );					e.stopImmediatePropagation();								// Reading the raw file datas <code>ByteArray</code>					_baRAW = e.datas as ByteArray;					_baRAW.uncompress();								// Test the first UTF string of the bytearray to check if this is a valid project file					if(String(_baRAW.readUTF())!=='BWY')						throw new Error('Invalid BWY project file');								// Name of the project (only for info)					var SPROJECTNAME : String = _baRAW.readUTF();									// Size of the tiles medias					TileSize = _baRAW.readInt();					dispatch(null);					onComplete();					}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(SProject, args);			}	}}