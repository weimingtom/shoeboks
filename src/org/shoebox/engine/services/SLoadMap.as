ebox.bwyengine.service.SLoadMap	* @author shoebox	*/	public class SLoadMap extends HTTP_Service implements IService {				protected var _uMAPID		:uint;				// -------o constructor					/**			* Constructor of the SLoadMap class			*			* @public			* @return	void			*/			public function SLoadMap() : void {				dataFormat = URLLoaderDataFormat.BINARY;			}		// -------o public					/**			* onCall function			* @public			* @param 			* @return			*/			final override public function onCall( ) : void {				super.onCall();			}						/**			* onRefresh function			* @public			* @param 			* @return			*/			final override public function onRefresh( ) : void {						}						/**			* set mapID function			* @public			* @param 			* @return			*/			public function set mapID( u : uint ) : void {				trc('set mapID ::: '+u);				_uMAPID = u;				request = new URLRequest('datas/maps/'+BoxMath.toString(_uMAPID , 4)+'.bwm');				trace(_oREQ.url);			}					// -------o protected						/**			* When the raw map datas are loaded			* override the method of the HTT_Service class			* 			* @param 	e : complete event (Event)			* @return	void			*/			override protected function _onDatas( e : Event ) : void {				var 	oDIGESTER : SMapDigester = ServiceFactory.getService( SMapDigester) as SMapDigester;					oDIGESTER.source = _oLOADER.data;					oDIGESTER.addEventListener( ServiceEvent.ON_DATAS , _onDigestedMap , false , 10 , true );					oDIGESTER.call();							}						/**			* When the digester is complete			*				* @param 	e : Complete event (Event)			* @return	void			*/			protected function _onDigestedMap( e : ServiceEvent ) : void {				(e.target as SMapDigester).removeEventListener( ServiceEvent.ON_DATAS , _onDigestedMap , false );								dispatch( e.datas , false );				onComplete();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(SLoadMap, args);			}	}}