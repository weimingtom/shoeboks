HTTP_Service {				protected var _oDIGESTER	:STileDigester;		protected var _uTILEID		:uint;				protected static var __instance		:STileLoader;				// -------o constructor					public function STileLoader( ) : void {				useCaching = true;			}		// -------o public						/**			* set tileID function			* @public			* @param 			* @return			*/			public function set tileID( u : uint ) : void {				_uTILEID = u ;				request = new URLRequest('datas/tiles/'+_uTILEID+'.bwt');				dataFormat = URLLoaderDataFormat.BINARY;			}								// -------o protected						/**			* When the raw map datas are loaded			* override the method of the HTT_Service class			* 			* @param 	e : complete event (Event)			* @return	void			*/			override protected function _onDatas( e : Event ) : void {								//					_oDIGESTER = new STileDigester();					_oDIGESTER.source = _oLOADER.data;					_oDIGESTER.addEventListener( ServiceEvent.ON_DATAS , _onDigestedTile , false , 10 , true );					_oDIGESTER.call();							}						/**			* When the digester is complete			*				* @param 	e : Complete event (Event)			* @return	void			*/			protected function _onDigestedTile( e : ServiceEvent ) : void {				_oDIGESTER.removeEventListener( ServiceEvent.ON_DATAS , _onDigestedTile , false );								dispatch( e.datas , false );				onComplete();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(STileLoader, args);			}	}}