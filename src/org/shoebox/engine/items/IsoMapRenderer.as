 _nHALFX		:int;		protected var _nHALFY		:int;		protected var _rBND		:Rectangle = new Rectangle(0 , 0 , 800 , 600);		protected var _spCONTAINER	:Sprite = new Sprite();		protected var _spMASK		:Sprite = new Sprite();		protected var _uWIDTH		:uint;		protected var _uHEIGHT		:uint;		protected var _vPOSITION	:Vector3D = new Vector3D(2,0,2);		protected var _vDECAL		:Vector3D = new Vector3D();				// -------o constructor					public function IsoMapRenderer( w : uint = 20 , h : uint = 20 , bnd : Rectangle = null ) : void {								trc('constructor');								//					_rBND = (bnd == null) ? new Rectangle(0 , 0 , 800 , 600) : bnd;								//					_spMASK.scrollRect = bnd;					_spMASK.cacheAsBitmap = true;					_uWIDTH = w;					_uHEIGHT = h;								addChild(_spMASK);				_spMASK.addChild(_spCONTAINER);				var shBORDER : Shape = new Shape();					shBORDER.graphics.lineStyle(1);					shBORDER.graphics.drawRect(0 , 0 , _rBND.width , _rBND.height);					shBORDER.graphics.moveTo(0 , 0);					shBORDER.graphics.lineTo(_rBND.width,_rBND.height);					shBORDER.graphics.moveTo(_rBND.width , 0);					shBORDER.graphics.lineTo(0,_rBND.height);									addChild(shBORDER);			}		// -------o public						/**			* getItemAT function			* @public			* @param 			* @return			*/			public function getItemAT( x : int , y : int ) : Tile {				return _spCONTAINER.getChildByName('tile'+x+'_'+y) as Tile;			}						/**			* set position function			* @public			* @param 			* @return			*/			public function set position( v : Vector3D ) : void {				_vPOSITION = v;			}						/**			* get position function			* @public			* @param 			* @return			*/			public function get position() : Vector3D {				return _vPOSITION;			}						/**			* draw function			* @public			* @param 			* @return			*/			public function draw() : void {				_draw();			}						/**			* move function			* @public			* @param 			* @return			*/			public function move( x : int , y : int ) : void {				_move(x,y);			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {								var c : Tile;				var iX : int = 0;				var iZ : int = 0;				var iDECALX : int = (Config.GRID_WIDTH/2)* Config.TILESIZE;				var v : Vector3D = new Vector3D();								for( iX ; iX <Config.GRID_WIDTH ; iX++){										for(iZ = 0 ; iZ < Config.GRID_HEIGHT ; iZ++){												v.x = iX;						v.y = 0;						v.z = iZ;						v = IsoMath.screenToIso(v);												c = Factory.build( Tile ,	{ 												name : 'tile'+iX+'_'+iZ , 											x : v.x * Config.TILESIZE / 2 , y : v.y * Config.TILESIZE/2 ,											position : new Vector3D( iX , iZ , 0)											});																	_spCONTAINER.addChild( c );						c.draw();						//c.addChild( Factory.build(TextField,{text:c.position.x+'/'+c.position.y , y : 15 , x : 25 }));											}									}								_move( 0 , 0 );							}						/**			* 			*			* @param 			* @return			*/			protected function _move( x : int , y : int ) : void {				_vPOSITION.x += x;				_vPOSITION.z += y;								_vPOSITION.x = Math.max(_vPOSITION.x , 0);				_vPOSITION.z = Math.max(_vPOSITION.z , 0);				_vPOSITION.x = Math.min(_vPOSITION.x , _uWIDTH - 1);				_vPOSITION.z = Math.min(_vPOSITION.z, _uHEIGHT - 1);								trace(_vPOSITION);								var 	vTMP : Vector3D = _vPOSITION.clone();					vTMP.y = 0;					vTMP = IsoMath.screenToIso(vTMP);								_spCONTAINER.x = (-vTMP.x * Config.TILESIZE / 2) + _rBND.width/2 - Config.TILESIZE/2;				_spCONTAINER.y = (-vTMP.y * Config.TILESIZE / 2 ) + _rBND.height / 2 - Config.TILESIZE/4;					}						/**			* 			*			* @param 			* @return			*/			protected function _changeTile( xOLD : int , yOLD : int , iX : int , iY : int ) : void {				trace(iX +' /// '+iY);			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(IsoMapRenderer, arguments);			}	}}