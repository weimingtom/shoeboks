ass TileLayer extends Sprite {				protected var _oLOADER		:Loader;		protected var _oPROPS		:TileProps;		protected var _iDECAL		:int;				// -------o constructor					/**			* Constructor of the TileLayer class			*			* @public			* @return	void			*/			public function TileLayer( uTILEID : uint , iDECAL : int ) : void {				//				cacheAsBitmap = true;				_iDECAL = iDECAL;								if( SpritesCache[uTILEID] == undefined){					var 	oSERVICE : STile = new STile( uTILEID );						oSERVICE.addEventListener( ServiceEvent.ON_DATAS , _onDatas , false , 10 , true );						oSERVICE.call();					}else{					_oPROPS = SpritesCache[uTILEID];					_loadMedia();				}			}		// -------o public						/**			* get collidable function			* @public			* @param 			* @return			*/			public function get collidable() : Boolean {				return _oPROPS.collidable;			}					// -------o protected					/**			* When the tile properties are loaded and digested			*			* @param 	e : Servie response (ServiceEvent)			* @return	void			*/			protected function _onDatas( e : ServiceEvent ) : void {								//					_oPROPS = e.datas as TileProps;					_loadMedia();								}						/**			* 			*			* @param 			* @return			*/			protected function _loadMedia() : void {								//					_oLOADER = new Loader();					_oLOADER.contentLoaderInfo.addEventListener(Event.COMPLETE, _onMedia , false, 10, true);					_oLOADER.loadBytes(_oPROPS.mediaDatas);								}					/**			* When the media is loaded 			*			* @param 	e : event complete (Event)			* @return	void			*/			protected function _onMedia( e : Event ) : void {								_oLOADER.contentLoaderInfo.removeEventListener( Event.COMPLETE, _onMedia , false );				_oLOADER.x = _oPROPS.ptDecal.x;				_oLOADER.y = -_oLOADER.height + TileSize + _oPROPS.ptDecal.y + _iDECAL;								addChild( _oLOADER );			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(TileLayer, args);			}	}}