				// -------o constructor					public function Tile() : void {				cacheAsBitmap = true;				addChild(_oLAYERS);				addChild(_shBORDER);			}		// -------o public						/**			* set depth function			* @public			* @param 			* @return			*/			public function set depth( u : uint ) : void {				_uDEPTH = u;			}						/**			* get depth function			* @public			* @param 			* @return			*/			public function get depth( ) : uint {				return _uDEPTH;			}						/**			* get layers function			* @public			* @param 			* @return			*/			public function get layers() : TileLayers {				return _oLAYERS;			}						/**			* set position function			* @public			* @param 			* @return			*/			public function set position( p : Vector3D ) : void {				_pPOSITION = p;			}						/**			* get position function			* @public			* @param 			* @return			*/			public function get position() : Vector3D {				return _pPOSITION;			}						/**			* draw function			* @public			* @param 			* @return			*/			public function draw() : void {								var w : Number = tileSize;				var h : Number = tileSize / 2;								//					_shBORDER.graphics.lineStyle( .1 , 0x000000 , .1);					_shBORDER.graphics.moveTo( 0 , h / 2);					_shBORDER.graphics.lineTo( w/2 , 0 );					_shBORDER.graphics.lineTo( w , h/2 );					_shBORDER.graphics.lineTo( w/2 , h );					_shBORDER.graphics.lineTo( 0 , h/2 );							}					// -------o protected		// -------o misc			public static function trc(arguments : *) : void {				Logger.log(Tile, arguments);			}	}}