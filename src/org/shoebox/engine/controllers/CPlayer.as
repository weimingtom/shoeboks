flash.ui.Keyboard;	/**	 * org.shoebox.engine.controllers.CPlayer	* @author shoebox	*/	public class CPlayer extends AController implements IController , IFrameable{				protected var _bUP		:Boolean = false;		protected var _bDOWN		:Boolean = false;		protected var _bRIGHT		:Boolean = false;		protected var _bLEFT		:Boolean = false;				// -------o constructor					/**			* Constructor of the CPlayer class			*			* @public			* @return	void			*/			public function CPlayer() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {							}						/**			* onEvent function			* @public			* @param 			* @return			*/			final override public function onEvent( e : Event ) : void {								if(e is KeyboardEvent ){										if(e.type == KeyboardEvent.KEY_DOWN){												switch( (e as KeyboardEvent).keyCode ){													case Keyboard.RIGHT:								_bRIGHT = true;								break;															case Keyboard.LEFT:								_bLEFT = true;								break;															case Keyboard.UP:								_bUP = true;								break;															case Keyboard.DOWN:								_bDOWN = true;								break;						}											}																				if(e.type == KeyboardEvent.KEY_UP){												switch( (e as KeyboardEvent).keyCode ){													case Keyboard.RIGHT:								_bRIGHT = false;								break;															case Keyboard.LEFT:								_bLEFT = false;								break;															case Keyboard.UP:								_bUP = false;								break;															case Keyboard.DOWN:								_bDOWN = false;								break;													}											}																			}								if(_bRIGHT || _bLEFT || _bDOWN || _bUP)					STAGEINSTANCE.addEventListener(Event.ENTER_FRAME  , onFrame , false , 10 , true );				else if( !_bRIGHT && !_bLEFT && !_bDOWN && !_bUP)					STAGEINSTANCE.removeEventListener(Event.ENTER_FRAME  , onFrame , false);												}						/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {						}						/**			* onFrame function			* @public			* @param 			* @return			*/			public function onFrame( e : Event ) : void {								var 	oEVENT : PlayerEvent = new PlayerEvent( PlayerEvent.PLAYER_MOVE , true);					oEVENT.move = new Point();								if(_bRIGHT)					oEVENT.move.x += 4;								if(_bLEFT)					oEVENT.move.x -= 4;									if(_bUP)					oEVENT.move.y -= 4;									if(_bDOWN)					oEVENT.move.y += 4;								EventCentral.getInstance().dispatchEvent( oEVENT );			}				// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CPlayer, args);			}	}}