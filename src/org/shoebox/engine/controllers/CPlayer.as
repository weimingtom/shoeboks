	import flash.events.MouseEvent;
	import org.shoebox.engine.core.Keys;	import org.shoebox.engine.core.variables.Forces;	import org.shoebox.engine.events.PlayerEvent;	import org.shoebox.events.LightSignal;	import org.shoebox.patterns.mvc.abstracts.AController;	import org.shoebox.patterns.mvc.interfaces.IController;	import org.shoebox.utils.display.STAGEINSTANCE;	import org.shoebox.utils.logger.Logger;	import flash.events.Event;	import flash.geom.Point;	import flash.ui.Keyboard;	/**	 * org.shoebox.engine.controllers.CPlayer	* @author shoebox	*/	public class CPlayer extends AController implements IController {				public var RUN_DISTANCE			: uint = 250;		public var WALK_DISTANCE			: uint = 150;		public var DEAD_DISTANCE			: uint = 50;		public var JUMP_DISTANCE			: uint = 160;		public var JUMP_H_DISTANCE			: uint = 120;				protected var _bDOWN				: Boolean = false;				protected const POINT			: Point = new Point( );				// -------o constructor					/**			* Constructor of the CPlayer class			*			* @public			* @return	void			*/			public function CPlayer() : void {			}		// -------o public						/**			* Controller initialization			* 			* @public			* @return void			*/			final override public function initialize() : void {				register( STAGEINSTANCE , Event.ENTER_FRAME , false , 10 , true );				register( STAGEINSTANCE , MouseEvent.MOUSE_DOWN, false , 10 , true );				register( STAGEINSTANCE , MouseEvent.MOUSE_UP, false , 10 , true );			}			/**			* When the controller receive an event 			* 			* @public			* @param	e : received event (Event) 			* @return	void			*/			final override public function onEvent( e : Event ) : void {								switch( e.type ){										case Event.ENTER_FRAME:						_onFrame();						break;										case MouseEvent.MOUSE_DOWN:						_bDOWN = true;						break;											case MouseEvent.MOUSE_UP:						_bDOWN = false;						break;									}							}						/**			* When the controller is canceled			* 			* @public			* @param	e : optional cance event (Event) 			* @return	void			*/			final override public function cancel( e : Event = null ) : void {							}				// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onFrame(  ) : void {								var ptMOUSE : Point = new Point( view.mouseX , view.mouseY );				Forces.x = Forces.y = 0;								//					if( Point.distance( POINT , ptMOUSE) < DEAD_DISTANCE)						return;								//					var nDISX : uint = Math.abs( ptMOUSE.x );					var nDISY : uint = Math.abs( ptMOUSE.y );								//					if( _bDOWN){												if( nDISX > RUN_DISTANCE)							Forces.x = (ptMOUSE.x > 0 ) ? 2 : -2;						else							Forces.x = (ptMOUSE.x > 0 ) ? 1 : -1;												if( ptMOUSE.y < -JUMP_DISTANCE)							Forces.y = -1;											}								//					if( Math.abs(Forces.x) > 0 )						if( Math.abs(Forces.x) > 1 )							( view as VPlayer ).gotoCycle('run');						else							( view as VPlayer ).gotoCycle('walk');					else						( view as VPlayer ).gotoCycle('static');																(view as VPlayer).updateCycle();								//					if( Math.abs(Forces.x) > 1 )						if( Forces.x < 0 )							Forces.x = -(view as VPlayer).speed / 24;						else													Forces.x = (view as VPlayer).speed / 24;									LightSignal.getInstance().emit( PlayerEvent.PLAYER_MOVE );							}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CPlayer, args);			}	}}