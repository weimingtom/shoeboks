ard;	import flash.utils.Dictionary;	/**	 * org.shoebox.engine.controllers.CPlayer_Platform	* @author shoebox	*/	public class CPlayer_Platform extends AController implements IController {				protected var _dKEYS			:Dictionary;		protected var _oEVENT			:PlayerEvent = new PlayerEvent( PlayerEvent.PLAYER_MOVE );		protected var _oSIGNAL			:LightSignal;		protected var _vMOVE			:Vector3D = new Vector3D();				// -------o constructor					/**			* Constructor of the CPlayer_Platform class			*			* @public			* @return	void			*/			public function CPlayer_Platform() : void {								_oSIGNAL = LightSignal.getInstance();								_dKEYS = new Dictionary( true );				_dKEYS[Keyboard.LEFT] 	= false;				_dKEYS[Keyboard.RIGHT] 	= false;				_dKEYS[Keyboard.UP] 	= false;				_dKEYS[Keyboard.DOWN] 	= false;								_oEVENT.moveVector = _vMOVE;							}		// -------o public						/**			* When the controller is initialized			* 			* @public			* @return	void			*/			final override public function initialize() : void {				LightSignal.getInstance().connect( Event.ENTER_FRAME , _onFrame );				STAGEINSTANCE.addEventListener( KeyboardEvent.KEY_DOWN , 	_onKeyEvent , false , 10 , true );					STAGEINSTANCE.addEventListener( KeyboardEvent.KEY_UP , 	_onKeyEvent , false , 10 , true );				}			/**			* When the controller receive an event 			* 			* @public			* @param	e : received event (Event) 			* @return	void			*/			final override public function onEvent( e : Event ) : void {						}						/**			* When the controller is canceled			* 			* @public			* @param	e : optional cancel event (Event) 			* @return	void			*/			final override public function cancel( e : Event = null ) : void {							}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onKeyEvent( e : KeyboardEvent ) : void {				if(_dKEYS[e.keyCode] !== undefined )					_dKEYS[e.keyCode] = ( e.type == KeyboardEvent.KEY_DOWN );			}			/**			* 			*			* @param 			* @return			*/			final protected function _onFrame() : void {				( view as VPlayer ).dir = 2;				_vMOVE.x = _vMOVE.y = 0;								if( _dKEYS[Keyboard.LEFT] )					_vMOVE.x -= 1;								if( _dKEYS[Keyboard.RIGHT] )					_vMOVE.x += 1;								if( _dKEYS[Keyboard.UP] )					_vMOVE.y -= 1;								if( _dKEYS[Keyboard.DOWN] )					_vMOVE.y += 1;									_vMOVE.scaleBy( 10 );				_oSIGNAL.emit( PlayerEvent.PLAYER_MOVE , _oEVENT );				( view as VPlayer ).center();			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CPlayer_Platform, args);			}	}}