LK			: uint = 1;		public static const RUN			: uint = 2;		public static const STOP			: uint = 3;		public static const jumpH			: uint = 4;		public static const jumpV			: uint = 5;				public var RUN_DISTANCE			: uint = 250;		public var WALK_DISTANCE			: uint = 150;		public var DEAD_DISTANCE			: uint = 50;				protected var _bFREEZE				: Boolean = false;		protected var _bLOOK_LEFT			: Boolean = false;		protected var _bMOUSE_IS_DOWN		: Boolean = false;		protected var _bLEFT				: Boolean;		protected var _ptMOUSE_POSITION		: Point; 				protected const POINT				: Point = new Point( 0 , 0 );				// -------o constructor					/**			* Constructor of the CHuman class			*			* @public			* @return	void			*/			public function CHuman() : void {			}		// -------o public						/**			* onMove function			* @public			* @param 			* @return			*/			final override public function onMove( ) : void {								//					if( Point.distance( POINT , _ptMOUSE) < DEAD_DISTANCE)						return;									//						_ptMOUSE_POSITION = _ptMOUSE;					_bLEFT = (_ptMOUSE.x < 0 ); 										var iCYCLE : int = (model as MPlayerArray).currentCycleID;					var bTURN : Boolean = (iCYCLE !== (model as MPlayerArray).getIndice('turnbackL') && iCYCLE !== (model as MPlayerArray).getIndice('turnbackR'));										if( _bMOUSE_IS_DOWN !== _bDOWN ){						_bLOOK_LEFT = ( _ptMOUSE.x < 0 );						if( _bDOWN ) {							(view as VPlayerArray).mirror( true , _bLOOK_LEFT );							if( bTURN )								_bLOOK_LEFT = _bLEFT;						}					}									//										if( bTURN )						_bMOUSE_IS_DOWN = _bDOWN;									//					var nDISX : uint = Math.abs( _ptMOUSE.x );					var nDISY : uint = Math.abs( _ptMOUSE.y );															if( _bDOWN  ){												if( _bLOOK_LEFT !== _bLEFT && !_bFREEZE ) {// && _iCYCLE !== _iTURNBACK_L && _iCYCLE !== _iTURNBACK_R) {							(model as MPlayerArray).goTo = TURN_BACK;										}else{														if( nDISY <= JUMP_DISTANCE )								if( nDISX >= RUN_DISTANCE )									(model as MPlayerArray).goTo = RUN;								else									(model as MPlayerArray).goTo = WALK;							else 								if( nDISX > JUMP_H_DISTANCE )									(model as MPlayerArray).goTo = jumpH;								else									(model as MPlayerArray).goTo = jumpV;						}					}else{						(model as MPlayerArray).goTo = STOP;						_bLOOK_LEFT = (_ptMOUSE.x < 0); 											}								//					(view as VPlayerArray).mouseMove( );							}						/**			* nextCycle function			* @public			* @param 			* @return			*/			final override public function nextCycle() : void {								var iCYCLE : int = (model as MPlayerArray).currentCycleID;				 if( iCYCLE == (model as MPlayerArray).getIndice('turnbackL') || iCYCLE == (model as MPlayerArray).getIndice('turnbackR')  ) {					_bLOOK_LEFT = _bLEFT;					(view as VPlayerArray).mirror( true , _bLEFT );					_bFREEZE = false;				}								if( ( (model as MPlayerArray).goTo == TURN_BACK ) && (model as MPlayerArray).currentCycleID == (model as MPlayerArray).getIndice('static')){					_bLOOK_LEFT = _bLEFT; 					(view as VPlayerArray).mirror( true , _bLEFT );				}							}						/**			* cycleEnd function			* @public			* @param 			* @return			*/			final public function cycleEnd() : void {								var iCYCLE : int = (model as MPlayerArray).currentCycleID;				if( iCYCLE == (model as MPlayerArray).getIndice('turnbackL') || iCYCLE == (model as MPlayerArray).getIndice('turnbackR') )					_bFREEZE = true;			}		// -------o protected					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CHuman, args);			}	}}