implements IView{				protected var _oMAP		:IsoMapRenderer = new IsoMapRenderer();				// -------o constructor					public function VMapRenderer() : void {			}		// -------o public						/**			* update function			* @public			* @param 			* @return			*/			final override public function update( o : UpdateEvent = null ) : void {						}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {									}						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				_oMAP = new IsoMapRenderer( 20 , 20 , new Rectangle (0 , 0 , 800 , 600 ));				addChild(_oMAP);				_oMAP.draw();			}						/**			* scroll function			* @public			* @param 			* @return			*/			public function scroll( x : int , y : int) : void {				_oMAP.move(x,y);			}						/**			* addItem function			* @public			* @param 			* @return			*/			public function addItem( x : int , y : int , v : Vector.<int> ) : void {								var oT:Tile = _oMAP.getItemAT( x , y );				if(oT == null)					return;								var l : int = v.length;				var i : int = 0;				for( i ; i < l ; i+=2)					oT.layers.addItem(v[i],v[i+1]);			}					// -------o protected		// -------o misc			public static function trc(arguments : *) : void {				Logger.log(VMapRenderer, arguments);			}	}}