ash.events.Event;	import flash.geom.ColorTransform;	import flash.geom.Vector3D;	/**	 * org.shoebox.engine.views.VMapRenderer	* @author shoebox	*/	public class VMapRenderer extends AView implements IView{				protected var _spCONTAINER	:Sprite = new Sprite();		protected var _uISOSIZE		:uint = 5;		protected var _vPOSITION	:Vector3D = new Vector3D(2,0,2);		protected var _vTILES		:Vector.<Tile> = new Vector.<Tile>();		protected var _oOLDTILE		:Tile;				// -------o constructor					public function VMapRenderer() : void {				addChild(_spCONTAINER);			}		// -------o public						/**			* update function			* @public			* @param 			* @return			*/			final override public function update( o : UpdateEvent = null ) : void {				_draw();			}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {									}						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {							}						/**			* scroll function			* @public			* @param 			* @return			*/			public function scroll( iX : int , iY : int) : void {								var 	vPOS : Vector3D = position.clone();					vPOS.x += iX;					vPOS.z += iY;								var t : Tile  = _spCONTAINER.getChildByName('tile'+vPOS.x+'_'+vPOS.z) as Tile;								vPOS.x = Math.max( vPOS.x , 0 );				vPOS.z = Math.max( vPOS.z , 0 );				vPOS.x = Math.min( vPOS.x , (model as MMapRenderer).gridWidth );				vPOS.z = Math.min( vPOS.z , (model as MMapRenderer).gridHeight );								if( vPOS == _vPOSITION)					return;								if(t){					if( !t.layers.walkable ) {						vPOS.x -= iX;						vPOS.z -= iY;						return;					}				}																_vPOSITION = vPOS;								_draw();			}			/**			* addItem function			* @public			* @param 			* @return			*/			public function addItem( x : int , y : int , v : Vector.<int> ) : void {							}						/**			* get position function			* @public			* @param 			* @return			*/			public function get position() : Vector3D {				return _vPOSITION;			}						/**			* set position function			* @public			* @param 			* @return			*/			public function set position( v : Vector3D ) : void {				_vPOSITION = v;			}		// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {				//trc('draw ::: ' +position);				var c : Tile;				var iX : int = 0;				var iZ : int = 0;				var i : int = 0;				var l : int;				var vDATAS : Vector.<int>;				var v : Vector3D = new Vector3D();				var sNAME : String;								var vPOS : Vector3D = new Vector3D();								_uISOSIZE = (550 / Config.TILESIZE) + 10;								for( iX = -_uISOSIZE; iX < (_uISOSIZE + 1) ; iX++){										for(iZ = -_uISOSIZE ; iZ < (_uISOSIZE+1) ; iZ++){												vPOS.x = position.x + iX; 						vPOS.z = position.z + iZ; 												if(vPOS.x < 0 || vPOS.z < 0 || vPOS.x >= (model as MMapRenderer).gridWidth || vPOS.z >= (model as MMapRenderer).gridHeight)							continue;												v = IsoMath.screenToIso( new Vector3D( vPOS.x , 0 , vPOS.z ));																		sNAME = 'tile'+(position.x + iX)+'_'+(position.z + iZ);							c = _spCONTAINER.getChildByName(sNAME) as Tile;						if(c == null){														c = new Tile();								c.name = sNAME; 							c.position = new Vector3D( vPOS.x , vPOS.z , 0);														//								vDATAS = (model as MMapRenderer).getAt(vPOS.x , vPOS.z );								if(vDATAS){									l = vDATAS.length;									i = 0;									while( i < l ){										c.layers.addItem(vDATAS[i],vDATAS[i+1]);										i+=2;									}								}														c.depth = vPOS.z*400+vPOS.x+1;																					_spCONTAINER.addChild( c );							c.draw();							//c.addChild( Factory.build(TextField,{text:c.depth , y : 15 , x : 25 }));							_vTILES.push(c);						}						c.x = v.x * Config.TILESIZE / 2;						c.y = v.y * Config.TILESIZE/2;					}				}								var vTMP : Vector.<Tile> = new Vector.<Tile>();				for each( c in _vTILES){										if(c.position.x < (position.x - _uISOSIZE) || c.position.y < (position.z - _uISOSIZE))							_spCONTAINER.removeChild(c);					else if(c.position.x > (position.x + _uISOSIZE) || c.position.y > (position.z + _uISOSIZE))						_spCONTAINER.removeChild(c);					else						vTMP.push(c);						}								_depthSort();								_vTILES = vTMP;								var t : Tile  = _spCONTAINER.getChildByName('tile'+position.x+'_'+position.z) as Tile;				if(t){					_spCONTAINER.x = -t.x + 550 / 2 - Config.TILESIZE/2;					_spCONTAINER.y = -t.y + 400 / 2 - Config.TILESIZE/2;					if(_oOLDTILE)						_oOLDTILE.transform.colorTransform = new ColorTransform();					DisplayFuncs.setColor( t , 0x66FF6600 );					_oOLDTILE = t;				}			}						/**			* 			*			* @param 			* @return			*/			/**			* 			*			* @param 			* @return			*/			protected function _depthSort( ) : void {								//					var oFUNC : Function = function( t1 : Tile , t2 : Tile ):int {						if(t1.depth > t2.depth)							return +1;						else if(t1.depth < t2.depth)							return -1;						else							return 0;					};					_vTILES.sort( oFUNC);								//					var i:uint = 0;					var o:Tile;					for each(o in _vTILES){						if(_spCONTAINER.contains(o)){							_spCONTAINER.setChildIndex( o , i );							i++;						}					}							}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(VMapRenderer, arguments);			}	}}