ger;	import flash.display.Sprite;	import flash.events.Event;	import flash.geom.Rectangle;	import flash.geom.Vector3D;	import flash.text.TextField;	/**	 * org.shoebox.engine.views.VMapRenderer	* @author shoebox	*/	public class VMapRenderer extends AView implements IView{				protected var _vPOS			:Vector3D = new Vector3D( 4 ,7 );		protected var _spMASK			:Sprite = new Sprite();		protected var _spCONTAINER		:Sprite = new Sprite();				// -------o constructor					public function VMapRenderer() : void {							}		// -------o public						/**			* update function			* @public			* @param 			* @return			*/			final override public function update( o : UpdateEvent = null ) : void {				_draw();			}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {									}						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				addChild(_spMASK);				_spCONTAINER.x = 0;				_spCONTAINER.y = 0;				_spMASK.addChild(_spCONTAINER);				_spMASK.scrollRect = new Rectangle(0 , 0 , 6 * Config.TILESIZE , 14 * Config.TILESIZE);			}						/**			* addItem function			* @public			* @param 			* @return			*/			public function addItem( x : int , y : int , v : Vector.<int>) : void {								var 	l : int = v.length / 2;				var	i : int = 0;				var 	c : Tile = _spCONTAINER.getChildByName('tile'+x+'_'+y) as Tile;				if(!c)					return;									while( i < l ){					c.layers.addItem(v.shift() , v.shift());					i+=2;				}												}						/**			* scroll function			* @public			* @param 			* @return			*/			public function scroll( i : int) : void {				_spCONTAINER.x+=i;								if(_spCONTAINER.x <= -Config.TILESIZE){					_spCONTAINER.x+=Config.TILESIZE;										var 	vTMP : Vector3D = IsoMath.isoToScreen(_vPOS);						vTMP.x --;					_vPOS = IsoMath.screenToIso(vTMP);					_vPOS.x = Math.floor(_vPOS.x);					_vPOS.y = Math.floor(_vPOS.y);					_draw();					(model as MMapRenderer).parse();				}							}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {								DisplayFuncs.purge(_spCONTAINER);								var	vSCR : Vector3D = new Vector3D();				var	vISO : Vector3D = new Vector3D();				var 	iY : int = 0;				var	iX : int = 0;				var	oTILE : Tile;				for( iY ; iY <= 14 ; iY ++ ){					iX = -1;					for( iX ; iX <= 6 ; iX++ ){												//							if(iY % 2 != 0) 								vSCR.x = iX * Config.TILESIZE + Config.TILESIZE / 2;							else								vSCR.x = iX * Config.TILESIZE;								vSCR.y = iY * Config.TILESIZE / 4;														//								vISO.y = (2 * vSCR.y - vSCR.x)/2;							vISO.x = vSCR.x + vISO.y;							vISO.x = ( vISO.x / Config.TILESIZE ) * 2 + _vPOS.x;							vISO.y = ( vISO.y / (Config.TILESIZE) ) * 2 + _vPOS.y;												if(vISO.y < 0 || vISO.x < 0)							continue;												//							oTILE = Factory.build(Tile , {												x : vSCR.x , 												y : vSCR.y,												position : vISO ,  												name : 'tile'+vISO.x+'_'+vISO.y 												});							_spCONTAINER.addChild(oTILE);							oTILE.draw();							oTILE.addChild( Factory.build(TextField,{text:iX+'/'+iY ,y : 15 ,x : 25 }));					}									}							}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(VMapRenderer, arguments);			}	}}