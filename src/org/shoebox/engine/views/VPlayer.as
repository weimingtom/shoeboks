hoebox.engine.views.VPlayer	* @author shoebox	*/	public class VPlayer extends AView implements IView {				protected var _shBORDER		:Shape;				// -------o constructor					/**			* Constructor of the VPlayer class			*			* @public			* @return	void			*/			public function VPlayer() : void {								_shBORDER = new Shape();				addChild(_shBORDER);								var w : Number = tileSize / 2;				var h : Number = tileSize / 4;								//					_shBORDER.graphics.lineStyle( .1 , 0x000000 , .3);					_shBORDER.graphics.moveTo( 0 , h / 2);					_shBORDER.graphics.lineTo( w/2 , 0 );					_shBORDER.graphics.lineTo( w , h/2 );					_shBORDER.graphics.lineTo( w/2 , h );					_shBORDER.graphics.lineTo( 0 , h/2 );								x = StageResize.rect.width / 2;				y = StageResize.rect.height / 2 + tileSize / 8;				trace(x+' / '+y);			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				controller.register( STAGEINSTANCE , KeyboardEvent.KEY_DOWN , false , 10 , true );				controller.register( STAGEINSTANCE , KeyboardEvent.KEY_UP , false , 10 , true );			}						/**			* update function			* @public			* @param 			* @return			*/			override final public function update(o:UpdateEvent = null) : void {						}												/**			* cancel function			* @public			* @param 			* @return			*/			override final public function cancel(e:Event = null) : void {												}						/**			* get depth function			* @public			* @param 			* @return			*/			public function get depth( ) : uint {				return 10000000;			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(VPlayer, args);			}	}}