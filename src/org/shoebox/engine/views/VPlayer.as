box.engine.views.VPlayer	* @author shoebox	*/	public class VPlayer extends APlayerView implements IView {				protected var _mcANIM_SET			: MovieClip;		protected var _bINITIALIZED			: Boolean = false;		protected var _nSCALE				: Number;		protected var _sCYCLE				: String;		protected var _nFRAME				: int = -1;		protected var _uSPEED				: uint = 0;		protected var _vSPEEDS				: Vector.<uint>;				// -------o constructor					/**			* Constructor of the VPlayer class			*			* @public			* @return	void			*/			public function VPlayer() : void {							}		// -------o public						/**			* View initialization			*			* @public			* @return	void			*/			override final public function initialize() : void {				PlayerView = this;			}						/**			* When the view receive an update			* 			* @public			* @param	o : optional update event (UpdateEvent) 			* @return	void			*/			override final public function update(o:UpdateEvent = null) : void {						}												/**			* When the view is canceled			* 			* @public			* @param	e : optional cancel event (Event) 			* @return	void			*/			override final public function cancel(e:Event = null) : void {												}									/**			* center function			* @public			* @param 			* @return			*/			final override public function center() : void {				if( Position2D == null )					return;								x = Position2D.x;				y = Position2D.y;			}						/**			* set ref function			* @public			* @param 			* @return			*/			final public function run( o : MovieClip ) : void {				_mcANIM_SET = o;				_mcANIM_SET.addEventListener( Event.EXIT_FRAME, _onFrame , false , 10 , true );			}									/**			* update function			* @public			* @param 			* @return			*/			final public function updateCycle() : void {								if( !_bINITIALIZED )					return;								if( _sCYCLE == null ){					_sCYCLE = 'static';					_nFRAME = 0;				}								var o : CycleItem = (model as MPlayer).getCycle( _sCYCLE );								if( _nFRAME > o.length )					_nFRAME = 0;							_mcANIM_SET.gotoAndStop( o.index + _nFRAME );				_uSPEED = _vSPEEDS[o.index + _nFRAME];				_nFRAME++;	 			}						/**			* gotoCycle function			* @public			* @param 			* @return			*/			final public function gotoCycle( s : String ) : void {								if( _sCYCLE !== s ){										_sCYCLE = s;					_nFRAME = 0;				}			}						/**			* get speed function			* @public			* @param 			* @return			*/			final public function get speed() : uint {				return _uSPEED;			}		// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onFrame( e : Event ) : void {				_mcANIM_SET.removeEventListener( Event.EXIT_FRAME, _onFrame , false);				_nSCALE = _mcANIM_SET.nScale;				_mcANIM_SET.scaleX = _mcANIM_SET.scaleY = _nSCALE;				_mcANIM_SET.stop();				addChild( _mcANIM_SET );				_compute( );			}						/**			* 			*			* @param 			* @return			*/			final protected function _compute() : void {								var aFRAMES : Array = _mcANIM_SET.currentLabels;								_vSPEEDS = new Vector.<uint>( _mcANIM_SET.totalFrames + 1 , true );								var i : uint = 0;				var l : uint = aFRAMES.length;				var f : FrameLabel;				var z : uint = 0;				var u : uint;				for( i ; i < l ; i++ ){										f = aFRAMES[i];					z = f.frame;					u = 0;						_mcANIM_SET.gotoAndStop(z);										while( true ){						if( _mcANIM_SET.currentFrame == _mcANIM_SET.totalFrames )							break;												_mcANIM_SET.nextFrame();														if( _mcANIM_SET.currentLabel !== f.name )							break;												_vSPEEDS[f.frame+u] = _mcANIM_SET.speed;						u++;					}										(model as MPlayer).addCycle( f.name , f.frame , u );				}				_bINITIALIZED = true;			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(VPlayer, args);			}	}}