	import org.shoebox.engine.core.variables.TileSize;	import org.shoebox.engine.core.variables.TmpDebug;	import org.shoebox.engine.events.PlayerEvent;	import org.shoebox.events.LightSignal;	import org.shoebox.patterns.mvc.events.UpdateEvent;	import org.shoebox.patterns.mvc.interfaces.IView;	import org.shoebox.utils.PerfectTimer;	import org.shoebox.utils.logger.Logger;	import flash.display.Bitmap;	import flash.events.Event;	import flash.events.TimerEvent;	import flash.geom.Point;	import flash.geom.Rectangle;	import flash.geom.Vector3D;	/**	 * org.shoebox.engine.views.VMap_Platform	* @author shoebox	*/	public class VMap_Platform extends AMapView implements IView {				protected const uFPS			: uint = 48;				protected var _oTEST			: BitmapDataHitTest;		protected var _bGROUND			: Boolean = false;		protected var _bJUMPING		: Boolean = false;		protected var iRANGE			: int = 40;		protected var iSHOTS			: int = 12;		protected var nANGLE			: Number = Math.PI*2;		protected var nRATE			: Number = 5;		protected var nSTEP			: Number = nANGLE/iSHOTS;		protected var _vTMP			: Point = new Point();		protected var _oTREESTATIC		: QuadTree;		protected var _vVELOCITY		: Vector3D = new Vector3D( 0 , 0 );		protected var _vCENTER			: Vector3D;		protected var _vANGLES			: Vector.<Number>;		protected var _vRAYS			: Vector.<Number> = new Vector.<Number>();		protected var _oTIMER			: PerfectTimer;		protected var _nT			: Number = 0;						// -------o constructor					/**			* Constructor of the VMap_Platform class			*			* @public			* @return	void			*/			public function VMap_Platform() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			override final public function initialize() : void {				trc('initialize');				Container.addChildAt( _oVIEW  , 0 );				TmpDebug = new Bitmap();				Container.addChild( TmpDebug );							}						/**			* update function			* @public			* @param 			* @return			*/			override final public function update(o:UpdateEvent = null) : void {				_oTREESTATIC = new QuadTree( new Rectangle( 0, 0, MapDatas.mapWidth * TileSize , MapDatas.mapHeight * TileSize ));				_precache();				init();				_init();							}												/**			* cancel function			* @public			* @param 			* @return			*/			override final public function cancel(e:Event = null) : void {												}				// -------o protected						/**			* 			*			* @param 			* @return			*/			final override protected function _addStatic( x : Number , y : Number , w : Number , h : Number  , bCollidable : Boolean = false ) : void {								var r : Rectangle = new Rectangle( x , y , w , h ); 								if( bCollidable )					_oTREESTATIC.addItemAt( r , r );			}						/**			* 			*			* @param 			* @return			*/			final protected function _init() : void {								LightSignal.getInstance().connect( PlayerEvent.PLAYER_MOVE , _onMove );				_oTEST = new BitmapDataHitTest( _oMAPHITTEST.clone() , PlayerView );								_oTIMER = new PerfectTimer( 1000 / uFPS  );				_oTIMER.addEventListener( TimerEvent.TIMER , _onTimer );				_oTIMER.start();								_update();							}						/**			* 			*			* @param 			* @return			*/			final protected function _onMove( x : int ) : void {				_vVELOCITY.x = x / (1000 / uFPS);			}						/**			* 			*			* @param 			* @return			*/			final protected function _onTimer( e : TimerEvent ) : void {																if( PlayerView == null )					return;								var vTMP : Vector3D = _vVELOCITY.clone();							//vTMP.y = (vTMP.y / vTMP.y) * Math.min( 20 , Math.abs( vTMP.y ) );				//vTMP.x = (vTMP.x / vTMP.x) * Math.min( 20 , Math.abs( vTMP.x ) );								var 	vWLD : Vector3D = Transformer.worldToScreen(Position2D.clone().add(vTMP));					vWLD.x = Math.floor( vWLD.x );					vWLD.y = Math.floor( vWLD.y );								//					Container.graphics.clear();					Container.graphics.lineStyle( 1 , 0x00FF00 );									//					_rayCast();										var vDECAL : Vector3D = new Vector3D();										var a : Number;					var i : int = 0;										var nANGLE : Number = 0;					var nDELTA : Number = (Math.PI * 2)/iSHOTS;										for( i ; i < iSHOTS ; i++ ){												if( _vRAYS[i] == -1 ){							nANGLE += nDELTA;							continue;						}												a = i * nSTEP;												//							if(  Math.abs( vTMP.x ) > 0 ){								if( nANGLE >= Math.PI * .25 && nANGLE <= Math.PI * .75 )									vDECAL.y = Math.max( _vRAYS[i] , vDECAL.y );							}else								if( nANGLE > 0 && nANGLE < Math.PI )									vDECAL.y = Math.max( _vRAYS[i] , vDECAL.y );												//							if( vTMP.x > 0 ){																	if( nANGLE < Math.PI * .25 || nANGLE >= Math.PI * 1.75 )									vDECAL.x = Math.max( vDECAL.x , _vRAYS[i]);																}else if( vTMP.x < 0 ){																if( nANGLE >= .75 * Math.PI && nANGLE <= Math.PI * 1.25 )									vDECAL.x = Math.max( vDECAL.x , _vRAYS[i]);																}							nANGLE += nDELTA;											}					if( vTMP.y > 0 ){						if( vDECAL.y > 0){														if( vDECAL.y > vTMP.y )								vTMP.y = (Math.abs(vTMP.x) > 0) ? -1 : 0;							else								vTMP.y -= vDECAL.y;						}					}															if( vTMP.x ){												if( vDECAL.x > 0 ) {							if( vDECAL.x > vTMP.x )								vTMP.x = 0;							else								vTMP.x -= vDECAL.x + 5;						}						}									Camera.offset( vTMP.x , vTMP.y );				Position2D.incrementBy( vTMP);				vTMP.x = 0;				_vVELOCITY = vTMP;				MapDatas.testSounds( Position2D );				_update( vWLD == Position );				Position = vWLD;				PlayerView.center();							}						/**			* 			*			* @param 			* @return			*/			final protected function _rayCast() : void {								_vRAYS = new Vector.<Number>();								var nANGLE : Number = 0;				var nDELTA : Number = (Math.PI * 2)/iSHOTS;				var i : int = 0;				var z : int = nSTEP;				var v : Vector3D = new Vector3D();				var n : int ;								var 	vTMP : Vector3D = Position2D.clone();					vTMP.y -= PlayerView.height / 2;								var oREC : Rectangle = PlayerView.getRect( Container );								for( i ; i < iSHOTS ; i++ ){										v.x = 0;					v.y = 0;					n = -1;					for( z = 0 ; z <= iRANGE ;z += nRATE ) {												v.x = vTMP.x + Math.cos(nANGLE) * z ;    						v.y = vTMP.y + Math.sin(nANGLE) * z ;												if( !oREC.contains( v.x , v.y ) )							continue;												Container.graphics.moveTo( vTMP.x , vTMP.y  );						Container.graphics.lineTo( v.x , v.y );												if( _oMAPHITTEST.getPixel32( v.x  , v.y ) !== 0 ){							n = Math.max( n , Vector3D.distance( vTMP , v ) );							break;						}					}										nANGLE += nDELTA;					_vRAYS.push( n );				}							}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(VMap_Platform, args);			}	}}