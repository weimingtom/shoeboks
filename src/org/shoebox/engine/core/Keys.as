	import flash.utils.Dictionary;
	import org.shoebox.patterns.commands.AbstractCommand;	import org.shoebox.patterns.commands.ICommand;	import org.shoebox.utils.logger.Logger;	import flash.display.DisplayObject;	import flash.errors.IllegalOperationError;	import flash.events.Event;	/**	 * org.shoebox.engine.core.Keys	* @author shoebox	*/	public class Keys extends AbstractCommand implements ICommand {				protected var _oREF			:DisplayObject = null ;				protected static var __dCodes		:Dictionary = new Dictionary();		protected static var __instance	:Keys = null;				// -------o constructor					/**			* Constructor of the AScript command class			*			* @public			* @return	void			*/			public function Keys( e : SingletonEnforcer ) : void {			}		// -------o public						/**			* set ref function			* @public			* @param 			* @return			*/			final public function set ref( r : DisplayObject ) : void {				_oREF = r;			}						/**			* Execution of the command			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			override public function onExecute( e : Event = null ) : void {							//					if( _oREF == null )						throw new IllegalOperationError('Key reference is null');										//					_oREF.addEventListener( KeyboardEvent.KEY_DOWN 	, _onKeyEvent , false , 10 , true );					_oREF.addEventListener( KeyboardEvent.KEY_UP 	, _onKeyEvent , false , 10 , true );			}						/**			* When the command is canceled			* 			* @public			* @param	e : optional event (Event)	 			* @return	void			*/			override public function onCancel( e : Event = null ) : void {				_oREF.removeEventListener( KeyboardEvent.KEY_DOWN 	, _onKeyEvent , false );				_oREF.removeEventListener( KeyboardEvent.KEY_UP 	, _onKeyEvent , false );			}						/**			* isDown function			* @public			* @param 			* @return			*/			static public function isDown( i : int ) : Boolean {				return __dCodes[i];			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onKeyEvent( e : KeyboardEvent ) : void {				__dCodes[e.keyCode] = (e.type == KeyboardEvent.KEY_DOWN);			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(Keys, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (Keys)			*/			static public function getInstance() : Keys {								if( !__instance )					__instance = new Keys( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}