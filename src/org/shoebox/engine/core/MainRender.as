box.tools.Perf;	import org.shoebox.utils.display.STAGEINSTANCE;	import org.shoebox.utils.logger.Logger;	import flash.display.Sprite;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.geom.Rectangle;	/**	 * org.shoebox.engine.core.MainRender	* @author shoebox	*/	public class MainRender extends Sprite {				protected var _spCONTENT	:Sprite;		protected var _spCONTAINER	:Sprite;				// -------o constructor					public function MainRender() : void {				trc('constructor');				STAGEINSTANCE = stage;				new StageBatch(stage).execute();				stage.scaleMode = StageScaleMode.NO_SCALE;				//stage.align = StageAlign.TOP;				_run();			}		// -------o public					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _run() : void {				var 	oSERVICE : SProject = new SProject();					oSERVICE.addEventListener( ServiceEvent.ON_DATAS , _onProject , false , 10 , true );					oSERVICE.path = 'datas/project.bwy';					oSERVICE.call();			}						/**			* 			*			* @param 			* @return 			*/			protected function _onProject( e : ServiceEvent ) : void {				trc('onProject ::: '+e);				(e.target as SProject).removeEventListener( ServiceEvent.ON_DATAS , _onProject , false);				_getMap(1);			}						/**			* 			*			* @param 			* @return			*/			protected function _getMap( u : uint = 0 ) : void {				trc('getMap ::: '+u);				var 	oSERVICE : SLoadMap = ServiceFactory.getService( SLoadMap) as SLoadMap;					oSERVICE.addEventListener( ServiceEvent.ON_DATAS , _onMapDatas , false , 10 , true);					oSERVICE.mapID = u;					oSERVICE.call();							}						/**			* 			*			* @param 			* @return			*/			protected function _onMapDatas( e : ServiceEvent ) : void {				trc('onMapDatas ::: '+e);				mapDatas = e.datas as MapData;								_spCONTENT = new Sprite();				addChild(_spCONTENT);								_spCONTAINER = new Sprite();								container = _spCONTAINER;				container.x = StageResize.rect.width / 2;				container.y = StageResize.rect.height / 2;								_spCONTAINER.graphics.lineStyle(1 , 0xFF6600);				_spCONTAINER.graphics.moveTo( -10 , 0 );				_spCONTAINER.graphics.lineTo( +10 , 0 );				_spCONTAINER.graphics.moveTo(0,-10);				_spCONTAINER.graphics.lineTo(0,+10);								graphics.lineStyle( 2 , 0xFF6600);				graphics.drawRect( 100 , 100 , 600 , 400);								var 	sp2 : Sprite = new Sprite();					//sp2.scrollRect = new Rectangle( 100 , 100 , 600 , 400 );					//sp2.cacheAsBitmap = true;					//sp2.x = sp2.y = 100;				addChild(sp2);				sp2.addChild(_spCONTAINER);								Facade.getInstance().owner = _spCONTENT;				Facade.getInstance().state = Facade.STATE_DEFAULT;								addChild( new Perf() );			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(MainRender, args);			}	}}