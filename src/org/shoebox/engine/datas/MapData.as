r _uHEIGHT			:uint;		protected var _uMAPTYPE			:uint;		protected var _uWIDTH			:uint;		protected var _uLENBEHAVIORS		:uint;		protected var _vITEMS			:Vector.<BehaviorItem>;		protected var _qtBEHAVIORS		:QuadTree;				// -------o constructor					/**			* Constructor of the MapData class			*			* @public			* @return	void			*/			public function MapData() : void {			}		// -------o public						/**			* Witdh of the map			* 			* @public			* @return	width of the map (uint)			*/			public function get mapWidth() : uint {				return _uWIDTH;			}					/**			* Getter of the map height			* @public			* @return	height of the map (uint)			*/			public function get mapHeight() : uint {				return _uHEIGHT;			}			/**			* set size function			* @public			* @param 			* @return			*/			public function setSize( uW : uint , uH : uint ) : void {				_uWIDTH = uW;				_uHEIGHT = uH;				_aCONTENT = new Array2D( uW , uH );				_aBEHAVIORS = new Array2D( uW , uH );			}						/**			* set mapType function			* @public			* @param 			* @return			*/			public function set mapType( u : uint ) : void {				_uMAPTYPE = u;			}						/**			* get mapType function			* @public			* @param 			* @return			*/			public function get mapType() : uint {				return _uMAPTYPE;			}						/**			* addContentAt function			* @public			* @param 			* @return			*/			public function addContentAt( uX : uint , uY : uint , v : Vector.<int> = null ) : void {				_aCONTENT.setDatasAt( uX, uY, v );			}						/**			* getContentAt function			* @public			* @param 			* @return			*/			public function getContentAt( uX : uint , uY : uint ) : Vector.<int> {				if( uY >= mapHeight || uX > mapWidth)					return new Vector.<int>();				else					return _aCONTENT.getDatasAt(uX , uY);			}							/**			* addBehaviorAt function			* @public			* @param 			* @return			*/			public function addBehaviorAt( vPOS : Vector3D , uRADIUS : uint , sID : String ) : void {				trc('addBehaviorAt :::'+vPOS+' /// radius ::: '+uRADIUS+' /// ID ::: '+sID );								if(_vITEMS==null)					_vITEMS = new Vector.<BehaviorItem>();					_vITEMS.push( new BehaviorItem( vPOS , uRADIUS , sID ));									_uLENBEHAVIORS = _vITEMS.length;			}						/**			* testBehaviors function			* @public			* @param 			* @return			*/			public function testBehaviors( vPOSWORLD : Vector3D ) : void {								if(_uLENBEHAVIORS == 0 )					return;								var oFUNC : Function = function( o : BehaviorItem , u : uint , v : Vector.<BehaviorItem> ):void{										if( Vector3D.distance( vPOSWORLD , o.worldPos ) <= o.radius)						LightSignal.getInstance().emit( WarpEvent.WARP , new WarpEvent( WarpEvent.WARP , 1 ,new Vector3D( 10 , 10 ) ));															};				_vITEMS.forEach(oFUNC);			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(MapData, args);			}	}}import org.shoebox.biskwy.utils.Transformer;import org.shoebox.utils.logger.Logger;import flash.geom.Vector3D;/** * org.shoebox.engine.datas.BehaviorItem	* @author shoebox	*/	internal class BehaviorItem {				public var codeName	:String;		public var radius		:uint;		public var worldPos	:Vector3D;		public var position	:Vector3D;				// -------o constructor					/**			* Constructor of the MapData class			*			* @public			* @return	void			*/			public function BehaviorItem( vPOS : Vector3D , uRAD : uint , sID : String) : void {				position = vPOS;				worldPos = Transformer.screenToWorld(vPOS);				radius = uRAD;				codeName = sID;			}		// -------o public				// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(BehaviorItem, args);			}	}