ata	* @author shoebox	*/	public class MapData {				public var vPolygons				: Vector.<Vector.<int>>;				protected var _aCONTENT			: Array2D;		protected var _aBEHAVIORS			: Array2D;		protected var _qtBEHAVIORS			: QuadTree;            protected var _uHEIGHT				: uint;		protected var _uLENBEHAVIORS			: uint;		protected var _uLENSOUND			: uint;		protected var _uMAPTYPE			: uint;		protected var _uWIDTH				: uint;		protected var _vITEMS				: Vector.<BehaviorItem>;		protected var _vSOUNDS				: Vector.<BehaviorSound>;		protected var _vLAYERS				: Vector.<LayerDesc>;		protected var _vNVM_REFS			: Vector.<NVMRef>;		protected var _vNVM_LINKS			: Vector.<uint>;				// -------o constructor					/**			* Constructor of the MapData class			*			* @public			* @return	void			*/			public function MapData() : void {				vPolygons = new Vector.<Vector.<int>>();			}		// -------o public						/**			* set nvmLinks function			* @public			* @param 			* @return			*/			final public function set nvmLinks( v : Vector.<uint> ) : void {				_vNVM_LINKS = v;			}						/**			* get nvmLinks function			* @public			* @param 			* @return			*/			final public function get nvmLinks() : Vector.<uint> {				return _vNVM_LINKS;			}						/**			* set nvmRef function			* @public			* @param 			* @return			*/			final public function set nvmRefs( v : Vector.<NVMRef> ) : void {				_vNVM_REFS = v;			}						/**			* get nvmRefs function			* @public			* @param 			* @return			*/			final public function get nvmRefs() : Vector.<NVMRef> {				return _vNVM_REFS;			}						/**			* get layers function			* @public			* @param 			* @return			*/			final public function get layers() : Vector.<LayerDesc> {				return _vLAYERS;			}			/**			* Witdh of the map			* 			* @public			* @return	width of the map (uint)			*/			public function get mapWidth() : uint {				return _uWIDTH;			}					/**			* Getter of the map height			* @public			* @return	height of the map (uint)			*/			public function get mapHeight() : uint {				return _uHEIGHT;			}			/**			* set size function			* @public			* @param 			* @return			*/			public function setSize( uW : uint , uH : uint ) : void {				_uWIDTH = uW;				_uHEIGHT = uH;				_aCONTENT = new Array2D( uW , uH );				_aBEHAVIORS = new Array2D( uW , uH );			}						/**			* set mapType function			* @public			* @param 			* @return			*/			public function set mapType( u : uint ) : void {				_uMAPTYPE = u;			}						/**			* get mapType function			* @public			* @param 			* @return			*/			public function get mapType() : uint {				return _uMAPTYPE;			}						/**			* addContentAt function			* @public			* @param 			* @return			*/			public function addContentAt( uX : uint , uY : uint , v : Vector.<int> = null ) : void {				_aCONTENT.setDatasAt( uX, uY, v );			}						/**			* getContentAt function			* @public			* @param 			* @return			*/			public function getContentAt( uX : uint , uY : uint ) : Vector.<int> {				if( uY >= mapHeight || uX > mapWidth)					return new Vector.<int>();				else					return _aCONTENT.getDatasAt(uX , uY);			}						/**			* addSoundAt function			* @public			* @param 			* @return			*/			final public function addSoundAt( vPOS : Vector3D , uRADIUS : uint , sID : String ) : void {				trc( 'addSoundAt ::: ' + vPOS + ' // ' + uRADIUS + ' // ' + sID );							if( _vSOUNDS == null )					_vSOUNDS = new Vector.<BehaviorSound>();					_vSOUNDS.push( new BehaviorSound( vPOS, uRADIUS , sID ) );									_uLENSOUND = _vSOUNDS.length;			}						/**			* addBehaviorAt function			* @public			* @param 			* @return			*/			public function addBehaviorAt( vPOS : Vector3D , uRADIUS : uint , sID : String ) : void {				trace( 'addBehaviorAt ::: ' + vPOS + ' // ' + uRADIUS + ' // ' + sID );								if(_vITEMS==null)					_vITEMS = new Vector.<BehaviorItem>();					_vITEMS.push( new BehaviorItem( vPOS , uRADIUS , sID ));									_uLENBEHAVIORS = _vITEMS.length;			}						/**			* testBehaviors function			* @public			* @param 			* @return			*/			public function testBehaviors( vPOSWORLD : Vector3D ) : void {								if(_uLENBEHAVIORS == 0 )					return;								var oFUNC : Function = function( o : BehaviorItem , u : uint , v : Vector.<BehaviorItem> ):void{										if( Vector3D.distance( vPOSWORLD , o.worldPos ) <= o.radius)						LightSignal.getInstance().emit( WarpEvent.WARP , new WarpEvent( WarpEvent.WARP , 1 ,new Vector3D( 10 , 10 ) ));															};				_vITEMS.forEach(oFUNC);			}						/**			* testSounds function			* @public			* @param 			* @return			*/			final public function testSounds( vPOSWORLD : Vector3D ) : void {				return;				if( _uLENSOUND == 0 )					return;								var o : BehaviorSound;					var t : SoundTrack;				var d : Number;				var f : SoundTransform;								for each( o in  _vSOUNDS ){										d = Vector3D.distance( vPOSWORLD , o.worldPos );					t = SoundManager.getTrack(o.codeName);					if( d > o.radius ){						if( t )							SoundManager.closeTrack( o.codeName );						continue;					}					/*					if( t == null ) {						t = SoundManager.addTrack( o.codeName , null );						t.transform.volume = 0;						t.play(_oSOUNDTEST , 10000 , null , false );					}					*/					f = t.transform;					f.volume = 1 - d / o.radius;					t.transform = f;									}			}						/**			* addPoly function			* @public			* @param 			* @return			*/			final public function addPoly( v : Vector.<int> ) : void {				vPolygons.push( v );			}						/**			* addLayer function			* @public			* @param 			* @return			*/			final public function addLayer(									bGAME : Boolean , 									sNAME : String , 									decalX : int , decalY : int ,									bParallax : Boolean,									bTileable : Boolean,									iSpeed : Number, 									media : ByteArray ) : void {								trace('addLayer ::: '+sNAME+' /// ' + iSpeed);								if( bGAME )					return; //TODO								if( _vLAYERS == null )					_vLAYERS = new Vector.<LayerDesc>();					_vLAYERS.push( new LayerDesc(bGAME , sNAME , decalX , decalY, bParallax, bTileable, iSpeed, media ));			}		// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(MapData, args);			}	}}import org.shoebox.biskwy.utils.Transformer;import org.shoebox.utils.logger.Logger;import flash.geom.Vector3D;/** * org.shoebox.engine.datas.BehaviorItem	* @author shoebox	*/	internal class BehaviorItem {				public var codeName		: String;		public var radius			: uint;		public var worldPos		: Vector3D;		public var position		: Vector3D;				// -------o constructor					/**			* Constructor of the MapData class			*			* @public			* @return	void			*/			public function BehaviorItem( vPOS : Vector3D , uRAD : uint , sID : String) : void {				position = vPOS;				worldPos = Transformer.screenToWorld(vPOS);				radius = uRAD;				codeName = sID;			}		// -------o public				// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(BehaviorItem, args);			}	}	/**	* org.shoebox.engine.datas.MapData	* @author shoebox	*/	internal class BehaviorSound {				public var codeName		: String;		public var radius		: uint;		public var worldPos		: Vector3D;		public var position		: Vector3D;				// -------o constructor					/**			* Constructor of the MapData class			*			* @public			* @return	void			*/			public function BehaviorSound( vPOS : Vector3D , uRAD : uint , sID : String ) : void {				position = vPOS;				worldPos = Transformer.screenToWorld( vPOS );				radius = uRAD;				codeName = sID;			}		// -------o public				// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(BehaviorSound, args);			}	}