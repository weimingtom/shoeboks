	import fl.controls.Button;	import org.shoebox.patterns.factory.Factory;	import org.shoebox.utils.logger.Logger;	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.text.TextField;	import flash.text.TextFormat;	/**	 * org.shoebox.biskwy.items.ErrorContent	* @author shoebox	*/	public class ErrorContent extends Sprite {				// -------o constructor					/**			* Constructor of the ErrorContent class			*			* @public			* @return	void			*/			public function ErrorContent( sTITLE : String , sTEXT : String ) : void {								//					graphics.beginFill( 0x696969 );					graphics.drawRect( 0 , 0 , 300 , 150 );					graphics.endFill();									//					var 	oTF : TextField = Factory.build( TextField , { 															x : 10 , y : 10 , 														width : 280 , text :sTEXT , 														autoSize : TextFieldAutoSize.CENTER ,														wordWrap : true , 														multiline : true														} );																				oTF.setTextFormat(new TextFormat('PF Tempesta Seven',8,0xFFFFFF,false,false,false,null,null,'center'));					addChild(oTF);						oTF.y = 70 - oTF.height;				//					var 	oBTN : Button = Factory.build( Button , { width : 100 , y : 90 , x : 100 , label : 'OK' } );						oBTN.addEventListener( MouseEvent.CLICK , _onClose , false , 10 , true );					addChild( oBTN );						}		// -------o public					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onClose( e : MouseEvent ) : void {				e.target.removeEventListener( MouseEvent.CLICK , _onClose , false );				stage.nativeWindow.close();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(ErrorContent, args);			}	}}