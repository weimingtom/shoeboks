 Sprite{				protected var _oDECAL		:Vector3D = new Vector3D();		protected var _oDESC		:Object;		protected var _oLOADER		:Loader = new Loader();		protected var _uID		:uint;					// -------o constructor					public function TileLayer() : void {			}		// -------o public						/**			* get loader function			* @public			* @param 			* @return			*/			public function get loader() : Loader {				return _oLOADER;			}						/**			* set id function			* @public			* @param 			* @return			*/			public function set id( nID : uint ) : void {				_uID = nID;								var 	oBASE : Database = Database.getInstance();					oBASE.text = 'SELECT * FROM TilesDB WHERE id="'+nID+'"';					oBASE.addEventListener( SQLEvent.RESULT , _onResponse , false , 10 , true);					oBASE.execute();			}						/**			* get id function			* @public			* @param 			* @return			*/			public function get id() : uint {				return _uID;			}						/**			* set decal function			* @public			* @param 			* @return			*/			public function set decal( pt : Vector3D ) : void {				_oDECAL = pt;				_oLOADER.x = pt.x;				_oLOADER.y = -_oLOADER.height + Config.TILESIZE/2 + 2 + pt.y;							}						/**			* get decal function			* @public			* @param 			* @return			*/			public function get decal() : Vector3D {				return _oDECAL;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onResponse( e : SQLEvent ) : void {				e.target.removeEventListener( SQLEvent.RESULT , _onResponse , false);				var a :Array = Database.getInstance().getResult().data;					if(!a)					return;								if(a.length == 0)					return;									_oDESC = a[0];								_oLOADER = new Loader();				_oLOADER.contentLoaderInfo.addEventListener(Event.COMPLETE , _onDatas , false , 10 , true);				_oLOADER.loadBytes(FileUtils.readFile( File.documentsDirectory.resolvePath( _oDESC.filepath ) ));												}						/**			* 			*			* @param 			* @return			*/			protected function _onDatas( e : Event ) : void {								e.target.removeEventListener(Event.COMPLETE , _onDatas , false);								_oDECAL = new Vector3D( (_oDESC.decalX == null ) ? 0 : _oDESC.decalX , (_oDESC.decalY == null ) ? 0 : _oDESC.decalY);								_oLOADER.y = -_oLOADER.height + Config.TILESIZE/2 + 2;				_oLOADER.x += (_oDESC.decalX==null) ? 0 : _oDESC.decalX;				_oLOADER.y += (_oDESC.decalY==null) ? 0 : _oDESC.decalY;				  				addChild(_oLOADER);								dispatchEvent(new Event(Event.COMPLETE));			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(TileLayer, arguments);			}	}}