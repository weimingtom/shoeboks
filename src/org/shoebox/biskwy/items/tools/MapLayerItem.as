;		public var bGAME_LAYER			:Boolean;		public var ref				:LayerItem;				protected var _oTRANS			:ColorTransform = new ColorTransform();		protected var _spBACK			:Sprite;		protected var _tfLABEL			:TextField;				// -------o constructor					/**			* Constructor of the MapLayerItem class			*			* @public			* @return	void			*/			public function MapLayerItem( ) : void {								//					mouseChildren = false;					buttonMode = true;										_draw();							}		// -------o public						/**			* redraw function			* @public			* @param 			* @return			*/			final public function redraw() : void {				_redraw();			}						/**			* over function			* @public			* @param 			* @return			*/			final public function over() : void {				_oTRANS.color = 0xBBBBBB;				_spBACK.transform.colorTransform = _oTRANS;				}						/**			* out function			* @public			* @param 			* @return			*/			final public function out() : void {				_spBACK.transform.colorTransform = new ColorTransform();			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _draw() : void {												//					_spBACK = new Sprite();					_spBACK.graphics.beginFill( 0xEAEAEA , 1 );					_spBACK.graphics.drawRect( 0 , 0 , 795 , 23 );					_spBACK.buttonMode = true;					_spBACK.graphics.endFill();					_spBACK.x = 5;					_spBACK.y = 2;									//					var oF : TextFormat = new TextFormat('PF Tempesta Seven', 8 , 0 , false );					_tfLABEL = Factory.build( TextField , { 												selectable : false , x : 10 , y : 4 , height : 20 , 												defaultTextFormat : oF , width : 200 , 												autoSize : TextFieldAutoSize.LEFT 											});					_tfLABEL.setTextFormat( oF );									//					addChild(_spBACK);					addChild(_tfLABEL );			}						/**			* 			*			* @param 			* @return			*/			final protected function _redraw() : void {				_tfLABEL.text = sNAME;			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(MapLayerItem, args);			}	}}