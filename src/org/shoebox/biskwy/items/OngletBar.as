 Sprite();				// -------o constructor					/**			* Constructor of the OngletBar class			*			* @public			* @return	void			*/			public function OngletBar() : void {				trc('constructor');				addChild(_spBACK);				addChild(_spCONTAINER);			}		// -------o public						/**			* setSize function			* @public			* @param 			* @return			*/			public function setSize( w : uint , h : uint ) : void {				_ptSIZE = new Point( w , h );			}						/**			* set list function			* @public			* @param 			* @return			*/			public function set list( a : Array ) : void {				_aLIST = a;			}									/**			* draw function			* @public			* @param 			* @return			*/			public function draw() : void {								//					_spBACK.graphics.clear();					_spBACK.graphics.beginFill( 0xEAEAEA );					_spBACK.graphics.drawRect( 0 , 0 , _ptSIZE.x , _ptSIZE.y );					_spBACK.graphics.endFill();								//					DisplayFuncs.purge( _spCONTAINER );					var u : uint = 0;					var l : uint = _aLIST.length;					var uX :uint = 0;					var oITEM : OngletItem;					for( u ; u < l ; u ++ ){						oITEM = Factory.build( OngletItem , { x : uX , label : _aLIST[u]});						oITEM.draw();						_spCONTAINER.addChild( oITEM );					}								}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(OngletBar, args);			}	}}	import org.shoebox.display.DisplayFuncs;
	import org.shoebox.patterns.factory.Factory;	import org.shoebox.utils.logger.Logger;		import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;		/**	 * org.shoebox.biskwy.items.OngletBar	* @author shoebox	*/	internal class OngletItem extends Sprite{				protected var _spSPRITE		:Sprite;		protected var _sLABEL		:String;		protected var _tfLABEL		:TextField = new TextField();				// -------o constructor					/**			* Constructor of the OngletItem class			*			* @public			* @return	void			*/			public function OngletItem() : void {				trc('constructor');				_spSPRITE 	= Factory.build('onglet') as Sprite;				_tfLABEL	= Factory.build( TextField , { text : '--' , x : 5 , y : 2 , height : 20 });				DisplayFuncs.setColor(_spSPRITE , 0x2A2A2A);				addChild(_spSPRITE);				addChild(_tfLABEL);			}		// -------o public						/**			* set label function			* @public			* @param 			* @return			*/			public function set label( s : String ) : void {				_sLABEL = s;			}						/**			* draw function			* @public			* @param 			* @return			*/			public function draw() : void {				_tfLABEL.text = _sLABEL;				_tfLABEL.setTextFormat( new TextFormat('PF Tempesta Seven', 8 , 0xFFFFFF , false) );			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(OngletItem, args);			}	}