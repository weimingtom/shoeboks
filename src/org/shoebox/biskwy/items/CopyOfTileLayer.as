	import org.shoebox.biskwy.core.Config;	import org.shoebox.biskwy.core.IsoGrid;	import org.shoebox.biskwy.core.TwoD;	import org.shoebox.biskwy.core.variables.TilesCache;	import org.shoebox.biskwy.services.STileByID;	import org.shoebox.patterns.service.ServiceEvent;	import org.shoebox.utils.logger.Logger;	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.display.Loader;	import flash.display.Sprite;	import flash.events.Event;	import flash.geom.Vector3D;	/**	 * org.shoebox.biskwy.items.TileLayer	* @author shoebox	*/	public class TileLayer extends Sprite{				protected var _oDECAL		:Vector3D = new Vector3D();		protected var _oDESC		:Object = null;		protected var _oMEDIA		:DisplayObject;		protected var _oSERVICE		:STileByID;		protected var _uID		:uint;			protected var _uDECALZ		:int = 0;				// -------o constructor					public function TileLayer() : void {			}		// -------o public						/**			* set datas function			* @public			* @param 			* @return			*/			public function set datas( o : Object ) : void {				_oDESC = o;			}						/**			* run function			* @public			* @param 			* @return			*/			final public function run( nID : uint , iDECALZ : int ) : void {				_uID = nID;				_oDESC = TilesDesc.getValue(nID);				if( TilesCache.getValue(nID) is BitmapData )					_oMEDIA = new Bitmap( TilesCache.getValue(nID) as BitmapData );				else					_oMEDIA = TilesCache.getValue(nID);								_uDECALZ = iDECALZ;								if(Config.GRIDTYPE == TwoD )					_oMEDIA.y = -_oMEDIA.height + 2 + _oDECAL.y + iDECALZ;							else					_oMEDIA.y = -_oMEDIA.height + Config.TILESIZE/2 + 2 + _oDECAL.y + iDECALZ;												_loadMedia();			}						/**			* get id function			* @public			* @param 			* @return			*/			public function get id() : uint {				return _uID;			}						/**			* get decalZ function			* @public			* @param 			* @return			*/			public function get decalZ() : int {				return _uDECALZ;			}						/**			* get decal function			* @public			* @param 			* @return			*/			public function get decal() : Vector3D {				return _oDECAL;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _loadMedia() : void {									_oDECAL = new Vector3D( (_oDESC.decalX == null ) ? 0 : _oDESC.decalX , (_oDESC.decalY == null ) ? 0 : _oDESC.decalY);								if(Config.GRIDTYPE == IsoGrid){					_oMEDIA.y = -_oMEDIA.height + Config.TILESIZE/2 + 2;					_oMEDIA.x += (_oDESC.decalX==null) ? 0 : _oDESC.decalX;					_oMEDIA.y += (_oDESC.decalY==null) ? 0 : _oDESC.decalY;					_oMEDIA.y += decalZ;				}else{					_oMEDIA.y += decalZ;				}								addChild(_oMEDIA);				dispatchEvent(new Event(Event.COMPLETE));				//_oDESC = null;			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(TileLayer, arguments);			}	}}