	import flash.display.Bitmap;
	import org.shoebox.display.BoxBitmapData;
	import flash.display.BitmapData;
	import org.shoebox.biskwy.data.TileDesc;
	import org.shoebox.biskwy.core.variables.TilesCache;
	import flash.display.DisplayObject;
	import org.shoebox.biskwy.core.DatabaseAssets;
	import fl.controls.Button;	import fl.controls.NumericStepper;	import org.shoebox.biskwy.core.Database;	import org.shoebox.patterns.factory.Factory;	import flash.display.Loader;	import flash.display.Shape;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.SQLEvent;	import flash.geom.Matrix;	import flash.geom.Vector3D;	import flash.utils.getDefinitionByName;	/**	 * org.shoebox.biskwy.items.ItemTileContent	* @author shoebox	*/	public class ItemTileContent extends Sprite{				protected var _oBUTTON		:Button ;		protected var _oBUTTONUP	:Button ;		protected var _oBUTTONDOWN	:Button ;		protected var _oLOADER		:Loader;		protected var _oDECALZ		:NumericStepper;		protected var _shBORDER	:Shape = new Shape();		protected var _oSPRITE		:Sprite = new Sprite();		protected var _oDECAL		:Vector3D;		protected var _nID		:uint;		protected var _oTARGET		:TileLayer;				// -------o constructor					public function ItemTileContent() : void {								graphics.beginFill( 0xFFFFFF );				graphics.drawRect(  0 , 0 , 100 , 75 );				graphics.endFill();								graphics.beginFill( 0xDDDDDD );				graphics.drawRect(  100 , 0 , 150 , 75 );				graphics.endFill();								_oBUTTON = Factory.build(Button , {x : 195 , y : 40 , name : 'del'});				_oBUTTON.setStyle("icon", getDefinitionByName('delIcon'));				_oBUTTON.setSize(22,22);								_oBUTTONUP 	= Factory.build(Button , {x : 110 , y : 40 , label:'up' , name:'up'});				_oBUTTONUP.setSize(30,22);				_oBUTTONDOWN= Factory.build(Button , {x : 145 , y : 40 , label:'down' , name:'down'});				_oBUTTONDOWN.setSize(45,22);								_oDECALZ = Factory.build(NumericStepper , {x : 110 , minimum : -1000 , maximum : 1000 , y : 10 , value : 0});								addChild(_oSPRITE);				addChild(_shBORDER);				addChild(_oBUTTON);				addChild(_oBUTTONUP);				addChild(_oBUTTONDOWN);				addChild(_oDECALZ);				_shBORDER.graphics.lineStyle( 1 , 0xAAAAAA , 1 , true );							}		// -------o public						/**			* set id function			* @public			* @param 			* @return			*/			public function set id( nID : uint ) : void {				_nID = nID;			}						/**			* get id function			* @public			* @param 			* @return			*/			public function get id() : uint {				return _nID;			}									/**			* set decal function			* @public			* @param 			* @return			*/			public function set decal( pt : Vector3D ) : void {				trc('set decal ::: '+pt);				_oDECAL = pt;						//_oSPRITE.x = _oDECAL.x;				//_oSPRITE.y = _oDECAL.y ;					}												/**			* set target function			* @public			* @param 			* @return			*/			public function set target( tgt : TileLayer) : void {				_oTARGET = tgt;			}						/**			* get target function			* @public			* @param 			* @return			*/			public function get target() : TileLayer {				return _oTARGET;			}						/**			* draw function			* @public			* @param 			* @return			*/			final public function draw() : void {				_run( );			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _run(  ) : void {				trc('_onResponse');
								var 	oBMP : BitmapData = (TilesCache.getValue(_nID) as TileDesc).img;					oBMP = BoxBitmapData.resize( oBMP , 90 , 65 , false , false );								_oSPRITE.addChild( new Bitmap( oBMP ) );				if( _oDECALZ )					_oDECALZ.value =  _oTARGET.decalZ;				_shBORDER.graphics.drawRect(0,_oSPRITE.y,250 , 75 );								dispatchEvent(new Event(Event.COMPLETE));			}					// -------o misc			public static function trc(arguments : *) : void {				//Logger.log(ItemTileContent, arguments);			}	}}