oid {				_draw();			}		// -------o public						/**			* getInstance function			* @public			* @param 			* @return			*/			static public function getInstance() : Controls {								if(__instance == null)					__instance = new Controls(new SingletonEnforcer());				return __instance;			}						/**			* get zDecal function			* @public			* @param 			* @return			*/			public function get decalZ() : Number {				return _oSTEPPERZ.value;			}					// -------o protected				/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {								_oSTEPPERZ = Factory.build(NumericStepper , {x : 10 , y :5 , minimum : -200 , maximum : 200 , value : 0});				addChild(_oSTEPPERZ);							}						// -------o misc			public static function trc(arguments : *) : void {				Logger.log(Controls, arguments);			}	}}internal class SingletonEnforcer{	}