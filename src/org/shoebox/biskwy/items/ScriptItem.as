;		protected var _oFIELD			:TextField;				// -------o constructor					/**			* Constructor of the VScriptEditor class			*			* @public			* @return	void			*/			public function ScriptItem( ) : void {				buttonMode = useHandCursor = true;				mouseChildren = false;				addChild(_shBACK);			}		// -------o public						/**			* Drawning the script item			* 			* @public			* @param	b : modulo boolean (Boolean) 			* @return	void			*/			public function draw( b : Boolean = false ) : void {								//					_shBACK.graphics.beginFill( b ? 0xEAEAEA : 0xFAFAFA , 1 );					_shBACK.graphics.drawRect( 1 , 0 , 480 , 25 );					_shBACK.graphics.endFill();									//					_oFIELD = Factory.build( TextField , 	{ 													text : _oSCRIPT.ref, 													x : 5 , 													y : 2 ,													width : 400,													height : 20,													embedFonts : true,													selectable : false,													mouseEnabled : false												});																	_oFIELD.setTextFormat( new TextFormat('PF Tempesta Seven', 8 , 0x2A2A2A , false) );					addChild( _oFIELD );			}						/**			* Setter of the <code>TriggerScript</code> reference			* 			* @public			* @param	o : reference (TriggerScript) 			* @return	void			*/			public function set script( o : TriggerScript ) : void {				_oSCRIPT = o;			}						/**			* Getter of the <code>TriggerScript</code> reference			* 			* @public			* @return	reference	(TriggerScript)			*/			public function get script() : TriggerScript {				return _oSCRIPT;			}						/**			* On rollover			* 			* @public			* @return 	void			*/			public function over() : void {				var 	oT : ColorTransform = new ColorTransform();					oT.color = 0xDDDDDD;				_shBACK.transform.colorTransform = oT;			}						/**			* On rollout			* 			* @public			* @return	void			*/			public function out() : void {				_shBACK.transform.colorTransform = new ColorTransform();			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(ScriptItem, args);			}	}}