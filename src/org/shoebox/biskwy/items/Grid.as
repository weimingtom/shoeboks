 constructor					public function Grid() : void {				trc('constructor');				addChild(_spGRID);			}		// -------o public					/**			* set rect function			* @public			* @param 			* @return			*/			public function set rect( r : Rectangle ) : void {				_rSIZE = r;			}					/**			* redraw function			* @public			* @param 			* @return			*/			public function redraw() : void {				_draw();						}				// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {				trc('draw');				var x : int = -1;				var y : int = -1;								var w : uint = (_rSIZE.width / Config.TILESIZE);				var h : uint = (_rSIZE.height / (Config.TILESIZE / 4));								var c : GridLine;								while( y++ < h){					x = -1;					while( x++ < w) {						c = Factory.build( GridLine , { x : x * Config.TILESIZE - ((y % 2) ? 0 : Config.TILESIZE/2), y : y * ( Config.TILESIZE / 4) - Config.TILESIZE / 2 });						_spGRID.addChild( c );					}				}			}		// -------o misc			public static function trc(arguments : *) : void {				Logger.log(Grid, arguments);			}	}}import org.shoebox.biskwy.core.Config;import org.shoebox.utils.logger.Logger;import flash.display.Sprite;/**	 * org.shoebox.biskwy.items.GridLine	* @author shoebox	*/	internal class GridLine extends Sprite{				// -------o constructor					public function GridLine() : void {				var w : Number = Config.TILESIZE;				var h : Number = Config.TILESIZE / 2;				graphics.lineStyle(1,0xEEEEEE);				graphics.moveTo( 0 , h / 2);				graphics.lineTo( w/2 , 0 );				graphics.lineTo( w , h/2 );				graphics.lineTo( w/2 , h );				graphics.lineTo( 0 , h/2 );			}		// -------o public				// -------o protected		// -------o misc			public static function trc(arguments : *) : void {				Logger.log(GridLine, arguments);			}	}