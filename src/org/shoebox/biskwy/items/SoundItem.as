		:Vector3D;		public var RADIUS				:uint = 100;				protected var _spCENTER			:Sprite = new Sprite();				protected const COLOR			:uint = 0x33CCFF ;				// -------o constructor					/**			* Constructor of the SoundItem class			*			* @public			* @return	void			*/			public function SoundItem() : void {				trc('constructor');								//					var uSIZE : uint = 3;					with( _spCENTER.graphics ){												lineStyle( 4 , COLOR , 1 , true , null , CapsStyle.SQUARE);						moveTo( -5 , 0 );						lineTo( +5 , 0 );						moveTo( 0 , -5 );						lineTo( 0 , +5 );																		lineStyle( 0 , 0 , 0 );						beginFill( 0xFFFFFF , .2 );						drawCircle( 0 , 0 , uSIZE * 4 );						endFill();						}					addChild( _spCENTER );									//					doubleClickEnabled = true;					hitArea = _spCENTER;					_redraw();									//					contextMenu = new NativeMenu();					contextMenu.addItem( new NativeMenuItem('Remove') );					contextMenu.addItem( new NativeMenuItem('Edit') );					contextMenu.addEventListener( Event.SELECT, _onMenu , false , 10 , true );			}		// -------o public						/**			* redraw function			* @public			* @param 			* @return			*/			final public function redraw() : void {				_redraw();			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _redraw() : void {				graphics.clear();				graphics.lineStyle( 2 , COLOR , 1 );				graphics.drawCircle(  0, 0, RADIUS );							}						/**			* When an event is received from the context menu			*				* @param 	e : menu select event (Event)			* @return	void			*/			protected function _onMenu( e : Event ) : void {				if(e.target is NativeMenuItem){										switch((e.target as NativeMenuItem).label){												case 'Remove':							if(parent)								parent.removeChild( this );							break;												case	'Edit':							var 	oEVENT : SoundEvent = new SoundEvent( SoundEvent.EDIT );								oEVENT.soundItem = this;							Facade.getInstance().dispatchEvent( oEVENT );							break;											}									}			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(SoundItem, args);			}	}}