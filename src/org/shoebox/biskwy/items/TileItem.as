 class TileItem extends Sprite{				protected var _spBORDER		:Shape = new Shape();				protected var _oLOADER			:Loader = new Loader();		protected var _spCONTAINER		:Sprite = new Sprite();		protected var _oDATAS			:Object;		protected var _uID			:uint;				// -------o constructor					public function TileItem( o : Object , id : int ) : void {				_uID = id;				buttonMode = true;				mouseChildren = false;				addChild(_spBORDER);				addChild(_spCONTAINER);				_oDATAS = o;				redraw();			}		// -------o public						/**			* get id function			* @public			* @param 			* @return			*/			public function get id() : uint {				return _uID;			}						/**			* redraw function			* @public			* @param 			* @return			*/			public function redraw() : void {								//					_spBORDER.graphics.clear();					_spBORDER.graphics.lineStyle(1,0xAAAAAA);					_spBORDER.graphics.beginFill(0xFFFFFF);					_spBORDER.graphics.drawRect(0,0,Config.TILEITEMSIZE,Config.TILEITEMSIZE);					_spBORDER.graphics.endFill();								//					_oLOADER.contentLoaderInfo.addEventListener(Event.COMPLETE , _onComplete , false , 10 , true);					_oLOADER.loadBytes(FileUtils.readFile( File.documentsDirectory.resolvePath( _oDATAS.filepath ) ));												}					// -------o protected							/**			* 			*			* @param 			* @return			*/			protected function _onComplete( e : Event = null ) : void {								var s : Number = Math.min( Config.TILEITEMSIZE / _oLOADER.width , Config.TILEITEMSIZE / _oLOADER.height);								var 	oMAT:Matrix = new Matrix();					oMAT.scale(s,s);				_oLOADER.transform.matrix = oMAT;				_spCONTAINER.addChild(_oLOADER);				DisplayFuncs.align(_oLOADER , new Rectangle(0 , 0 , Config.TILEITEMSIZE , Config.TILEITEMSIZE));			}						// -------o misc			public static function trc(arguments : *) : void {				Logger.log(TileItem, arguments);			}	}}