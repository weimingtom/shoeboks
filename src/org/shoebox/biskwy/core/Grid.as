	}			// -------o public						/**			* draw function			* @public			* @param 			* @return			*/			public function draw() : void {								blendMode = BlendMode.ADD;								var 	ns : Namespace = Config.GRIDTYPE;					ns :: _draw();			}						/**			* 			*			* @param 			* @return			*/			TwoD function _draw() : void {				trc('draw');				x = 0;				//					graphics.clear();					graphics.lineStyle( .1 , 0xFFFFFF , .15 );					graphics.drawRect( 0 , 0 , Config.TILESIZE * Config.GRID_WIDTH , Config.TILESIZE * Config.GRID_HEIGHT );								//					var iX : int = 0;					var iY : int = 0;					var iW : int = Config.TILESIZE * Config.GRID_WIDTH;					var iH : int = Config.TILESIZE * Config.GRID_HEIGHT;					for( iX ; iX < Config.GRID_WIDTH ; iX++ ){						graphics.moveTo( iX * Config.TILESIZE , 0 );						graphics.lineTo( iX * Config.TILESIZE , iH);					}					for( iY ; iY < Config.GRID_HEIGHT ; iY++ ){						graphics.moveTo( 0 , iY * Config.TILESIZE );						graphics.lineTo( iW , iY * Config.TILESIZE );					}			}						/**			* 			*			* @param 			* @return			 */			IsoGrid function _draw() : void {				trc('draw');				x = (Config.GRID_WIDTH / 2) * Config.TILESIZE + Config.TILESIZE / 2;								//					graphics.clear();					graphics.lineStyle( .1 , 0xFFFFFF , .15 );								//					var 	iX : int = 0;					var 	iY : int = 0;					var 	vP : Vector3D;					for( iX ; iX <= Config.GRID_WIDTH ; iX++ ){																		vP = Transformer.screenToWorld( new Vector3D( iX , 0 ));						vP.scaleBy( Config.TILESIZE /2 );						graphics.moveTo( vP.x , vP.y );												vP = Transformer.screenToWorld( new Vector3D( iX , Config.GRID_HEIGHT));						vP.scaleBy( Config.TILESIZE / 2 );						graphics.lineTo( vP.x , vP.y );					}									//					for( iY ; iY <= Config.GRID_HEIGHT ;iY++ ){												vP = Transformer.screenToWorld( new Vector3D( 0 , iY ));						vP.scaleBy( Config.TILESIZE /2 );						graphics.moveTo( vP.x , vP.y );												vP = Transformer.screenToWorld( new Vector3D(Config.GRID_WIDTH, iY));						vP.scaleBy( Config.TILESIZE / 2 );						graphics.lineTo( vP.x , vP.y );																	}							}					// -------o protected					// -------o misc			public static function trc(...args : *) : void {				Logger.log(Grid, args);			}	}}