							camW NUMERIC , 																			camH NUMERIC																			);													CREATE TABLE IF NOT EXISTS TB_Maps ( 																				id INTEGER PRIMARY KEY , 																				def BOOLEAN , 																				name TEXT UNIQUE , 																				width NUMERIC , 																				height NUMERIC , 																				data BLOB																			);]]>).toString();																	public static const SCHEMA_ASSETS	: String = ( <![CDATA[																									CREATE TABLE IF NOT EXISTS TB_Groups (																				id INTEGER PRIMARY KEY , 																				name TEXT UNIQUE , 																				cat TEXT , 																				baseW NUMERIC , 																				baseH NUMERIC , 																				height NUMERIC , 																				data BLOB , 																				img BLOB																			);													CREATE TABLE IF NOT EXISTS TB_Assets ( 																					id INTEGER PRIMARY KEY , 																				type STRING , 																				name TEXT , 																				preview BLOB , 																				filePath TEXT 																			);													CREATE TABLE IF NOT EXISTS TilesDB (																				id INTEGER PRIMARY KEY , 																				ground BOOLEAN , 																				name TEXT , 																				cat TEXT , 																				filepath TEXT , 																				decalX NUMERIC , 																				decalY NUMERIC , 																				collide BOOLEAN , 																				collideL BOOLEAN , 																				collideR BOOLEAN ,																				collideT BOOLEAN , 																				collidB BOOLEAN , 																				rigidbody BOOLEAN , 																				mass NUMBER , 																				active BOOLEAN ,																				media BLOB , 																				preview BLOB , 																				mediaW NUMERIC , 																				mediaH NUMERIC, 																				AssetID INTEGER																			);]]>).toString();						public static const TRIGGER1			: String =  ( <![CDATA[	CREATE TRIGGER IF NOT EXISTS AssetDEL AFTER DELETE ON TB_Assets													BEGIN													DELETE FROM TilesDB WHERE AssetID=old.id;													END;]]>).toString();						public static const TRIGGER2			: String =  ( <![CDATA[	CREATE TRIGGER IF NOT EXISTS AssetINSERT AFTER INSERT ON TB_Assets													WHEN new.type = 'Tile'													BEGIN													INSERT INTO TilesDB (AssetID , name , filepath) VALUES (new.id , new.name , new.filePath);													END;]]>).toString();						public static const TRIGGER3			: String =  ( <![CDATA[CREATE TRIGGER IF NOT EXISTS AssetUPDATE_Del AFTER UPDATE ON TB_Assets														WHEN old.type = 'Tile' 													AND new.type!='Tile'														BEGIN	DELETE FROM TilesDB 													WHERE AssetID=old.id;														END;]]>).toString();											public static const TRIGGER4			: String =  ( <![CDATA[CREATE TRIGGER IF NOT EXISTS AssetUPDATE_Type AFTER UPDATE ON TB_Assets													WHEN new.type='Tile' AND old.type!='Tile'													BEGIN													INSERT INTO TilesDB (AssetID , name , filepath) VALUES (new.id , new.name , new.filePath);													END;]]>).toString();																																								// -------o constructor					/**			* Constructor of the Schemas class			*			* @public			* @return	void			*/			public function Schemas() : void {				throw new Error(Errors.STATICCLASSERROR);			}		// -------o public				// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(Schemas, args);			}	}}