ected var _oSTEPPERW	:NumericStepper;		protected var _oSTEPPERH	:NumericStepper;		protected var _oFIELD		:TextInput;				// -------o constructor					public function CtntNewMap() : void {				_draw();			}		// -------o public						/**			* get width function			* @public			* @param 			* @return			*/			public function get tileswidth() : uint {				return _oSTEPPERW.value;			}						/**			* get height function			* @public			* @param 			* @return			*/			public function get tilesheight() : uint {				return _oSTEPPERH.value;			}						/**			* get mapName function			* @public			* @param 			* @return			*/			public function get mapName() : String {				return _oFIELD.text;			}						/**			* get mapW function			* @public			* @param 			* @return			*/			public function get mapW() : uint {				return _oSTEPPERW.value;			}						/**			* get mapW function			* @public			* @param 			* @return			*/			public function get mapH() : uint {				return _oSTEPPERH.value;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {								addChild(Factory.build(Label,{ text : 'Name of the map' , x: 20 , y : 20 , width : 150}));				addChild(Factory.build(Label,{ text : 'Width (Sprites count)' , x: 20 , y : 80 , width : 150}));				addChild(Factory.build(Label,{ text : 'Height (Sprites count)' , x: 160 , y : 80 , width : 150}));													_oFIELD = Factory.build( TextInput , { width : 260 , x : 20 , y : 40 , text : 'My map' });								_oSTEPPERW = Factory.build(NumericStepper, { minimum : 0, maximum : 1000, x : 20, y : 100, value : 20 , width : 120});				_oSTEPPERH = Factory.build(NumericStepper, { minimum : 0, maximum : 1000, x : 160, y : 100, value : 20 , width : 120});								_oBUTTONV = Factory.build(Button, { x : 20, y : 160, label:'Validate' , width : 120 , name:'Validate'});				_oBUTTONC = Factory.build(Button, { x : 160, y : 160, label:'Cancel' , width : 120 , name : 'Cancel'});								addChild(_oFIELD);						addChild(_oSTEPPERW);						addChild(_oSTEPPERH);						addChild(_oBUTTONV);						addChild(_oBUTTONC);								}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(CtntNewMap, arguments);			}	}}