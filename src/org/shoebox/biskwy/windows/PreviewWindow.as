 shoebox	*/	public class PreviewWindow extends NativeWindow{				protected var _oTIMER		:Timer;		protected var _uCOUNT		:uint = 0;				// -------o constructor					public function PreviewWindow() : void {								super(Factory.build( NativeWindowInitOptions , {														resizable : false, 													maximizable : false, 													minimizable : false 												}));									title = 'Project preview';				//alwaysInFront = true;									stage.align = StageAlign.TOP_LEFT;				stage.scaleMode = StageScaleMode.NO_SCALE;				NativeWindowUtils.resizeWindow(this, 550 , 400);								stage.nativeWindow.visible = false;												}		// -------o public						/**			* activate function			* @public			* @param 			* @return			*/			final override public function activate() : void {				_oTIMER = new Timer(1000);				_oTIMER.addEventListener(TimerEvent.TIMER , _onTimer , false , 10 , true);				_oTIMER.start();				stage.addEventListener(Event.ENTER_FRAME , _onFrame , false , 10 , true );				addEventListener(Event.CLOSE , _onClose , false , 10 , true );				super.activate();							}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onFrame( e : Event ) : void {				_uCOUNT++;			}						/**			* 			*			* @param 			* @return			*/			protected function _onTimer( e : TimerEvent ) : void {				title = 'Project preview '+_uCOUNT+' fps / '+stage.frameRate;				_uCOUNT = 0;			}						/**			* 			*			* @param 			* @return			*/			protected function _onClose( e : Event ) : void {				trc('onClose');				stage.removeEventListener(Event.ENTER_FRAME , _onFrame , false );				removeEventListener(Event.CLOSE , _onClose , false );				_oTIMER.removeEventListener(TimerEvent.TIMER , _onTimer , false );				_oTIMER.stop();			}								// -------o misc			public static function trc(arguments : *) : void {				Logger.log(PreviewWindow, arguments);			}	}}