		protected var _vEVENTS				: Vector.<EventItem> 		= Vector.<EventItem>([]);
		protected var _vLINKS 				: Vector.<LinkItem> = Vector.<LinkItem>([]);		
				// -------o constructor					/**			* Constructor of the model class			*			* @public			* @return	void			*/			public function MNevermind() : void {			}		// -------o public						/**			* Model initialization 			* 			* @public			* @param	e : optional initialization event (Event) 			* @return	void			*/			final override public function initialize( e : Event = null ) : void {				_getLib();			}									/**			* When the model and the triad is canceled			* 			* @public			* @param	e : optional cancel event (Event) 			* @return	void			*/			final override public function cancel(e:Event = null) : void {									}						/**			* Register a link between two <code>Anchor</code>			* A type check is done before 			* 			* @public			* @param 	o1 : Anchor ref 1	( Anchor )			* @param 	o2 : Anchor ref 2	( Anchor )			* @return	void			*/			final public function registerLink( o1 : Anchor , o2 : Anchor ) : void {				trc('registerLink ::: '+o1+' /// '+o2);								if( o1.reference is Function && o2.reference is Function )					trc('invalid link cannot link a function to a function');				else{					_vLINKS.push( new LinkItem( o1 , o2 ) );					update( VNevermind.REDRAW );				}			}						/**			* Return an Vector who contains all the registered <code>LinkItem</code>			* 			* @public			* @return	links list ( Vector.<LinkItem> )			*/			final public function get links() : Vector.<LinkItem> {				return _vLINKS;			}						/**			* Return the code of the specified extension class			* 			* @public			* @param 	c : Extension class 	( Class )			* @return	class code name		( String )			*/			final public function getClassCodeName( c : Class ) : String {				return DescribeTypeCache.getDesc( c )..metadata.(@name=='NVM_Desc')[0]..arg.(@key == 'name').@value;			}						/**			* Return the type of the specified extension class			* 			* @public			* @param	c : Extension class	( Class ) 			* @return	class type			( String )			*/			final public function getClassCodeType( c : Class ) : String {				return DescribeTypeCache.getDesc( c )..metadata.(@name=='NVM_Desc')[0]..arg.(@key == 'type').@value;			}									/**			* Return a list of all the classes code names			* 			* @public			* @return	list of code names ( Vector.<String> )			*/			final public function get codesList() : Vector.<String> {							//					if( _vCODES )						return _vCODES;								//					var c : Class;					_vCODES = Vector.<String>([]);					for each( c in _vCLASSES )						_vCODES.push( getClassCodeName(c) );								return _vCODES;							}						/**			* get eventsList function			* @public			* @param 			* @return			*/			final public function get eventsList() : Vector.<String> {				//					if( _vEVENTS_CODES )						return _vEVENTS_CODES;								//					var o : EventItem;					_vEVENTS_CODES = Vector.<String>([]);					for each( o in _vEVENTS )						_vEVENTS_CODES.push( o.eventClass + '.' + o.eventName);								return _vEVENTS_CODES;			}						/**			* Return the registered list classes			* 			* @public			* @return	list of class 	( Vector.<Class> )			*/			final public function get classes() : Vector.<Class> {				return _vCLASSES;			}						/**			* get events function			* @public			* @param 			* @return			*/			final public function get events() : Vector.<EventItem> {				return _vEVENTS;			}						/**			* Return the class associated to the specified code name			* 			* @public			* @param	s : Class code name ( String ) 			* @return	void			*/			final public function getClassByCode( s : String ) : Class {				return _dCLASSES[s];			}						/**			* getEventByCode function			* @public			* @param 			* @return			*/			final public function getEventByCode( s : String ) : String {				return _dEVENTS[s];			}						/**			* save function			* @public			* @param 			* @return			*/			final public function save() : void {				trace('savesavesavesave ');				//var vActions : Vector.<AAction> = (view as VNevermind).contentList;								var o : LinkItem;				var from : AAction;				var to : AAction;				var tmp : AAction;				var vTMP : Vector.<AAction> = new Vector.<AAction>( );												//					_oBA = new ByteArray();										for each( o in _vLINKS ) {												from 	= o.from.actionRef;						to 	= o.to.actionRef;												if( vTMP.indexOf( from ) == -1)							vTMP.push( from );												if( vTMP.indexOf( to ) == -1)							vTMP.push( to );											}								//					var vVARS_FROM 	: Dictionary = new Dictionary( true );					var vVARS_TO 	: Dictionary = new Dictionary( true );														//					_oBA.writeInt( vTMP.length );					var sTYPE : String;					var list : XMLList;					var node : XML , x : XML;					var oVars : Object;					var i : uint = 0 , l : uint ;					for each( to in vTMP ){												x = DescribeTypeCache.getDesc(to.refClass);						sTYPE = getClassCodeType(to.refClass);												_oBA.writeUTF( x.@name );						_oBA.writeUTF( sTYPE );												if( sTYPE == 'Actor' )							_oBA.writeUTF( to.sACTION_NAME );												// variables							trace('variables');							list = x..metadata.( @name == 'NVM_Variable');							l = list.length();							i = 0;							oVars = {};							for( i ; i < l ; i++ ){								node = x..metadata.( @name == 'NVM_Variable')[i].parent();
								oVars[node.@name] = to.referenceInstance[node.@name];							}							_oBA.writeObject( oVars );														tmp = (view as VNevermind).getActionByName( to.name );							_oBA.writeFloat( tmp.x );									_oBA.writeFloat( tmp.y );							}								// 					_oBA.writeInt(_vLINKS.length);
					for each( o in _vLINKS ) {
												//												from 	= o.from.actionRef;							to 	= o.to.actionRef;																				//							/*							trace('from --------------------------- ');							trace('  |__ class name : '+DescribeTypeCache.getDesc(from.refClass).@name );							trace('  |__ class id	: '+vTMP.indexOf( from ) );							trace('  |__ type       : '+getClassCodeType(from.refClass) );							trace('  |__ reference  : '+o.from.reference );							trace('  |__ desc  	: '+o.from.descXML );							trace(' ');							trace('to   --------------------------- ');							trace('  |__ class name : '+DescribeTypeCache.getDesc(to.refClass).@name );							trace('  |__ class id	: '+vTMP.indexOf( to ) );							trace('  |__ type       : '+getClassCodeType(to.refClass) );							trace('  |__ reference  : '+o.to.reference );							trace('  |__ desc  	: '+o.to.descXML );							*/													//							_oBA.writeInt( vTMP.indexOf( from ));							_oBA.writeUTF( o.from.reference );							_oBA.writeUTF( o.from.descXML );														_oBA.writeInt( vTMP.indexOf( to ));							_oBA.writeUTF( o.to.reference );							_oBA.writeUTF( o.to.descXML );										}
								ScriptDatas = _oBA;			}						/**			* onChange function			* @public			* @param 			* @return			*/			final public function onChange( e : Event , o : AAction ) : void {				o.referenceInstance[(e.target as PropsPanelItem).propName] = (e.target as PropsPanelItem).value;			}		// -------o protected						/**			* Load the external extension list			*			* @return	void			*/			final protected function _getLib() : void {				trc('_getLib');				_oFILE = File.applicationDirectory;				_oFILE = _oFILE.resolvePath('datas/libs');				_aFILES = _oFILE.getDirectoryListing(); 				_uLEN = _aFILES.length;
				_uINC = 0;				_nextLib();			}						/**			* 			*			* @param 			* @return			*/			final protected function _nextLib() : void {								if( _uINC >= _uLEN ){					_finished();					return;				}				trace('_aFILES[_uINC] ::: '+_aFILES[_uINC].nativePath);				_oFILE_LIB = _aFILES[_uINC];				_oFILE_LIB.addEventListener( Event.COMPLETE , _onLibFileLoaded , false , 10 , true );				_oFILE_LIB.load();								_uINC++;												}						/**			* 			*			* @param 			* @return			*/			final protected function _onLibFileLoaded( e : Event ) : void {				trc('_onLibFileLoaded');				_oFILE_LIB.removeEventListener( Event.COMPLETE , _onLibFileLoaded , false );								var 	oL : LoaderContext = new LoaderContext(false, ApplicationDomain.currentDomain);
					oL.allowCodeImport = true;								_oLOADER = new Loader();				_oLOADER.contentLoaderInfo.addEventListener( Event.COMPLETE ,  _onDatas , false , 10 , true );				_oLOADER.loadBytes(_oFILE_LIB.data, oL );							}						/**			* When the library datas are loaded			*			* @param 	e : service response event (ServiceEvent)			* @return	void			*/			final protected function _onDatas( e : Event ) : void {				trc('_onDatas');				_oLOADER.contentLoaderInfo.removeEventListener( Event.COMPLETE ,  _onDatas , false );								// Commands										var c : Class , x : XML , s : String ;					for each( c in ( _oLOADER.content as ANevermindLib ).classes ){						trace('class ::: '+c);						x = DescribeTypeCache.getDesc( c );						s = x..metadata.(@name=='NVM_Desc')[0]..arg.(@key == 'name').@value;												_dCLASSES[s] = c;						_vCLASSES.push( c );					}					trace('_vCLASSES :::: '+_vCLASSES);									// Events					var vTMP : Vector.<Class> = (_oLOADER.content as ANevermindLib).events;										var oDESC : XML;					var l : int , i : int , n : XMLList ;					for each( c in vTMP ){						oDESC = DescribeTypeCache.getDesc( c );						n = oDESC..constant.(metadata.(@name == 'NVM_Event'));						l = n.length();												for( i ; i < l ; i++ ){							s = n[i]..metadata.(@name=='NVM_Event')[0]..arg.(@key=='name')[0].@value;														_dEVENTS[s] = c[n[i].@name];							_vEVENTS.push( new EventItem( c , c[n[i].@name]) );						}										}								_nextLib();											}						/**			* 			*			* @param 			* @return			*/
			final protected function _finished() : void {
								if( !ScriptDatas){					update('osef');					return;				}								ScriptDatas.position = 0;				var i : int = 0 , l : int = ScriptDatas.readInt() ;								var vTMP : Vector.<AAction> = new Vector.<AAction>( l , true );				var oOBJ : Object;				var sNAME : String , sTYPE : String , sCLASS : String , cCLASS : Class;								for( i ; i < l ; i++ ) {					
					sCLASS = ScriptDatas.readUTF();					cCLASS = getDefinitionByName(sCLASS) as Class;					sTYPE = ScriptDatas.readUTF();															
					if( sTYPE == 'Actor' )
						sNAME = ScriptDatas.readUTF();					else						sNAME = getClassCodeName( cCLASS );
										oOBJ = ScriptDatas.readObject();
					vTMP[i] = (view as VNevermind).create( 													sNAME , 												cCLASS , 												new Point( ScriptDatas.readFloat() , ScriptDatas.readFloat() ),												oOBJ 											);				}				i = 0;
				l = ScriptDatas.readInt();				var f : int , t : int , x : XML , s : String , a1 : Anchor , a2 : Anchor;
				for( i ; i < l ; i++ ) {															f = ScriptDatas.readInt();					s = ScriptDatas.readUTF();					x = XML(ScriptDatas.readUTF());					a1 = _getAnchor( x , vTMP[f]);										t = ScriptDatas.readInt();					s = ScriptDatas.readUTF();					x = XML(ScriptDatas.readUTF());					a2 = _getAnchor( x , vTMP[t]);										registerLink( a1 , a2 );					
				}
				update('osef');				update( VNevermind.REDRAW );			}						/**			* 			*			* @param 			* @return			*/			final protected function _getAnchor( x : XML , o : AAction ) : Anchor {				return o.getAnchor( x );			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(MNevermind, args);			}	}}