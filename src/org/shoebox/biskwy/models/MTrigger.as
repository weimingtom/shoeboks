r _oDESC		:XML;				// -------o constructor					/**			* Constructor of the MTrigger class			*			* @public			* @return	void			*/			public function MTrigger() : void {			}		// -------o public						/**			* When the trigger model is initialized			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			final override public function initialize( e : Event = null ) : void {				trc('initialize ::: '+e);				_oDESC = 	<root>				      		<entry label = "TRIGGER OPTIONS" 	prop='infottl' 	type = "title" />				      		<entry label = 'Shape' 			prop='shape' 	type = "string" value = "Circle" />				      		<entry label = 'Radius' 		prop='radius' 	type = "number" value = "50" min='0' max='10000'/>				      		<entry label = 'Trigger id' 		prop='triggerid' 	type = "string" value = 'Trigger01'/>			      		</root>;			      					      if( e !== null ){			      	var 	oEVENT : TriggerEvent = e as TriggerEvent;			      	_oDESC..entry.(@prop == 'radius')[0].@value = oEVENT.from.radius;			      }			}									/**			* When the trigger is canceled			* 			* @public			* @param	e : optional cancel event (Event) 			* @return	void			*/			final override public function cancel(e:Event = null) : void {									}						/**			* get datas function			* @public			* @param 			* @return			*/			public function get panelXML() : XML {				return _oDESC;			}						/**			* get props function			* @public			* @param 			* @return			*/			public function get props() : Object {				return (view as VTrigger).props;			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(MTrigger, args);			}	}}