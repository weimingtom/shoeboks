models.TilesModel	* @author shoebox	*/	public class TilesModel extends AModel implements IModel{				protected var _aFILES		: Array;		protected var _stSQL		: SQLStatement;		protected var _oCONN		: SQLConnection;		protected var _uLENGTH		: uint;		protected var _uSELECTION	: uint = 0;				// -------o constructor					public function TilesModel() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {								_oCONN = new SQLConnection();				_oCONN.addEventListener( SQLEvent.OPEN , _createTable , false , 10 , true);				_oCONN.open( new File((File.applicationDirectory as File).nativePath+'datas.db'));							}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel(e:Event = null) : void {									}						/**			* import function			* @public			* @param 			* @return			*/			public function importFile( o : File ) : void {				trc('importFile :::'+o);				_stSQL.text = 'INSERT INTO TilesDB (name,filepath) VALUES ("'+o.name+'","'+o.nativePath+'")';				_stSQL.execute();			}						/**			* dbUpdate function			* @public			* @param 			* @return			*/			public function dbUpdate() : void {				_onDBInit();			}						/**			* get length function			* @public			* @param 			* @return			*/			public function get length() : uint {				return _uLENGTH;						}						/**			* get files function			* @public			* @param 			* @return			*/			public function get files() : Array {				return _aFILES;			}						/**			* get selected function			* @public			* @param 			* @return			*/			public function get selected() : String {				return _aFILES[_uSELECTION].filepath;			}						/**			* set selected function			* @public			* @param 			* @return			*/			public function set selectedID( u : uint) : void {				trc('set selected ::: '+u);				_uSELECTION = u;			}					// -------o protected									/**			* 			*			* @param 			* @return			*/			protected function _createTable( e : SQLEvent ) : void {				trc('createTable');				_stSQL = new SQLStatement();				_stSQL.addEventListener (SQLErrorEvent.ERROR , _onError , false , 10 , true);				_stSQL.sqlConnection = _oCONN;				_stSQL.text = 'CREATE TABLE IF NOT EXISTS TilesDB (id INTEGER PRIMARY KEY , name TEXT , filepath TEXT)';				_stSQL.addEventListener( SQLEvent.RESULT , _onDBInit , false , 10 , true);				_stSQL.execute();			}									/**			* 			*			* @param 			* @return			*/			protected function _onDBInit( e : SQLEvent = null ) : void {				trc('onDBInit');				if(e);					_stSQL.removeEventListener( SQLEvent.RESULT , _onDBInit , false);									_stSQL.text = 'SELECT * FROM TilesDB';				_stSQL.addEventListener( SQLEvent.RESULT , _onResult , false , 10 , true);				_stSQL.execute();			}						/**			* 			*			* @param 			* @return			*/			protected function _onResult( e : SQLEvent ) : void {								_stSQL.removeEventListener( SQLEvent.RESULT , _onResult , false);				_aFILES = _stSQL.getResult().data;				_uLENGTH = (_aFILES) ? _aFILES.length : 0;				update(TilesApp.ON_DATAS);			}						/**			* 			*			* @param 			* @return			*/			protected function _onError(e:SQLErrorEvent) : void {				trc('onError ::: '+e);			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(TilesModel, args);			}	}}