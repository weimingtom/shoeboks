tends AModel implements IModel {				protected var _vPROPS		:Vector.<ToolProp>;		protected var _uLEN		:uint;		protected var _oTOOLREF		:ATool;				// -------o constructor					public function MToolProperty() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize(e : Event = null ) : void {				EventCentral.getInstance().addEventListener( ToolEvent.TOOL_INIT , _onTool , false , 10 , true );			}			/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel(e:Event = null) : void {									}						/**			* getItemAt function			* @public			* @param 			* @return			*/			public function getItemAt( u : uint ) : ToolProp {				return _vPROPS[u];			}						/**			* get length function			* @public			* @param 			* @return			*/			public function get length() : uint {				return _vPROPS.length;			}						/**			* get tool function			* @public			* @param 			* @return			*/			public function get tool() : ATool {				return _oTOOLREF;			}						/**			* setValue function			* @public			* @param 			* @return			*/			public function setValue( sPROPNAME : String , oVALUE : * = null) : void {				trc('setValue ::: '+sPROPNAME+' /// '+oVALUE);				tool[sPROPNAME] = oVALUE;			}						/**			* getValue function			* @public			* @param 			* @return			*/			public function getValue( sPROPNAME : String ) : * {				trc('getValue ::: '+sPROPNAME);				return tool[sPROPNAME];			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onTool( e : ToolEvent ) : void {				_oTOOLREF = e.toolRef;				_vPROPS = e.toolRef.properties;				_uLEN = _vPROPS.length;				update('osef');			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(MToolProperty, args);			}	}}