XML;				// -------o constructor					/**			* Constructor of the MSound class			*			* @public			* @return	void			*/			public function MSound() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize( e : Event = null ) : void {				trc('initialize ::: '+e);				_oDESC = 	<root>				      		<entry label = "SOUND" 			prop='infottl' 	type = "title" />				      		<entry label = 'Radius' 		prop='radius' 	type = "number" value = "50" min='1' max='10000'/>				      		<entry label = 'USe attenuation' 	prop='attenuate' 	type = "boolean" value = "true"/>				      		<entry label = 'Overcast' 		prop='overcast' 	type = "boolean" value = "false"/>			      		</root>;			      					      if( e !== null ){			      	var 	oEVENT : SoundEvent = e as SoundEvent;			      	_oDESC..entry.(@prop == 'radius')[0].@value = oEVENT.soundItem.RADIUS;			      	_oTARGET = oEVENT.soundItem;				}			}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel(e:Event = null) : void {									}						/**			* get panelXML function			* @public			* @param 			* @return			*/			final public function get panelXML() : XML {				return _oDESC;			}						/**			* get targetItem function			* @public			* @param 			* @return			*/			final public function get targetItem() : SoundItem {				return _oTARGET;			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(MSound, args);			}	}}