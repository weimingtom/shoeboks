gger.Logger;	import flash.events.Event;	/**	 * org.shoebox.biskwy.models.MGridTileBehavior	* @author shoebox	*/	public class MGridTileBehavior extends AModel implements IModel {				protected var _oTILE		:GridTile;		protected var _oDPMAPS		:DataProvider;				// -------o constructor					public function MGridTileBehavior() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize( e : Event = null ) : void {				_oTILE = (e as GridTileEvent).gridTile;				_oDPMAPS = new DataProvider();								var 	oSERVICE : SMaps = ServiceFactory.getService( SMaps ) as SMaps;					oSERVICE.addEventListener( ServiceEvent.ON_DATAS , _onMaps , false , 10 , true );					oSERVICE.call();			}			/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel(e:Event = null) : void {									}						/**			* get tileRef function			* @public			* @param 			* @return			*/			public function get tileRef() : GridTile {				return _oTILE;			}						/**			* get dpMaps function			* @public			* @param 			* @return			*/			public function get DPMaps() : DataProvider {				return _oDPMAPS;			}						/**			* Associate the selected behavior and options to the edited GridTile			* @public			* @return void			*/			public function associate() : void {				tileRef.behavior 	= (view as VGridTileBehavior).behavior;				tileRef.options 	= (view as VGridTileBehavior).behaviorOptions;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onMaps( e : ServiceEvent ) : void {				//trc('onMaps ::: '+e);				var a : Array = e.datas;				var u : uint = 0;				var l : uint = a.length;				for(  u ; u < l ; u++ ){					_oDPMAPS.addItem( { label : a[u].name , value : a[u].id });				}								update('osef');			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(MGridTileBehavior, args);			}	}}