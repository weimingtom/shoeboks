box.biskwy.models.TileEditorModel	* @author shoebox	*/	public class TileEditorModel extends AModel implements IModel{				protected var _oBASE		:Database;		protected var _oDATAS		:Object;				// -------o constructor					public function TileEditorModel() : void {				_oBASE = Database.getInstance();							}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {								Relegate.afterDelay( _onDelay , 100 );							}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {						}						/**			* update function			* @public			* @param 			* @return			*/			public function dbUpdate() : void {				trc('dbUpdate');								var	oDECAL : Vector3D = (view as TileEditorView).decal;								var 	oBASE : Database = Database.getInstance();					oBASE.text = 'UPDATE TilesDB SET decalX="'+oDECAL.x+'" , decalY="'+oDECAL.y+'" WHERE id="'+TilesApp.selectedID+'"';					oBASE.execute();			}						/**			* get desc function			* @public			* @param 			* @return			*/			public function get desc() : Object {				return _oBASE.getResult().data[0];			}						/**			* get name function			* @public			* @param 			* @return			*/			public function get name() : String {				return _oDATAS.name;			}						/**			* get filename function			* @public			* @param 			* @return			*/			public function get filepath() : String {				return _oDATAS.filepath;			}						/**			* get decalX function			* @public			* @param 			* @return			*/			public function get decalX() : Number {				return _oDATAS.decalX;			}						/**			* get decalY function			* @public			* @param 			* @return			*/			public function get decalY() : Number {				return _oDATAS.decalY;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onDelay ( e : TimerEvent ) : void {				_oBASE.addEventListener( SQLEvent.RESULT , _onResult , false , 10 , true);				_oBASE.text = 'SELECT * FROM TilesDB WHERE id="'+TilesApp.selectedID+'"';				_oBASE.execute();			}						/**			* 			*			* @param 			* @return			*/			protected function _onResult( e : SQLEvent ) : void {				_oBASE.removeEventListener( SQLEvent.RESULT , _onResult , false);				_oDATAS = _oBASE.getResult().data[0];				update('osef');					}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(TileEditorModel, arguments);			}	}}