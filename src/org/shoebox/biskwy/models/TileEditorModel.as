x.biskwy.models.TileEditorModel	* @author shoebox	*/	public class TileEditorModel extends AModel implements IModel{				protected var _oBASE		:Database;		protected var _oDATAS		:Object;		protected var _oCATS		:DataProvider;				// -------o constructor					public function TileEditorModel() : void {				_oBASE = Database.getInstance();							}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {								Relegate.afterFrame(view,_getCats,5);							}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {						}						/**			* update function			* @public			* @param 			* @return			*/			public function dbUpdate() : void {				trc('dbUpdate');								var	oDECAL : Vector3D = (view as TileEditorView).decal;								var 	oBASE : Database = Database.getInstance();					oBASE.text = 'UPDATE TilesDB SET decalX="'+oDECAL.x+							 '" , decalY="' + oDECAL.y +'",'+							 'walkable = '+(view as TileEditorView).isWalkable+', '+							 'cat = "'+(view as TileEditorView).cat+'", '+							 'active = '+(view as TileEditorView).isActive+' '+							 'WHERE id="' + TilesApp.selectedID+'"';					oBASE.execute();			}						/**			* get cats function			* @public			* @param 			* @return			*/			public function get cats() : DataProvider {				return _oCATS;			}						/**			* get cat function			* @public			* @param 			* @return			*/			public function get cat() : String {				return _oDATAS.cat;			}						/**			* get desc function			* @public			* @param 			* @return			*/			public function get desc() : Object {				return _oBASE.getResult().data[0];			}						/**			* get name function			* @public			* @param 			* @return			*/			public function get name() : String {				return _oDATAS.name;			}						/**			* get filename function			* @public			* @param 			* @return			*/			public function get filepath() : String {				return _oDATAS.filepath;			}						/**			* get decalX function			* @public			* @param 			* @return			*/			public function get decalX() : Number {				return _oDATAS.decalX;			}						/**			* get decalY function			* @public			* @param 			* @return			*/			public function get decalY() : Number {				return _oDATAS.decalY;			}						/**			* get property function			* @public			* @param 			* @return			*/			public function property( s : String ) : * {				trace('get property ::: '+s+' /// '+_oDATAS[s]);				return _oDATAS[s];			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _getCats( e : Event = null ) : void {				_oBASE.addEventListener( SQLEvent.RESULT , _onCats , false , 10 , true);				_oBASE.text = 'SELECT DISTINCT cat FROM TilesDB';				_oBASE.execute();			}						/**			* 			*			* @param 			* @return			*/			protected function _onCats( e : SQLEvent  ) : void {				trc('_onCats');				e.currentTarget.removeEventListener( SQLEvent.RESULT , _onCats , false);								_oCATS = new DataProvider();				var o : Object;				for each( o in _oBASE.getResult().data){					trace(o.cat);					if(o.cat !== null)						_oCATS.addItem({label : o.cat , value : o.cat });				}				_getTiles();			}						/**			* 			*			* @param 			* @return			*/			protected function _getTiles ( ) : void {				trc('_getTiles');								_oBASE.addEventListener( SQLEvent.RESULT , _onResult , false , 10 , true);				_oBASE.text = 'SELECT * FROM TilesDB WHERE id="'+TilesApp.selectedID+'"';				_oBASE.execute();			}						/**			* 			*			* @param 			* @return			*/			protected function _onResult( e : SQLEvent ) : void {				trc('_onResult > '+e.target);				e.currentTarget.removeEventListener( SQLEvent.RESULT , _onResult , false);								_oDATAS = _oBASE.getResult().data[0];				update('hello');						}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(TileEditorModel, arguments);			}	}}