patterns.mvc.interfaces.IModel;	import org.shoebox.patterns.service.ServiceEvent;	import org.shoebox.patterns.service.ServiceFactory;	import org.shoebox.utils.display.STAGEINSTANCE;	import org.shoebox.utils.logger.Logger;	import flash.events.Event;	import flash.events.TimerEvent;	import flash.filesystem.File;	import flash.filesystem.FileStream;	import flash.utils.ByteArray;	import flash.utils.Timer;	/**	 * <p>Model of the map application	* inherit of <b>AModel</b>	* implements <b>IModel</b></p>	* 	* @see AModel	* @see IModel	* org.shoebox.biskwy.models.MapModel	* @author shoebox	*/	public class MapModel extends AModel implements IModel {				protected var _oCONTENT		:ByteArray;		protected var _oFILE		:File;		protected var _oSTREAM		:FileStream;		protected var _oSERVICE		:SGetMap;		protected var _oTIMER		:Timer;		protected var _vCONTENT		:Vector.<GridTile> = new Vector.<GridTile>();				// -------o constructor					public function MapModel() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				_oSERVICE = ServiceFactory.getService(SGetMap) as SGetMap;				_oSERVICE.addEventListener( ServiceEvent.ON_DATAS , _onOpening , false , 100 , false );			}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {				if(_oTIMER)					_oTIMER.stop();									_oTIMER.removeEventListener(TimerEvent.TIMER , _next , false);				_oSERVICE.removeEventListener( ServiceEvent.ON_DATAS , _onOpening , false);			}						/**			* register function			* @public			* @param 			* @return			*/			public function register( t : GridTile ) : void {				_vCONTENT.push(t);			}						/**			* clear function			* @public			* @param 			* @return			*/			public function clear() : void {							var oFUNC : Function = function( o : GridTile , index : int , v : Vector.<GridTile> ):void{					o.clear();					};								_vCONTENT.forEach( oFUNC );			}						/**			* save function			* @public			* @param 			* @return			*/			public function save() : void {				_save();			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _getContent() : ByteArray {				_oCONTENT = new ByteArray();				_oCONTENT.writeShort((Config.GRIDTYPE==IsoGrid) ? 0 : 1);				_oCONTENT.writeInt(Config.GRID_WIDTH);				_oCONTENT.writeInt(Config.GRID_HEIGHT);				var oFUNC : Function = function( o : GridTile , index : int , v : Vector.<GridTile> ):void{					_oCONTENT.writeInt(o.position.x);					_oCONTENT.writeInt(o.position.y);					_oCONTENT.writeObject(o.container.content);				};				_vCONTENT.forEach( oFUNC );				_oCONTENT.compress();				return _oCONTENT;			}						/**			* 			*			* @param 			* @return			*/			protected function _onOpening( e : ServiceEvent ) : void {				trc('_onOpening > '+e.datas);								if(!e.datas)					return;									//_vCONTENT = new Vector.<GridTile>();				STAGEINSTANCE.mouseChildren = false;				_oCONTENT = e.datas[0].data;				_oCONTENT.uncompress();												//					Config.GRIDTYPE = (_oCONTENT.readShort() == 0) ? IsoGrid : TwoD;					Config.GRID_WIDTH = _oCONTENT.readInt();					Config.GRID_HEIGHT = _oCONTENT.readInt();					trace('TYPE : ' + Config.GRIDTYPE);					trace('WIDTH : ' + Config.GRID_WIDTH);					trace('HEIGHT : ' + Config.GRID_HEIGHT);								//					update('hello');								//					_oTIMER = new Timer(.1);					_oTIMER.addEventListener(TimerEvent.TIMER , _next , false , 10 , true);					_oTIMER.start();			}						/**			* 			*			* @param 			* @return			*/			protected function _next( e : TimerEvent = null ) : void {								//					if(_oCONTENT.bytesAvailable==0){						_oTIMER.stop();								STAGEINSTANCE.mouseChildren = true;						return;					}								//					var o : GridTile = (view as VMap).getTileAt(_oCONTENT.readInt() , _oCONTENT.readInt());					var d : Vector.<int> = _oCONTENT.readObject();								//					if(d){						var l : uint = d.length;						var i : int = 0;						while( i < l){							o.container.fill(TilesApp.getTilebyID(d.shift()),d.shift(),true);							i+=2;						}						}							}						/**			* 			*			* @param 			* @return			*/			protected function _save() : void {				var 	o : SMapUpdate = ServiceFactory.getService(SMapUpdate) as SMapUpdate;					o.id = AppMaps.selectedID;					o.datas =  _getContent();					o.call();			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(MapModel, arguments);			}	}}