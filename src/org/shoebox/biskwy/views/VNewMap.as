s.MouseEvent;	/**	 * org.shoebox.biskwy.views.VNewMap	* @author shoebox	*/	public class VNewMap extends AView implements IView{				protected var _oBUTTONV	:Button;		protected var _oBUTTONC	:Button;		protected var _oCOMBO		:ComboBox;		protected var _oSTEPPERN	:NumericStepper;		protected var _oSTEPPERW	:NumericStepper;		protected var _oSTEPPERH	:NumericStepper;				// -------o constructor					public function VNewMap() : void {			}		// -------o public						/**			* update function			* @public			* @param 			* @return			*/			final override public function update( o : UpdateEvent = null ) : void {						}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {									}						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				_draw();			}						/**			* get width function			* @public			* @param 			* @return			*/			public function get tileswidth() : uint {				return _oSTEPPERW.value;			}						/**			* get height function			* @public			* @param 			* @return			*/			public function get tilesheight() : uint {				return _oSTEPPERH.value;			}						/**			* get cat function			* @public			* @param 			* @return			*/			public function get cat() : Namespace {				return _oCOMBO.selectedItem.value;			}						/**			* get tileSize function			* @public			* @param 			* @return			*/			public function get tileSize() : uint {				return _oSTEPPERN.value;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _draw() : void {												addChild(Factory.build(Label,{ text : 'Type of the map' , x: 20 , y : 20}));				addChild(Factory.build(Label,{ text : 'Width (Tiles count)' , x: 20 , y : 90}));				addChild(Factory.build(Label,{ text : 'Height (Tiles count)' , x: 160 , y : 90}));				addChild(Factory.build(Label,{ text : 'Tile size' , x: 20 , y : 160}));								_oCOMBO = Factory.build(ComboBox, { x: 20, y : 40, width : 260});				_oSTEPPERW = Factory.build(NumericStepper, { minimum : 0, maximum : 1000, x : 20, y : 110, value : 30});				_oSTEPPERH = Factory.build(NumericStepper, { minimum : 0, maximum : 1000, x : 160, y : 110, value : 30});				_oSTEPPERN = Factory.build(NumericStepper, { minimum : 0, maximum : 1000, x : 20, y : 180, value : 30});				_oSTEPPERN.value = 30;				_oBUTTONV = Factory.build(Button, { x : 20, y : 250, label:'Validate' , width : 120 , name:'Validate'});				_oBUTTONC = Factory.build(Button, { x : 160, y : 250, label:'Cancel' , width : 120 , name : 'Cancel'});								addChild(_oCOMBO);						addChild(_oSTEPPERW);						addChild(_oSTEPPERH);						addChild(_oSTEPPERN);						addChild(_oBUTTONV);						addChild(_oBUTTONC);										_oCOMBO.dataProvider = (model as MNewMap).cats;				_oCOMBO.selectedIndex = 1;								controller.register( _oBUTTONV, MouseEvent.CLICK , false , 10 , true);				controller.register( _oBUTTONC, MouseEvent.CLICK , false , 10 , true);			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(VNewMap, arguments);			}	}}