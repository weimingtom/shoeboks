.shoebox.utils.logger.Logger;	import flash.display.Shape;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	/**	 * org.shoebox.biskwy.views.TilesView	* @author shoebox	*/	public class TilesView extends AView implements IView , IResizeable {				protected var _vITEMS			:Vector.<TileItem>;		protected var _spCONTAINER		:Sprite = new Sprite();		protected var _shBORDER		:Shape = new Shape();				// -------o constructor					public function TilesView() : void {				_vITEMS = new Vector.<TileItem>();				addChild(_shBORDER);				addChild(_spCONTAINER);								StageResize.register(this);							}		// -------o public							/**			* update function			* @public			* @param 			* @return			*/			override final public function update(o:UpdateEvent = null) : void {								switch(o.type){										case TilesApp.ON_DATAS:						_redraw();						break;									}								controller.register(_spCONTAINER , MouseEvent.CLICK , true , 0, true );				StageResize.register(this);			}												/**			* cancel function			* @public			* @param 			* @return			*/			override final public function cancel(e:Event = null) : void {												}						/**			* onResize function			* @public			* @param 			* @return			*/			public function onResize( e : Event = null ) : void {				_border();				_redraw();			}						/**			* initialize function			* @public			* @param 			* @return			*/			override public function initialize() : void {						}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _border() : void {				trc('border');				var h : uint = StageResize.rect.height * .25 ;								_shBORDER.graphics.clear();				_shBORDER.graphics.beginFill(0xFFFFFF);				_shBORDER.graphics.lineStyle(1,0xAAAAAA);				_shBORDER.graphics.drawRect(0,0,StageResize.rect.width,h);				_shBORDER.graphics.endFill();								y = StageResize.rect.height - h;			}						/**			* 			*			* @param 			* @return			*/			protected function _redraw() : void {								if((model as TilesModel).length==0)					return;									var l : uint = (model as TilesModel).length - 1;				var a : Array = (model as TilesModel).files;				var i : int = -1;								var	uX:uint = 0;				var	uY:uint = 0;				var 	uMAXX:uint = StageResize.rect.width / (Config.TILEITEMSIZE + 10);				var o : TileItem;				while( i++ < l ){										o = _spCONTAINER.getChildByName(a[i].name) as TileItem;										if(o==null){						o = new TileItem( a[i] , i);						o.name = a[i].name;						_spCONTAINER.addChild(o);						_vITEMS.push(o);					}										o.x = uX * (Config.TILEITEMSIZE+5) + 5;					o.y = uY * (Config.TILEITEMSIZE+5);					uX++;					if(uX > uMAXX){						uX = 0;						uY++;					}									}											}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(TilesView, args);			}	}}