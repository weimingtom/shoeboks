tends AView implements IView{				protected var _shBAR		:Shape = new Shape();		protected var _oFIELD		:TextField;		protected var _oTFPRC		:TextField;				// -------o constructor					/**			* Constructor of the VProgress class			*			* @public			* @return	void			*/			public function VProgress() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				_shBAR.x = 10;				_shBAR.y = 50;				graphics.beginFill( 0x2A2A2A );				graphics.drawRect( 0 , 0 , 400 , 100 );				graphics.endFill();								graphics.lineStyle( .1 , 0xFFFFFF , .5 , true);				graphics.drawRect( 8 , 48 , 382 , 24 );				addChild(_shBAR);								_oFIELD = Factory.build( TextField , { x : 10 , y : 20 , width : 380 , embedFonts : true} );				_oFIELD.defaultTextFormat = new TextFormat('PF Tempesta Seven', 8 , 0xFFFFFF , false);				addChild(_oFIELD);								_oTFPRC = Factory.build( TextField , { x : 10 , y : 50 , height : 20 , width : 380 , text : ''});				_oTFPRC.defaultTextFormat = new TextFormat('PF Tempesta Seven', 8 , 0xFFFFFF , true,null,null,null,null,'center');				addChild(_oTFPRC);			}						/**			* update function			* @public			* @param 			* @return			*/			override final public function update(o:UpdateEvent = null) : void {							}												/**			* cancel function			* @public			* @param 			* @return			*/			override final public function cancel(e:Event = null) : void {												}						/**			* draw function			* @public			* @param 			* @return			*/			public function draw( nPRC : uint , sTXT : String ) : void {				_shBAR.graphics.clear();				_shBAR.graphics.beginFill( 0x08A6F3 );				_shBAR.graphics.drawRect( 0 , 0 , (nPRC / 100) * 382 , 21 );				_shBAR.graphics.endFill();				_oTFPRC.text = nPRC+' %';				_oFIELD.text = sTXT;  			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(VProgress, args);			}	}}