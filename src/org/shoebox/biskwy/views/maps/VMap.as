box.patterns.mvc.abstracts.AView;	import org.shoebox.patterns.mvc.events.UpdateEvent;	import org.shoebox.patterns.mvc.interfaces.IView;	import org.shoebox.utils.logger.Logger;	import flash.display.MovieClip;	import flash.display.Shape;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.Matrix;	/**	 * Base class for all the map types	* @see MapTwoD	* @see IsoMap	* 	* org.shoebox.biskwy.views.maps.VMap	* @author shoebox	*/	public class VMap extends AView implements IView , IStageable , IResizeable{				public var nSCALE		:Number = 1;				protected var _oSCROLL			:ScrollPane = new ScrollPane();		protected var _spCONTAINER		:Sprite = new Sprite();		protected var _shBACK			:Shape = new Shape();		protected var _shCONTROLS		:MovieClip = new MovieClip();				// -------o constructor					public function VMap() : void {				Main.currentMAP = _spCONTAINER;				Main.MAP = this;			}		// -------o public							/**			* onResize function			* @public			* @param 			* @return			*/			public function onStaged(e:Event = null) : void {								//					var v:Vector.<uint> = Vector.<uint>([ 50 , 100 , 125 , 150 , 200 ]);					var u : uint;					var x : uint = 50;					_shCONTROLS.addChild( Factory.build( Label , { text : 'ZOOM' , width : 100 , x : 10 , y: 8}));					for each( u in v){						_shCONTROLS.addChild(Factory.build( Button , { toggle : (u==100) ? true : false , width : 40 , label : u + '%' , x : x , y : 5 , name : u.toString()} ));						x+=50;					}					controller.register( _shCONTROLS , MouseEvent.CLICK , true , 10 , false);													_shBACK.graphics.beginFill(0x2A2A2A);				_shBACK.graphics.drawRect(0,0,800,600);				_shBACK.graphics.endFill();								addChild(_shBACK);				addChild(_spCONTAINER);				addChild(_oSCROLL);				addChild(_shCONTROLS);								_oSCROLL.useBitmapScrolling = true;				_oSCROLL.y = _spCONTAINER.y = Config.HEADDECAL;				_oSCROLL.source = _spCONTAINER;								//STAGEINSTANCE.addEventListener( MouseEvent.MOUSE_WHEEL , _onWheel , false , 10 ,true);					controller.register(_spCONTAINER , MouseEvent.MOUSE_OVER , true ,10 , false);				controller.register(_spCONTAINER , MouseEvent.MOUSE_OUT , true ,10 , false);																StageResize.register(this);				onResize();					}						/**			* On stage Resize			* @public				* @param 	e : Event 			* @return	void			*/			public function onResize( e : Event = null ) : void {				_shBACK.width = _oSCROLL.width = StageResize.rect.width - 250 ;				_shBACK.height = StageResize.rect.height * .75;				_oSCROLL.height = StageResize.rect.height * .75 - Config.HEADDECAL;								_shCONTROLS.graphics.clear();				_shCONTROLS.graphics.beginFill(0xEAEAEA);				_shCONTROLS.graphics.drawRect( 0 , 0 , StageResize.rect.width - 250 , Config.HEADDECAL);				_shCONTROLS.graphics.endFill();							}			/**			* onRemoved function			* @public			* @param 			* @return			*/			public function onRemoved(e:Event = null) : void {												}						/**			* update function			* @public			* @param 			* @return			*/			override public function update( o : UpdateEvent = null ) : void {						}									/**			* cancel function			* @public			* @param 			* @return			*/			override public function cancel( e : Event = null ) : void {									}						/**			* Initialization of the view			* @public			* @return			*/			override public function initialize() : void {						}						/**			* Redraw the map container to applying the zoom modification via Matrix scale			* @public				* @return	void			*/			public function redraw() : void {				var 	oMAT:Matrix = _spCONTAINER.transform.matrix;					oMAT.identity();					oMAT.scale(nSCALE , nSCALE);									_spCONTAINER.transform.matrix = oMAT;				_oSCROLL.update();			}						/**			* Clear the content of all the tiles of the map			* @public				* @return	void			*/			public function clear() : void {								var o : GridTile;				var l : uint = _spCONTAINER.numChildren;				var i : int = 0;				for( i ; i < l ; i ++ ){					o = _spCONTAINER.getChildAt(i) as GridTile;					o.clear();				}			}			/**			* Reset the state of all Tiles in to the currentMAP			* @public			* @return	void			*/			public function out() : void {				trc('clear');				var o : GridTile;				var l : uint = _spCONTAINER.numChildren;				var i : int = 0;				for( i ; i < l ; i ++ ){					o = _spCONTAINER.getChildAt(i) as GridTile;					o.out();				}			}						/**			* Get the GridTile instance at the specified position			* @public			* @param 	iX : x isometric position			* @param 	iY : y isometric position			* @return	Grid Tile instance at the position	(GridTile)			*/			public function getTileAt( iX : uint , iY : uint ) : GridTile {				return _spCONTAINER.getChildByName('tile'+iX+'_'+iY) as GridTile;			}						/**			* setScale function			* @public			* @param 			* @return			*/			public function setScale( n : Number ) : void {				trc('setScale ::: '+n);				nSCALE = n;				redraw();			}						/**			* pan function			* @public			* @param 			* @return			*/			public function pan( x : int , y : int ) : void {				_oSCROLL.move( x , y);			}		// -------o protected						/**			* On mouse wheel			*			* @param 	e : Mousewheel event (MouseEvent)			* @return	void			*/			protected function _onWheel( e : MouseEvent ) : void {								nSCALE+= (e.delta > 0) ? +.1 : -.1;				nSCALE = Math.min(Math.abs(nSCALE) , 2) * nSCALE/nSCALE;				redraw();			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(VMap, arguments);			}	}}