t org.shoebox.utils.display.STAGEINSTANCE;	import org.shoebox.utils.logger.Logger;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.Matrix;	/**	 * org.shoebox.biskwy.views.maps.VMap	* @author shoebox	*/	public class VMap extends AView implements IView , IStageable , IResizeable{				public var nSCALE		:Number = 1;				protected var _oSCROLL			:ScrollPane = new ScrollPane();		protected var _spCONTAINER		:Sprite = new Sprite();				// -------o constructor					public function VMap() : void {				Main.currentMAP = _spCONTAINER;			}		// -------o public							/**			* onResize function			* @public			* @param 			* @return			*/			public function onStaged(e:Event = null) : void {				addChild(_spCONTAINER);				addChild(_oSCROLL);								_oSCROLL.source = _spCONTAINER;								STAGEINSTANCE.addEventListener( MouseEvent.MOUSE_WHEEL , _onWheel , false , 10 ,true);									StageResize.register(this);				onResize();					}						/**			* onResize function			* @public			* @param 			* @return			*/			public function onResize( e : Event = null ) : void {				_oSCROLL.width = StageResize.rect.width * .75;				_oSCROLL.height = StageResize.rect.height * .75 - Config.HEADDECAL;			}			/**			* onRemoved function			* @public			* @param 			* @return			*/			public function onRemoved(e:Event = null) : void {												}						/**			* update function			* @public			* @param 			* @return			*/			override public function update( o : UpdateEvent = null ) : void {						}									/**			* cancel function			* @public			* @param 			* @return			*/			override public function cancel( e : Event = null ) : void {									}						/**			* initialize function			* @public			* @param 			* @return			*/			override public function initialize() : void {						}						/**			* redraw function			* @public			* @param 			* @return			*/			public function redraw() : void {				var 	oMAT:Matrix = _spCONTAINER.transform.matrix;					oMAT.identity();					oMAT.scale(nSCALE , nSCALE);									_spCONTAINER.transform.matrix = oMAT;				_oSCROLL.update();			}											// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onWheel( e : MouseEvent ) : void {								nSCALE+= (e.delta > 0) ? +.1 : -.1;				nSCALE = Math.min(Math.abs(nSCALE) , 2) * nSCALE/nSCALE;				redraw();			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(VMap, arguments);			}	}}