ed var _oPANEL			:PropsPanel;				// -------o constructor					/**			* Constructor of the VSound class			*			* @public			* @return	void			*/			public function VSound() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			override final public function initialize() : void {				_panel();			}						/**			* update function			* @public			* @param 			* @return			*/			override final public function update(o:UpdateEvent = null) : void {						}												/**			* cancel function			* @public			* @param 			* @return			*/			override final public function cancel(e:Event = null) : void {				controller.unRegister(_oPANEL , Event.CHANGE , true );							}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _panel() : void {				_oPANEL = new PropsPanel();				_oPANEL.setSize( 250 , 250 );				_oPANEL.dataProvider = (model as MSound).panelXML;				addChild( _oPANEL );								controller.register(_oPANEL , Event.CHANGE , true , 0 , true);			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(VSound, args);			}	}}