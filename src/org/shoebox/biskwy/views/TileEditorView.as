mport org.shoebox.utils.logger.Logger;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.geom.Vector3D;	/**	 * org.shoebox.biskwy.views.TileEditorView	* @author shoebox	*/	public class TileEditorView extends AView implements IView{				protected var _oBUTTON			:Button;				protected var _oSTEPPERX		:NumericStepper;		protected var _oSTEPPERY		:NumericStepper;		protected var _spCONTAINER		:Sprite;		protected var _oLAYER			:TileLayer;							// -------o constructor					public function TileEditorView() : void {			}		// -------o public						/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				_oBUTTON = Factory.build(Button , {x : 20 , y  : 80 , label : 'Validate'});				_oSTEPPERX = Factory.build(NumericStepper , { minimum : -10000 , maximum : 10000 , x : 20 , y : 20 , value : 0});				_oSTEPPERY = Factory.build(NumericStepper , { minimum : -10000 , maximum : 10000 , x : 20 , y : 50 , value : 0});				addChild(_oSTEPPERX);				addChild(_oSTEPPERY);				addChild(_oBUTTON);				_preview();			}						/**			* update function			* @public			* @param 			* @return			*/			final override public function update( o : UpdateEvent = null ) : void {				_oLAYER.id = TilesApp.selectedID;				_oLAYER.addEventListener( Event.COMPLETE , _onResponse , false , 10 , true);			}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {									}						/**			* change function			* @public			* @param 			* @return			*/			public function change() : void {				trc('change');				_oLAYER.decal = new Vector3D(_oSTEPPERX.value , _oSTEPPERY.value , 0);			}						/**			* get decal function			* @public			* @param 			* @return			*/			public function get decal() : Vector3D {				return _oLAYER.decal;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onResponse( e : Event ) : void {				_oSTEPPERX.value = _oLAYER.decal.x;				_oSTEPPERY.value = _oLAYER.decal.y;				(controller as TileEditorController).register(this,Event.CHANGE,true,0,true);				(controller as TileEditorController).register(_oBUTTON , MouseEvent.CLICK , false , 10 , true);			}						/**			* 			*			* @param 			* @return			*/			protected function _preview() : void {				//					_oLAYER = new TileLayer();						_oLAYER.x = 600;					_oLAYER.y = 300;					addChild(_oLAYER);												//					var v : Vector3D = new Vector3D(5,15);					var w : Number = Config.TILESIZE;					var h : Number = Config.TILESIZE / 2;								//					_spCONTAINER = new Sprite();					_spCONTAINER.graphics.lineStyle( .1 , 0xFF0000 , 1 , true);					_spCONTAINER.graphics.moveTo( 0 , h / 2);					_spCONTAINER.graphics.lineTo( w/2 , 0 );					_spCONTAINER.graphics.lineTo( w , h/2 );					_spCONTAINER.graphics.lineTo( w/2 , h );					_spCONTAINER.graphics.lineTo( 0 , h/2 );					_spCONTAINER.x = 600;					_spCONTAINER.y = 300;					addChild(_spCONTAINER);							}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(TileEditorView, arguments);			}	}}