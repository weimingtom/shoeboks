sh.events.Event;	import flash.events.MouseEvent;	import flash.geom.Point;	import flash.geom.Rectangle;	import flash.geom.Vector3D;	import flash.text.TextField;	import flash.text.TextFieldType;	/**	 * org.shoebox.biskwy.views.TileEditorView	* @author shoebox	*/	public class TileEditorView extends AView implements IView{				protected var _oBUTTON			:GenericButton;		protected var _spINTERFACE		:Sprite = new Sprite();		protected var _spVIEW			:Sprite = new Sprite();		protected var _oGRID			:Grid;		protected var _spCONTAINER		:GridTile;		protected var _oTFDECALX		:TextField;		protected var _oTFDECALY		:TextField;				// -------o constructor					public function TileEditorView() : void {										}		// -------o public						/**			* update function			* @public			* @param 			* @return			*/			final override public function update( o : UpdateEvent = null ) : void {				_run();			}									/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {									}						/**			* initialize function			* @public			* @param 			* @return			*/			override public function initialize() : void {				addChild(_spVIEW);					_interface();				_init();			}						/**			* get decalX function			* @public			* @param 			* @return			*/			public function get decalX() : Number {				return Number(_oTFDECALX.text);			}						/**			* get decalY function			* @public			* @param 			* @return			*/			public function get decalY() : Number {				return Number(_oTFDECALY.text);			}						/**			* set decal function			* @public			* @param 			* @return			*/			public function set decal( pt : Point ) : void {				_spCONTAINER.decal = pt;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _interface() : void {								_spINTERFACE.x = 800;				addChild(_spINTERFACE);								_oTFDECALX = Factory.build(TextField , {border : true , text : '0' , border : true , width : 100 , height : 20 , type : TextFieldType.INPUT , y : 10});				_oTFDECALY = Factory.build(TextField , {border : true , text : '0' , border : true , width : 100 , height : 20 , type : TextFieldType.INPUT , y : 30});								_oBUTTON = Factory.build(GenericButton , {text : 'OK' , y : 100 , name :'valid'});				_oBUTTON.onStaged();				_spINTERFACE.addChild(_oTFDECALX);				_spINTERFACE.addChild(_oTFDECALY);				_spINTERFACE.addChild(_oBUTTON);								controller.register(_oBUTTON , MouseEvent.CLICK,false,10,true);				controller.register(_oTFDECALX , Event.CHANGE,false,10,true);				controller.register(_oTFDECALY , Event.CHANGE,false,10,true);			}			/**			* 			*			* @param 			* @return			*/			protected function _init() : void {				trc('init');								_spVIEW.scrollRect = new Rectangle(0,0,800,600);				_spVIEW.cacheAsBitmap = true;								_oGRID = new Grid();				_oGRID.rect = new Rectangle(0,0,800,600);				_spVIEW.addChild(_oGRID);				_oGRID.redraw();								var v : Vector3D = new Vector3D(5,15);								_spCONTAINER = new GridTile(1,0xFF0000);				_spCONTAINER.x = v.x * Config.TILESIZE - ((v.y % 2) ? 0 : Config.TILESIZE/2);				_spCONTAINER.y = v.y * ( Config.TILESIZE / 4) - Config.TILESIZE / 2;				_spVIEW.addChild(_spCONTAINER);			}						/**			* 			*			* @param 			* @return			*/			protected function _run() : void {				_spCONTAINER.setContent();			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(TileEditorView, arguments);			}	}}