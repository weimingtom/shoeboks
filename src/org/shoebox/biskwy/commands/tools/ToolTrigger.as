	import org.shoebox.biskwy.commands.trigger.CommandTrigger;	import org.shoebox.biskwy.core.Config;	import org.shoebox.biskwy.core.IsoGrid;	import org.shoebox.biskwy.core.TwoD;	import org.shoebox.biskwy.core.variables.CurrentMap;	import org.shoebox.biskwy.core.variables.GizmoContainer;	import org.shoebox.biskwy.events.GridTileEvent;	import org.shoebox.biskwy.items.GridTile;	import org.shoebox.biskwy.items.TriggerItem;	import org.shoebox.biskwy.utils.Transformer;	import org.shoebox.events.EventCentral;	import org.shoebox.patterns.factory.Factory;	import org.shoebox.patterns.singleton.ISingleton;	import org.shoebox.utils.logger.Logger;	import flash.events.Event;	import flash.geom.Vector3D;	/**	 * org.shoebox.biskwy.commands.tools.ToolTrigger	* @author shoebox	*/	public class ToolTrigger extends ATool implements ISingleton {								protected static var __instance		:ToolTrigger = null;				// -------o constructor					/**			* Constructor of the ToolTrigger class			*			* @public			* @return	void			*/			public function ToolTrigger( e : SingletonEnforcer ) : void {							}		// -------o public						/**			* When the trigger tool is executed			* 			* @public				* @param 	e : optional event (Event)			* @return	void			*/			final override public function onExecute( e : Event = null ) : void {				trc('onExecute ::: '+CommandTrigger.getInstance());				EventCentral.getInstance().addEventListener( GridTileEvent.GRIDTILE_CLICK, _onEvent , false , 10 , true );				CommandTrigger.getInstance().execute(e);			}						/**			* When the trigger tool is canceled			* 			* @public			* @param 	e : optional event (Event)			* @return	void			*/			final override public function onCancel( e : Event = null ) : void {				_bISCANCEL = false;				EventCentral.getInstance().removeEventListener( GridTileEvent.GRIDTILE_CLICK, _onEvent , false );				CommandTrigger.getInstance().cancel(e);				if(CurrentMap)					CurrentMap.out();			}		// -------o protected						/**			* Initialization of the groups window			*			* @return void			*/			protected function _initWindow() : void {							}						/**			* When the trigger receive an event 			*			* @param 	e : received event (Event)			* @return	void			*/			protected function _onEvent( e : Event ) : void {							switch(e.type){													case GridTileEvent.GRIDTILE_CLICK:						var 	g : GridTile = (e as GridTileEvent).gridTile;												var	vPOSTOD : Vector3D;						var	vPOSWLD : Vector3D;													//							if(Config.GRIDTYPE == TwoD){																vPOSWLD = Transformer.screenToWorld(g.position.clone());								vPOSWLD.x += Config.TILESIZE / 2;								vPOSWLD.y += Config.TILESIZE / 2;															}else if( Config.GRIDTYPE == IsoGrid ) {																vPOSTOD = new Vector3D( g.position.x , g.position.y );								vPOSWLD = Transformer.screenToWorld( vPOSTOD );								vPOSWLD.scaleBy( Config.TILESIZE / 2 );																vPOSWLD.x += Config.TILESIZE/2 ;								vPOSWLD.x +=  (Config.GRID_WIDTH/2)* Config.TILESIZE;																vPOSWLD.y = vPOSWLD.y + Config.TILESIZE/4;							}													//								var 	oPROPS : Object = CommandTrigger.getInstance().model.props;							var 	oITEM : TriggerItem = Factory.build( TriggerItem , { x : vPOSWLD.x , y : vPOSWLD.y , position : g.position.clone()}) as TriggerItem;								oITEM.name 		= 'Trigger_'+BoxMath.toString( GizmoContainer.numChildren , 3 );								oITEM.radius 	= oPROPS.radius;								oITEM.shape 	= oPROPS.shape;								oITEM.triggerID 	= oPROPS.triggerid;							GizmoContainer.addChild( oITEM );												break;				}							}											// -------o misc			public static function trc(...args : *) : void {				Logger.log(ToolTrigger, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (ToolTrigger)			*/			static public function getInstance() : ToolTrigger {								if( !__instance )					__instance = new ToolTrigger( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}