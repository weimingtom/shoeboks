RGET		:Sprite;				// -------o constructor					public function ATool() : void {			}		// -------o public						/**			* set target function			* @public			* @param 			* @return			*/			public function set map( map : Sprite  ) : void {				_oTARGET = map;			}						/**			* get target function			* @public			* @param 			* @return			*/			public function get map() : Sprite {				return _oTARGET;			}						/**			* onExecute function			* @public			* @param 			* @return			*/			override public function onExecute( e : Event = null ) : void {						}						/**			* onCancel function			* @public			* @param 			* @return			*/			override public function onCancel( e : Event = null ) : void {						}					// -------o protected						/**			* Get the tiles under the specified rect 			*			* @param 	iX : x source position	(uint)			* @param 	iY : y source position	(uint)			* @return	list of tiles around the specified point (Vector.<GridTile>)			*/			protected function _getTiles( iX : uint , iY : uint , uSIZE : uint = 1) : Vector.<GridTile> {								var v : Vector.<GridTile> = new Vector.<GridTile>();				var g : GridTile;						var x : int = -uSIZE;				var y : int;				for(y = -uSIZE  ; y < uSIZE ; y++){					for(x = -uSIZE ; x < uSIZE ; x++){						g = Main.MAP.getTileAt(iX + x , (iY + y)); 						if(g)							v.push(g);													}				}				return v;			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(ATool, arguments);			}	}}