box.utils.logger.Logger;	import flash.errors.IllegalOperationError;	import flash.events.Event;	/**	 * org.shoebox.biskwy.commands.tools.ATool	* @author shoebox	*/	public class ATool extends AbstractCommand implements ICommand{				public static const P_COMBOBOX	:String = 'P_COMBOBOX';		public static const P_CHECKBOX	:String = 'P_CHECKBOX';		public static const P_STEPPER		:String = 'P_STEPPER';				protected var _bREPLACE		:Boolean = false;		protected var _oTARGET		:VMap;		protected var _uSIZE		:uint = 2;		protected var _uTILEID		:uint;		protected var _oTILEDESC	:Object;		protected var _vPROPS		:Vector.<ToolProp> = new Vector.<ToolProp>();				// -------o constructor					public function ATool() : void {				EventCentral.getInstance().addEventListener( MapEvent.MAP_OPEN , _onMap , false , 10 , true);				}		// -------o public						/**			* Setter of the selected tile id			* @public				* @param 	u : selected tile ID in to the Tiles list (uint)			* @return	void			*/			public function set tileID( u : uint ) : void {				_uTILEID = u;			}						/**			* Getter of the tile ID			* @public			* @return selected tile ID	(uint)			*/			public function get tileID() : uint {				return _uTILEID;			}						/**			* set tileDESC function			* @public			* @param 			* @return			*/			public function set tileDESC( o : Object ) : void {				_oTILEDESC = o;			}						/**			* get tileDESC function			* @public			* @param 			* @return			*/			public function get tileDESC() : Object {				return _oTILEDESC;			}						/**			* Setter of the tool shape size			* @public			* @param 	u : size (uint)			* @return	void			*/			public function set size( u : uint ) : void {				trc('setsize ::: '+u);				_uSIZE = u;			}									/**			* Tool shape size			* @public			* @param 	size : size of the tool (uint)			* @return	void			*/			public function get size() : uint {				return _uSIZE;			}						/**			* set replace function			* @public			* @param 			* @return			*/			public function set replace( b : Boolean ) : void {				trc('set replace ::: '+b);				_bREPLACE = b;			}						/**			* get replace function			* @public			* @param 			* @return			*/			public function get replace() : Boolean {				return _bREPLACE;			}						/**			* addProperty function			* @public			* @param 			* @return			*/			public function addProperty( sTYPE : String , oPROPS : Object , sPROP : String, oDP : DataProvider = null  ) : void {				if(oDP)					_vPROPS.push( Factory.build( ToolProp , { propName : sPROP , type : sTYPE , props : oPROPS , dataProvider : oDP } ));				else					_vPROPS.push( Factory.build( ToolProp , { propName : sPROP , type : sTYPE , props : oPROPS } ));			}						/**			* get properties function			* @public			* @param 			* @return			*/			public function get properties() : Vector.<ToolProp> {				return _vPROPS;			}							/**			* set target function			* @public			* @param 			* @return			*/			public function set map( map : VMap  ) : void {				_oTARGET = map;			}						/**			* get target function			* @public			* @param 			* @return			*/			public function get map() : VMap {				return _oTARGET;			}						/**			* onExecute function			* @public			* @param 			* @return			*/			override public function onExecute( e : Event = null ) : void {						}						/**			* onCancel function			* @public			* @param 			* @return			*/			override public function onCancel( e : Event = null ) : void {						}						/**			* redraw function			* @public			* @param 			* @return			*/			public function redraw() : void {				throw new IllegalOperationError(Errors.DONOTHING);			}					// -------o protected						/**			* When a map is opened			*			* @param 	e : MapEvent				* @return	void			*/			protected function _onMap( e : MapEvent ) : void {				_oTARGET = e.mapView;			}						/**			* Get the tiles under the specified rect 			*			* @param 	iX : x source position	(uint)			* @param 	iY : y source position	(uint)			* @return	list of tiles around the specified point (Vector.<GridTile>)			*/			protected function _getTiles( iX : uint , iY : uint , uSIZE : uint = 1 , uSIZEY : int = -1 ) : Vector.<GridTile> {				var v : Vector.<GridTile> = new Vector.<GridTile>();				var g : GridTile;						var x : int = -uSIZE;				var y : int;				uSIZEY = (uSIZEY == -1) ? uSIZE : uSIZEY;				for(y = -uSIZEY  ; y <= uSIZEY ; y++){					for(x = -uSIZE ; x <= uSIZE ; x++){						g = _oTARGET.getTileAt(iX + x , (iY + y)); 						if(g)							v.push(g);													}				}				return v;			}						/**			* 			*			* @param 			* @return			*/			protected function _getTileRec( iX : uint , iY : uint , uWIDTH : uint , uHEIGHT : uint ) : Vector.<GridTile> {				var v : Vector.<GridTile> = new Vector.<GridTile>();				var g : GridTile;						var x : int;				var y : int = 0;								for( y  ; y < uHEIGHT ; y++){					x = 0;					for( x ; x < uWIDTH ; x++){												g = _oTARGET.getTileAt(iX + x , (iY + y)); 						if(g)							v.push(g);													}				}				return v;			}					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(ATool, arguments);			}	}}