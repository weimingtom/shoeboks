s.singleton.ISingleton;	import org.shoebox.utils.logger.Logger;	import flash.events.Event;	import flash.geom.Vector3D;	/**	 * Light tool	* 	* org.shoebox.biskwy.commands.tools.ToolLight	* @author shoebox	*/	public class ToolLight extends ATool implements ICommand , ISingleton {				protected static var __instance		:ToolLight = null;				// -------o constructor					/**			* Constructor of the ToolLight class			*			* @public			* @param	e : singleton enforcer (SingletonEnforcer)			* @return	void			*/			public function ToolLight( e : SingletonEnforcer ) : void {			}		// -------o public						/**			* When the tool command is executed			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			final override public function onExecute( e : Event = null ) : void {				EventCentral.getInstance().addEventListener( GridTileEvent.GRIDTILE_CLICK, _onEvent , false , 10 , true );							}						/**			* When the command is canceled			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			final override public function onCancel( e : Event = null ) : void {				EventCentral.getInstance().removeEventListener( GridTileEvent.GRIDTILE_CLICK, _onEvent , false );				_bISRUNNING = false;				_bISCANCEL = false;			}					// -------o protected						/**			* When the tool receive an grildtile event			*			* @param 	e : tile grid event (GridTileEvent)			* @return	void			*/			protected function _onEvent( e: GridTileEvent ) : void {				trc('onEvent ::: '+e);								var 	oTIL : GridTile = (e as GridTileEvent).gridTile;				var	oPOS : Vector3D = Transformer.screenToWorld( oTIL.position );								var 	oITEM : LightItem = Factory.build( LightItem) as LightItem;					oITEM.x = oPOS.x + Config.TILESIZE / 2;					oITEM.y = oPOS.y + Config.TILESIZE / 2;									LightMapContainer.addChild( oITEM );			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log( ToolLight , args );			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (ToolLight)			*/			static public function getInstance() : ToolLight {								if( !__instance )					__instance = new ToolLight( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}