.singleton.ISingleton;	import org.shoebox.utils.logger.Logger;	import flash.display.NativeWindow;	import flash.display.NativeWindowInitOptions;	import flash.display.NativeWindowSystemChrome;	import flash.display.NativeWindowType;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	org.shoebox.libs.pimpmyair.utils.NativeWindowUtils;	/**	 * org.shoebox.biskwy.commands.trigger.CommandTrigger	* @author shoebox	*/	public class CommandTrigger extends AbstractCommand implements ICommand , ISingleton {				protected var _oCOMM		: MVCCommand;		protected var _oWINDOW		: NativeWindow;		protected var _oPOS		: CommandWindowPosition;				protected static var __instance		:CommandTrigger = null;				// -------o constructor					/**			* Constructor of the CommandTrigger class			*			* @public			* @return	void			*/			public function CommandTrigger( e : SingletonEnforcer ) : void {				trc('constructor');				_oCOMM = new MVCCommand( { modelClass : MTrigger , viewClass : VTrigger } );			}		// -------o public						/**			* onExecute function			* @public			* @param 			* @return			*/			final override public function onExecute( e : Event = null ) : void {				_runWindow(e);			}			/**			* onCancel function			* @public			* @param 			* @return			*/			final override public function onCancel( e : Event = null ) : void {				_cancel();				_oCOMM.cancel();				_oCOMM = new MVCCommand( { modelClass : MTrigger , viewClass : VTrigger } );				_bISCANCEL = false;			}						/**			* get model function			* @public			* @param 			* @return			*/			public function get model() : MTrigger {				return _oCOMM.model as MTrigger;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _runWindow( e : Event = null ) : void {								//					var	oOPT:NativeWindowInitOptions = new NativeWindowInitOptions();						oOPT.resizable = oOPT.maximizable = oOPT.minimizable =  false;						oOPT.systemChrome = NativeWindowSystemChrome.STANDARD;						oOPT.type = NativeWindowType.UTILITY;								//					_oWINDOW = new NativeWindow( oOPT );					_oWINDOW.visible = false;					_oWINDOW.width = 250;					_oWINDOW.height = 250;					_oWINDOW.title = 'Trigger options';					_oWINDOW.stage.scaleMode = StageScaleMode.NO_SCALE;					_oWINDOW.stage.align = StageAlign.TOP_LEFT;					_oWINDOW.addEventListener( Event.CLOSE , _onClose , false , 10 , true );					_oWINDOW.visible = false;					_oPOS = Factory.build( CommandWindowPosition , { refWindow : _oWINDOW , windowId : 'TriggerWindow'}) as CommandWindowPosition;					_oPOS.execute();					_oWINDOW.activate();																			//						_oCOMM.container = _oWINDOW.stage;					_oCOMM.execute(e);								//						NativeWindowUtils.resizeWindow(_oWINDOW,250,250);					//ZWindow.getInstance().register( _oWINDOW , 50000 );					_oWINDOW.visible = true;							}						/*			* When the windows is closed 			*			* @param 	e : closing window event (Event)			* @return	void			*/			protected function _onClose ( e : Event ) : void {				_cancel();			}						/**			* When the trigger command is canceled			*			* @return	void			*/			protected function _cancel() : void {				_oWINDOW.close();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandTrigger, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (CommandTrigger)			*/			static public function getInstance() : CommandTrigger {								if( !__instance )					__instance = new CommandTrigger( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}