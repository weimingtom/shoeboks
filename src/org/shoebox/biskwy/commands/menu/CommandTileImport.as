ts.FileListEvent;	import flash.filesystem.File;	import flash.net.FileFilter;	/**	 * org.shoebox.biskwy.commands.menu.CommandTileImport	* @author shoebox	*/	public class CommandTileImport extends AbstractCommand implements ICommand , ISingleton{				protected var _oFILE			:File;		protected var _oBATCH			:ServiceBatch;				protected static var __instance		:CommandTileImport = null;				// -------o constructor					public function CommandTileImport( e : SingletonEnforcer ) : void {				cancelable = false;			}		// -------o public						/**			* onExecute function			* @public			* @param 			* @return			*/			final override public function onExecute( e : Event = null ) : void {				_oFILE = new File();				_oFILE.addEventListener(FileListEvent.SELECT_MULTIPLE , _onBrowsed , false , 10 , true);				_oFILE.addEventListener(Event.CANCEL , _onCancel , false , 10 , true);				_oFILE.browseForOpenMultiple('From ... ' , [new FileFilter('Media Files','*.swf;*.png;*.bmp')]);			}						/**			* onCancel function			* @public			* @param 			* @return			*/			final override public function onCancel( e : Event = null ) : void {							}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onCancel( e : Event ) : void {				cancel();			}						/**			* 			*			* @param 			* @return			*/			protected function _onBrowsed( e : FileListEvent ) : void {								_oBATCH = new ServiceBatch();				_oBATCH.addEventListener( Event.COMPLETE , _onComplete , false , 10 , true );								//						var aFILES : Array = e.files as Array;					var l : uint = aFILES.length ;					var i : int = 0;										while( i < l ){						trc('addFile ::: '+aFILES[i]);						_oBATCH.addService( SImportTile , { file : aFILES[i] } );						i++;					}										_oBATCH.call();					}						/**			* 			*			* @param 			* @return			*/			protected function _onComplete ( e : Event ) : void {				trc('onComplete ::: '+e);				(ServiceFactory.getService(STiles) as STiles).refresh();				onComplete();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandTileImport, args);			}						/**			* getInstance function			* @public			* @param 			* @return			*/			static public function getInstance() : CommandTileImport {								if(!__instance)					__instance = new CommandTileImport( new SingletonEnforcer() );								return __instance;			}	}}internal class SingletonEnforcer{	}