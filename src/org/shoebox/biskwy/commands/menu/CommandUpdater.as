commands.menu.CommandUpdater	* @author shoebox	*/	public class CommandUpdater extends AbstractCommand implements ICommand , ISingleton {				protected var _oUPDATER		:ApplicationUpdaterUI;				protected static var __instance	:CommandUpdater;				// -------o constructor					public function CommandUpdater( e : SingletonEnforcer ) : void {				trc('constructor');			}		// -------o public						/**			* getInstance function			* @public			* @param 			* @return			*/			static public function getInstance() : CommandUpdater {								if(__instance == null)					__instance = new CommandUpdater(new SingletonEnforcer());								return __instance;			}						/**			* onExecute function			* @public			* @param 			* @return			*/			override public function onExecute( e : Event = null ) : void {				trc('execute');				_oUPDATER = new ApplicationUpdaterUI();				_oUPDATER.addEventListener( ErrorEvent.ERROR , _onError , false , 10 , true);				_oUPDATER.addEventListener( StatusUpdateEvent.UPDATE_STATUS , _onStatus , false , 10 , true);				_oUPDATER.addEventListener( UpdateEvent.INITIALIZED , _onInit , false , 10 , true);				_oUPDATER.updateURL = 'http://www.shoe-box.org/biskwy/updater.xml';				_oUPDATER.isFileUpdateVisible = true;				_oUPDATER.initialize();			}						/**			* onCancel function			* @public			* @param 			* @return			*/			override public function onCancel( e : Event = null ) : void {						}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onInit( e : UpdateEvent ) : void {				trc('onInit');				_oUPDATER.checkNow();			}						/**			* 			*			* @param 			* @return			*/			protected function _onError( e : ErrorEvent ) : void {				trc('onError ::: '+e);			}						/**			* 			*			* @param 			* @return			*/			protected function _onStatus( e : StatusUpdateEvent ) : void {				trc('onStatus ::: '+e);			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandUpdater, args);			}	}}internal class SingletonEnforcer{}