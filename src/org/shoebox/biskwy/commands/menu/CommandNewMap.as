ent;	import flash.events.MouseEvent;	import flash.events.SQLEvent;	import flash.utils.ByteArray;	/**	 * org.shoebox.biskwy.commands.CommandNewMap	* @author shoebox	*/	public class CommandNewMap extends AbstractCommand implements ICommand , ISingleton{				protected var _nsTYPE		: Namespace;		protected var _oWINDOW		: NewMapWindow;		protected var _oCONTENT	: CtntNewMap;		protected var _uWIDTH		: uint;		protected var _uHEIGHT		: uint;		protected var _uSIZE		: uint;					protected static var __instance		:CommandNewMap = null;				// -------o constructor					public function CommandNewMap( e : SingletonEnforcer ) : void {			}		// -------o public						/**			* getInstance function			* @public			* @param 			* @return			*/			static public function getInstance() : CommandNewMap {				trc('getInstance');								if(__instance == null )					__instance = new CommandNewMap( new SingletonEnforcer());									return __instance;							}						/**			* onExecute function			* @public			* @param 			* @return			*/			final override public function onExecute( e : Event = null) : void {				trc('onExecute');				/*				Config.GRID_WIDTH = _uWIDTH;				Config.GRID_HEIGHT = _uHEIGHT;				MapApp.getInstance().redraw();				onComplete();				 * 				 */												_oCONTENT = new CtntNewMap();				_oCONTENT.addEventListener(MouseEvent.CLICK , _onClick , true , 10 , true );				 				_oWINDOW = new NewMapWindow();				_oWINDOW.addEventListener(Event.CLOSE , _cancel , false , 10 , true);				_oWINDOW.stage.addChild(_oCONTENT);				_oWINDOW.activate();				 			}			/**			* onCancel function			* @public			* @param 			* @return			*/			final override public function onCancel( e : Event = null ) : void {				trc('onCancel');				_oCONTENT.removeEventListener(MouseEvent.CLICK , _onClick , true);				_oWINDOW.removeEventListener(Event.CLOSE , _cancel , false);				_oWINDOW = null;				_oCONTENT = null;			}						/**			* set width function			* @public			* @param 			* @return			*/			public function set width( u : uint ) : void {				_uWIDTH = u;			}						/**			* set height function			* @public			* @param 			* @return			*/			public function set height( u : uint ) : void {				_uHEIGHT = u;			}						/**			* set type function			* @public			* @param 			* @return			*/			public function set type( ns : Namespace ) : void {				_nsTYPE = ns;			}						// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onClick( e : MouseEvent ) : void {				trc('onClick ::: '+e.target.name);								switch(e.target.name){										case 'Validate':						_validate();						break;											case 'Cancel':						_cancel();						break;									}							}						/**			* 			*			* @param 			* @return			*/			protected function _cancel() : void {				if(_oWINDOW)					if(!_oWINDOW.closed)						_oWINDOW.close();								if(_bISRUNNING)					cancel();							}						/**			* 			*			* @param 			* @return			*/			protected function _validate() : void {				Config.GRID_WIDTH = _oCONTENT.tileswidth;				Config.GRID_HEIGHT = _oCONTENT.tilesheight;								var	oBA	: ByteArray = new ByteArray();					oBA.writeShort((Config.GRIDTYPE==IsoGrid) ? 0 : 1);					oBA.writeInt(_oCONTENT.mapW);					oBA.writeInt(_oCONTENT.mapH);					oBA.compress();									var 	oBASE : Database = Database.getInstance();					oBASE.text = 'INSERT INTO TB_Maps ( name , width , height , data ) VALUES ( "'+_oCONTENT.mapName+'" , '+_oCONTENT.mapW+' , '+_oCONTENT.mapH+' ,:byteArray )';					oBASE.statement.parameters[':byteArray'] = oBA;					oBASE.addEventListener( SQLEvent.RESULT , _onComplete , false , 10 , true);					oBASE.execute();							}						/**			* 			*			* @param 			* @return			*/			protected function _onComplete( e : SQLEvent ) : void {				trc('onComplete ::: '+e);				e.target.removeEventListener( SQLEvent.RESULT , _onComplete , false);				_cancel();				onComplete();			}		// -------o misc			public static function trc(arguments : *) : void {				Logger.log(CommandNewMap, arguments);			}	}}internal class SingletonEnforcer{}