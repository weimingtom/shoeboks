on.ISingleton;	import org.shoebox.utils.display.STAGEINSTANCE;	import org.shoebox.utils.logger.Logger;	import flash.display.NativeWindow;	import flash.display.NativeWindowInitOptions;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	/**	 * org.shoebox.biskwy.commands.menu.CommandGroupEdit	* @author shoebox	*/	public class CommandGroupEdit extends AbstractCommand implements ICommand , ISingleton {				protected static var __instance	:CommandGroupEdit = null;		protected var _oGROUP			:NativeWindow = null ;				// -------o constructor					/**			* Constructor of the CommandGroupEdit class			*			* @public			* @return	void			*/			public function CommandGroupEdit( e : SingletonEnforcer ) : void {				_oGROUP = new NativeWindow( new NativeWindowInitOptions() );				_oGROUP.title = 'Group editor';				_oGROUP.addEventListener( Event.CLOSE , _onClosed , false , 10 , true );			}		// -------o public						/**			* onExecute function			* @public			* @param 			* @return			*/			override public function onExecute( e : Event = null ) : void {								_oGROUP.orderInFrontOf( STAGEINSTANCE.nativeWindow );				_oGROUP.activate();				_oGROUP.stage.scaleMode = StageScaleMode.NO_SCALE;				_oGROUP.stage.align = StageAlign.TOP_LEFT;				NativeWindowUtils.resizeWindow( _oGROUP , 800 , 600);				ZWindow.getInstance().register( _oGROUP , 50000 );							var 	oCOMM : MVCCommand = new MVCCommand( );					oCOMM.modelClass = MNewGroup;					oCOMM.viewClass = VNewGroup;					oCOMM.controllerClass =  CNewGroup;					oCOMM.container = _oGROUP.stage;					oCOMM.execute( e );						}						/**			* onCancel function			* @public			* @param 			* @return			*/			override public function onCancel( e : Event = null ) : void {				_oGROUP.removeEventListener( Event.CLOSE , _onClosed , false);				ZWindow.getInstance().unRegister( _oGROUP );				_oGROUP = null;				_bISCANCEL = false;			}		// -------o protected			/**			* 			*			* @param 			* @return			*/			protected function _onClosed( e : Event ) : void {			}			// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandGroupEdit, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (CommandGroupEdit)			*/			static public function getInstance() : CommandGroupEdit {								if( !__instance )					__instance = new CommandGroupEdit( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}