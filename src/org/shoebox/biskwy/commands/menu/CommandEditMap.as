ds.MVCCommand;	import org.shoebox.patterns.singleton.ISingleton;	import org.shoebox.utils.logger.Logger;	import flash.events.Event;	/**	 * org.shoebox.biskwy.commands.menu.CommandEditMap	* @author shoebox	*/	public class CommandEditMap extends AbstractCommand implements ICommand , ISingleton {				protected var _oWINDOW			:MapEditWindow;		protected var _oMVC			:MVCCommand;				// -------o constructor					/**			* Constructor of the AScript command class			*			* @public			* @return	void			*/			public function CommandEditMap( e : SingletonEnforcer ) : void {				cancelable = false;			}		// -------o public						/**			* Execution of the command			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			override public function onExecute( e : Event = null ) : void {								trc('onExecute');								// Freezing the app					Facade.getInstance().freeze();									// Opening the window						_oWINDOW = MapEditWindow.getInstance();					_oWINDOW.addEventListener( Event.CLOSE , _onClosedWindow , false , 10 , true );					_oWINDOW.activate();									//					_oMVC = new MVCCommand( { modelClass : MEditMap , viewClass : VEditMap , controllerClass : CEditMap , container : _oWINDOW.stage } );					_oMVC.addEventListener( CommandEvents.COMPLETE , _onComplete , false , 10 , true );					_oMVC.execute();							}						/**			* When the command is canceled			* 			* @public			* @param	e : optional event (Event)	 			* @return	void			*/			override public function onCancel( e : Event = null ) : void {				_oMVC.removeEventListener( CommandEvents.COMPLETE , _onComplete , false );				_oWINDOW.removeEventListener( Event.CLOSE , _onClosedWindow , false );				_oMVC.cancel();				_oWINDOW.close();			}					// -------o protected			/**			* When the window is closed			*			* @param 	e : close event ( Event )			* @return	void			*/			final protected function _onClosedWindow( e : Event ) : void {				trc('onClosed');				Facade.getInstance().unfreeze();				cancel();			}						/**			* 			*			* @param 			* @return			*/			final protected function _onComplete( e : CommandEvents ) : void {				trc('onComplete');				cancel();			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandEditMap, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (CommandEditMap)			*/			static public function getInstance() : CommandEditMap {								if( !__instance )					__instance = new CommandEditMap( new SingletonEnforcer() );												return __instance;			}					static protected var __instance 		:CommandEditMap = null;	}}internal class SingletonEnforcer{	}