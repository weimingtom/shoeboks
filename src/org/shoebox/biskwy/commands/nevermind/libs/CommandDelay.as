	import flash.utils.Timer;
	import org.shoebox.utils.logger.Logger;

	import flash.events.Event;	import flash.events.EventDispatcher;	[NVM_Desc( type = 'Action' , name = 'Delay') ]		[Event( name = "COMPLETE"	, type = "flash.events.Event" , NVM_Output = 'true')]	[Event( name = "CANCEL"		, type = "flash.events.Event" , NVM_Output = 'true')]		/**	* 	* 	* org.shoebox.biskwy.commands.nevermind.libs.CommandDelay	* @author shoebox	*/	public class CommandDelay extends EventDispatcher {				[NVM_Variable]			public var delay				: int = 100;				protected var _oTIMER			: Timer;				// -------o constructor					/**			* Constructor of the AScript command class			*			* @public			* @return	void			*/			public function CommandDelay() : void {			}		// -------o public						/**			* Running the delay			* 			* @public			* @return	void			*/			[NVM_Input]			final public function start( e : Event = null ) : void {				trace('run ::: '+delay);				_oTIMER = new Timer( delay );				_oTIMER.addEventListener( TimerEvent.TIMER , _onComplete , false , 10 , true );				_oTIMER.start();			}						/**			* cancel function			* @public			* @param 			* @return			*/			[NVM_Input]			final public function stop( e : Event = null ) : void {				trace('stop ::: '+delay);								if( !_oTIMER )					return;									if( _oTIMER.running )					dispatchEvent( new Event( Event.CANCEL ));									_oTIMER.stop();				_oTIMER.removeEventListener( TimerEvent.TIMER , _onComplete , false);			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			[NVM_Output];			final protected function _onComplete( e : TimerEvent ) : void {				trc('onComplete ::: '+hasEventListener(Event.COMPLETE));
				_oTIMER.removeEventListener(TimerEvent.TIMER, _onComplete, false);
				dispatchEvent(new Event(Event.COMPLETE));			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandDelay, args);			}	}}