.singleton.ISingleton;	import org.shoebox.utils.logger.Logger;	import flash.display.NativeWindow;	import flash.display.NativeWindowInitOptions;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	/**	 * org.shoebox.biskwy.commands.map.BehaviorCommand	* @author shoebox	*/	public class CommandBehavior extends AbstractCommand implements ICommand , ISingleton{				protected var _oWINDOW			:NativeWindow;				protected static var __instance		:CommandBehavior = null;				// -------o constructor					public function CommandBehavior( e : SingletonEnforcer ) : void {			}		// -------o public						/**			* onExecute function			* @public			* @param 			* @return			*/			final override public function onExecute( e : Event = null ) : void {				trc('execute ::: '+e);								_oWINDOW = new NativeWindow( new NativeWindowInitOptions() );				_oWINDOW.width = 400;				_oWINDOW.height = 300;				_oWINDOW.x = (StageResize.rect.width - 400)/2;				_oWINDOW.y = (StageResize.rect.height - 300)/2;				_oWINDOW.addEventListener( Event.CLOSE , _onClose , false , 10 , true);				_oWINDOW.title = 'Tile behavior';				_oWINDOW.alwaysInFront = true;				_oWINDOW.stage.scaleMode = StageScaleMode.NO_SCALE;				_oWINDOW.stage.align = StageAlign.TOP_LEFT;				_oWINDOW.activate();				Facade.getInstance().freeze();								var 	o : MVCCommand = new MVCCommand( { 											modelClass: MGridTileBehavior , 											viewClass : VGridTileBehavior , 											controllerClass : CGridTileBehavior										} );					o.container = _oWINDOW.stage;					o.execute(e);			}			/**			* onCancel function			* @public			* @param 			* @return			*/			final override public function onCancel( e : Event = null ) : void {						}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onClose( e : Event ) : void {				_oWINDOW.removeEventListener( Event.CLOSE , _onClose , false );				Facade.getInstance().unfreeze();				onComplete();				_bISCANCEL = false;			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandBehavior, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (CommandBehavior)			*/			static public function getInstance() : CommandBehavior {								if( !__instance )					__instance = new CommandBehavior( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}