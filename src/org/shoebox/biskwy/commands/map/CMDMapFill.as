ill extends AbstractCommand implements ICommand {				protected var _oTILE		:GridTile;		protected var _iDEPTH		:int;		protected var _uCONTENTID	:uint;		protected var _oSERVICE		:STileByID;					// -------o constructor					public function CMDMapFill() : void {				//trc('constructor');			}		// -------o public						/**			* set tile function			* @public			* @param 			* @return			*/			public function set tile( o : GridTile ) : void {				_oTILE = o;			}						/**			* set id function			* @public			* @param 			* @return			*/			public function set id( u : uint ) : void {				_uCONTENTID = u;			}						/**			* set depth function			* @public			* @param 			* @return			*/			public function set depth( i : int ) : void {				_iDEPTH = i;			}						/**			* onExecute function			* @public			* @param 			* @return			*/			final override public function onExecute( e : Event = null ) : void {				_oSERVICE = new STileByID();				_oSERVICE.tileID = _uCONTENTID;				_oSERVICE.addEventListener( ServiceEvent.ON_DATAS , _onDatas , false , 10 , true );				_oSERVICE.call();			}			/**			* onCancel function			* @public			* @param 			* @return			*/			final override public function onCancel( e : Event = null ) : void {							}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onDatas( e : ServiceEvent ) : void {				_oSERVICE.removeEventListener( ServiceEvent.ON_DATAS , _onDatas , false);				_oTILE.container.fill( e.datas[0] , _iDEPTH);				_oTILE.container.addEventListener( Event.COMPLETE , _onComplete , true , 10 , true );			}						/**			* 			*			* @param 			* @return			*/			protected function _onComplete ( e : Event ) : void {				_oTILE.container.removeEventListener( Event.COMPLETE , _onComplete , true );				onComplete();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CMDMapFill, args);			}	}}