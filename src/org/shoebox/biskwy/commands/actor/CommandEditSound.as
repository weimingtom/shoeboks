	import org.shoebox.biskwy.controllers.actor.CSound;	import org.shoebox.biskwy.core.Facade;	import org.shoebox.biskwy.models.MSound;	import org.shoebox.biskwy.views.tools.VSound;	import org.shoebox.libs.pimpmyair.behaviors.ZWindow;	import org.shoebox.libs.pimpmyair.utils.NativeWindowUtils;	import org.shoebox.patterns.commands.AbstractCommand;	import org.shoebox.patterns.commands.ICommand;	import org.shoebox.patterns.mvc.commands.MVCCommand;	import org.shoebox.utils.logger.Logger;	import flash.display.NativeWindow;	import flash.display.NativeWindowInitOptions;	import flash.display.NativeWindowSystemChrome;	import flash.display.NativeWindowType;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	/**	 * org.shoebox.biskwy.commands.actor.CommandEditSound	* @author shoebox	*/	public class CommandEditSound extends AbstractCommand implements ICommand {				protected var _oCOMM			:MVCCommand;		protected var _oWINDOW			:NativeWindow;				// -------o constructor					/**			* Constructor of the AScript command class			*			* @public			* @return	void			*/			public function CommandEditSound() : void {				_oCOMM = new MVCCommand( { modelClass : MSound , viewClass : VSound , controllerClass : CSound } );			}		// -------o public						/**			* Execution of the command			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			override public function onExecute( e : Event = null ) : void {				trc('onExecute ::: '+e);								//					var	oOPT:NativeWindowInitOptions = new NativeWindowInitOptions();						oOPT.resizable = oOPT.maximizable = oOPT.minimizable =  false;						oOPT.systemChrome = NativeWindowSystemChrome.STANDARD;						oOPT.type = NativeWindowType.UTILITY;								//					_oWINDOW = new NativeWindow( oOPT );					_oWINDOW.visible = false;					_oWINDOW.width = 300;
					_oWINDOW.height = 400;
					_oWINDOW.title = 'Actor editor ::: ' + (e as ActorEvent).targetActor;					_oWINDOW.stage.scaleMode = StageScaleMode.NO_SCALE;					_oWINDOW.stage.align = StageAlign.TOP_LEFT;					_oWINDOW.addEventListener( Event.CLOSE , _onClose , false , 10 , true );					_oWINDOW.visible = false;					_oWINDOW.activate();																			//						_oCOMM.container = _oWINDOW.stage;					_oCOMM.execute(e);								//						NativeWindowUtils.resizeWindow(_oWINDOW,270,300);					////ZWindow.getInstance().register( _oWINDOW , 50000 );					_oWINDOW.visible = true;					//Facade.getInstance().freeze();			}						/**			* When the command is canceled			* 			* @public			* @param	e : optional event (Event)	 			* @return	void			*/			override public function onCancel( e : Event = null ) : void {				_cancel();				_oCOMM.cancel();				_oCOMM = new MVCCommand( { modelClass : MSound , viewClass : VSound } );				_bISCANCEL = false;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _cancel() : void {				//Facade.getInstance().unfreeze();				_oWINDOW.close();			}									/*			* When the windows is closed 			*			* @param 	e : closing window event (Event)			* @return	void			*/			protected function _onClose ( e : Event ) : void {				_cancel();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandEditSound, args);			}	}}