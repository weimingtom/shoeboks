s AbstractCommand implements ICommand {				protected var _oWINDOW		:NativeWindow;		protected var _sWINDOWID	:String;				// -------o constructor					/**			* Constructor of the CommandWindowPosition class			*			* @public			* @return	void			*/			public function CommandWindowPosition() : void {			}		// -------o public						/**			* When the command is executed			* 			* @public			* @param	e : Optional execute event (Event) 			* @return	void			*/			final override public function onExecute( e : Event = null ) : void {				_onFrames();				_oWINDOW.addEventListener( Event.CLOSE , _onClosed , false , 10 , true );			}						/**			* When the command is canceled			* 			* @public				* @param	e : Optional cancel event (Event) 			* @return	void			*/			final override public function onCancel( e: Event = null) : void {				_oWINDOW.removeEventListener( NativeWindowBoundsEvent.MOVE , _onMove , false);				_oWINDOW.removeEventListener( Event.CLOSE , _onClosed , false );			}						/**			* Setter of the window ID name			*			* @public			* @param 	s : windowd ID name (String)			* @return	void			*/			public function set windowId( s : String ) : void {				_sWINDOWID = s;			}						/**			* Setter of the reference nativeWindow			* 			* @public				* @param	o : Reference nativeWindow (NativeWindow) 			* @return	void			*/			public function set refWindow( o : NativeWindow ) : void {				_oWINDOW = o;			}					// -------o protected						/**			* When the window is closed the command is canceled			*			* @param	e : close event (Event)	 			* @return	void			*/			protected function _onClosed( e : Event ) : void {				if(!_bISCANCEL)					cancel();			}						/**			* After some frames			*			* @param 	e : optional event (Event)			* @return	void			*/			protected function _onFrames( e : Event = null ) : void {				if(EncryptedLocalStore.getItem(_sWINDOWID)){					var oBA:ByteArray = EncryptedLocalStore.getItem(_sWINDOWID) as ByteArray;					_oWINDOW.x = oBA.readInt();					_oWINDOW.y = oBA.readInt();				}				_oWINDOW.visible = true;				_oWINDOW.addEventListener( NativeWindowBoundsEvent.MOVE , _onMove , false , 10 , true );							}						/**			* When the windows is moved 			*			* @param 	e : move bounds event (NativeWindowBoundsEvent)			* @return	void			*/			protected function _onMove ( e : NativeWindowBoundsEvent ) : void {				trc('onMove ::: '+e);				var 	oBA : ByteArray = new ByteArray();					oBA.writeInt( _oWINDOW.x );					oBA.writeInt( _oWINDOW.y );				EncryptedLocalStore.setItem(_sWINDOWID,oBA);			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandWindowPosition, args);			}	}}