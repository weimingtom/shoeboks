hoebox.patterns.singleton.ISingleton;	import org.shoebox.utils.logger.Logger;	import flash.display.NativeWindow;	import flash.display.NativeWindowInitOptions;	import flash.display.Screen;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	/**	 * org.shoebox.biskwy.commands.scripts.CommandNewScript	* @author shoebox	*/	public class CommandNewScript extends AbstractCommand implements ICommand , ISingleton {				protected var _oCOMM		:MVCCommand;		protected var _oWIN		:NativeWindow;				protected static var __instance		:CommandNewScript = null;				// -------o constructor					/**			* Constructor of the CommandNewScript class			* @see <code>AbstractCommand</code>			*			* @public			* @return	void			*/			public function CommandNewScript( e : SingletonEnforcer ) : void {				cancelable = false;				_oCOMM = new MVCCommand({ 									modelClass : MScriptEditor , 									viewClass : VScriptEditor , 									controllerClass : CScriptEditor								});			}		// -------o public						/**			* Execution of the command			* 			* @public			* @param	e : optional event (Event) 			* @return	void			*/			final override public function onExecute( e : Event = null ) : void {				trc('onExecute ::: running --- ' + _bISRUNNING+' || cancel --- ' + _bISCANCEL);				//Facade.getInstance().freeze();								//					var	oOPT : NativeWindowInitOptions = new NativeWindowInitOptions();						oOPT.minimizable = oOPT.maximizable = oOPT.resizable = false;								//					_oWIN = new NativeWindow( oOPT );					_oWIN.width = 800;					_oWIN.height = 500;					_oWIN.title = 'Edit new script';					_oWIN.stage.scaleMode = StageScaleMode.NO_SCALE;					_oWIN.stage.align = StageAlign.TOP_LEFT;					_oWIN.addEventListener( Event.CLOSE , _onClose , false , 10 , true );					_oWIN.x = (Screen.mainScreen.bounds.width - 800)/2;					_oWIN.y = (Screen.mainScreen.bounds.height - 500)/2;					_oWIN.activate();								NativeWindowUtils.resizeWindow( _oWIN , 800 , 500 );				ZWindow.getInstance().register( _oWIN , 45000 );								//					_oCOMM.container =  _oWIN.stage;					_oCOMM.execute( e );			}						/**			* When the model is canceled			* 			* @public			* @param	e : optional event (Event)	 			* @return	void			*/			final override public function onCancel( e : Event = null ) : void {				_bISRUNNING = false;				_oWIN.removeEventListener( Event.CLOSE , _onClose , false );				_oWIN.close();				_oCOMM.cancel( e );				//Facade.getInstance().unfreeze();			}		// -------o protected						/**			* When the windows is closed			*			* @param 	e : close event (Event)			* @return	void			*/			protected function _onClose ( e : Event ) : void {				cancel();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(CommandNewScript, args);			}						/**			* Return the singleton instance of the class			* @public			* @return instance of the class (CommandNewScript)			*/			static public function getInstance() : CommandNewScript {								if( !__instance )					__instance = new CommandNewScript( new SingletonEnforcer() );												return __instance;			}	}}internal class SingletonEnforcer{	}