	import org.shoebox.biskwy.events.TileEvent;
	import fl.controls.Button;	import fl.controls.NumericStepper;	import org.shoebox.biskwy.items.ItemTileContent;	import org.shoebox.biskwy.models.MTileContent;	import org.shoebox.biskwy.views.VTileContent;	import org.shoebox.events.EventCentral;	import org.shoebox.patterns.mvc.abstracts.AController;	import org.shoebox.patterns.mvc.interfaces.IController;	import org.shoebox.utils.logger.Logger;	import flash.events.Event;	import flash.events.MouseEvent;	/**	 * org.shoebox.biskwy.controllers.CTileContent	* @author shoebox	*/	public class CTileContent extends AController implements IController{				// -------o constructor					public function CTileContent() : void {			}		// -------o public						/**			* onEvent function			* @public			* @param 			* @return			*/			final override public function onEvent( e : Event ) : void {								var uID : uint;								if(e.target is NumericStepper && e.type == Event.CHANGE){					uID = (e.target.parent as ItemTileContent).id;					(model as MTileContent).target.setZForId(uID , (e.target as NumericStepper).value);					return;				}												if(e.target is Button && e.type == MouseEvent.CLICK){									uID = (e.target.parent as ItemTileContent).id;															switch( e.target.name){												case 'del':							(model as MTileContent).target.remove(uID);							break;													case 'up':							(model as MTileContent).target.swap(uID , +1);							break;							case 'down':							(model as MTileContent).target.swap(uID , -1);							break;											}					(view as VTileContent).redraw();				}							}									/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {				EventCentral.getInstance().addEventListener( GridTileEvent.GRIDTILE_EDIT , _onEdit , false , 10 , true );					EventCentral.getInstance().addEventListener( GridTileEvent.GRIDTILE_EDITEND , _onEditEnd , false , 10 , true );				}						/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {						}					// -------o protected						/**			* 			*			* @param 			* @return			*/			protected function _onEdit( e : GridTileEvent ) : void {				(model as MTileContent).target = e.gridTile;			}						/**			* 			*			* @param 			* @return			*/			protected function _onEditEnd( e : GridTileEvent ) : void {				( view as VTileContent ).clear();			} 					// -------o misc			public static function trc(arguments : *) : void {				Logger.log(CTileContent, arguments);			}	}}