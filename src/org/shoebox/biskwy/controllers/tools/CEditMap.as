	import org.shoebox.biskwy.models.tools.MEditMap;	import org.shoebox.biskwy.utils.Prompt;	import org.shoebox.biskwy.views.tools.VEditMap;	import org.shoebox.patterns.mvc.abstracts.AController;	import org.shoebox.patterns.mvc.interfaces.IController;	import org.shoebox.utils.logger.Logger;	import flash.events.Event;	import flash.events.MouseEvent;	/**	 * org.shoebox.biskwy.controllers.tools.CEditMap	* @author shoebox	*/	public class CEditMap extends AController implements IController {				protected var _oPROMPT			:Prompt;				// -------o constructor					/**			* Constructor of the CEditMap class			*			* @public			* @return	void			*/			public function CEditMap() : void {			}		// -------o public						/**			* Controller initialization			* 			* @public			* @return void			*/			final override public function initialize() : void {							}			/**			* When the controller receive an event 			* 			* @public			* @param	e : received event (Event) 			* @return	void			*/			final override public function onEvent( e : Event ) : void {								if( e.type == Event.CHANGE ){					(model as MEditMap).propsChange( e.target.name );					return;					}								if( e.type == MouseEvent.CLICK ){										if( e.target is MapLayerItem ){						(model as MEditMap).edit( e.target as MapLayerItem );							return;					}										switch( e.target ){												case (view as VEditMap).btnNewLayer:							_oPROMPT = new Prompt('Create a new layer','New layer name :');							_oPROMPT.addEventListener( Event.COMPLETE , _onNewLayer , false , 10 , true );							break;													case (view as VEditMap).btnMoveUp:							(model as MEditMap).moveLayer( -1 );							break;													case (view as VEditMap).btnMoveDown:							(model as MEditMap).moveLayer( +1 );							break;													case (view as VEditMap).btnTest:							(view as VEditMap).test();							break;											}									}else if( (e.target is MapLayerItem) ){										var 	oT : MapLayerItem = e.target as MapLayerItem;					if( e.type == MouseEvent.MOUSE_OVER )						oT.over();					else if( e.type == MouseEvent.MOUSE_OUT )						if( oT.mouseEnabled )							oT.out();									}							}						/**			* When the controller is canceled			* 			* @public			* @param	e : optional cance event (Event) 			* @return	void			*/			final override public function cancel( e : Event = null ) : void {							}				// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onNewLayer( e : Event ) : void {				(model as MEditMap).createLayer( _oPROMPT.value );			}		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CEditMap, args);			}	}}