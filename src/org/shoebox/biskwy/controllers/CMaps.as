port org.shoebox.utils.logger.Logger;	import flash.events.Event;	import flash.events.MouseEvent;	/**	 * org.shoebox.biskwy.controllers.CMaps	* @author shoebox	*/	public class CMaps extends AController implements IController {				protected var _oOLDSEL		:MapItem;				// -------o constructor					public function CMaps() : void {			}		// -------o public						/**			* set selection function			* @public			* @param 			* @return			*/			public function set selection( o : MapItem ) : void {				_oOLDSEL = o;				(model as MMaps).selectedMapID = o.id;			}						/**			* onEvent function			* @public			* @param 			* @return			*/			final override public function onEvent( e : Event ) : void {								trc('onEvent ::: '+e.target);								if(e.target is Button){										CommandOpenMap.getInstance().close();										switch(e.target.name){													case 'delmap':							(Factory.build( CommandDelMap , { mapID : (model as MMaps).selectedMapID } ) as CommandDelMap).execute();							break;													case 'openmap':							(Factory.build( CommandOpenMapByID , { mapID : (model as MMaps).selectedMapID } ) as CommandOpenMapByID).execute();							break;											}																			} else if(e.target is MapItem && e.type==MouseEvent.CLICK ){										var tgt:MapItem = e.target as MapItem;						//AppMaps.selectedID = tgt.id;					(model as MMaps).selectedMapID = tgt.id;										if(_oOLDSEL)						_oOLDSEL.freeze(false);						_oOLDSEL = tgt;						_oOLDSEL.freeze(true);										return;					}			}									/**			* initialize function			* @public			* @param 			* @return			*/			final override public function initialize() : void {							}						/**			* cancel function			* @public			* @param 			* @return			*/			final override public function cancel( e : Event = null ) : void {			}					// -------o protected		// -------o misc			public static function trc(...args : *) : void {				Logger.log(CMaps, args);			}	}}