	import org.shoebox.biskwy.core.variables.TilesCache;	import org.shoebox.biskwy.core.variables.TilesDesc;	import org.shoebox.biskwy.data.TileDesc;	import org.shoebox.patterns.service.AbstractService;	import org.shoebox.patterns.service.IService;	import org.shoebox.utils.logger.Logger;	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Loader;	import flash.events.Event;	import flash.system.LoaderContext;	/**	 * org.shoebox.biskwy.services.STilePreloader	* @author shoebox	*/	public class STilePreloader extends AbstractService implements IService {				protected var _oMEDIALOADER		:Loader;		protected var _oDESC			:Object = null;				// -------o constructor					/**			* Constructor of the STilePreloader class			*			* @public			* @return	void			*/			public function STilePreloader() : void {			}		// -------o public						/**			* set datas function			* @public			* @param 			* @return			*/			final public function set datas( o : Object ) : void {				_oDESC = o;			}						/**			* onCall function			* @public			* @param 			* @return			*/			override final public function onCall() : void {								//					if( TilesDesc.getValue( _oDESC.id ) !== undefined){						onComplete();						dispatch( null );						return;					}else						TilesDesc.addItem( _oDESC.id , _oDESC );								//					var 	oCONTEXT : LoaderContext = new LoaderContext();						oCONTEXT.allowCodeImport = true;										//					_oMEDIALOADER = new Loader();					_oMEDIALOADER.contentLoaderInfo.addEventListener(Event.COMPLETE, _onMedia , false, 10, true);					_oMEDIALOADER.load( new URLRequest( _oDESC.filepath ) , oCONTEXT);								}			/**			* onRefresh function			* @public			* @param 			* @return			*/			override final public function onRefresh() : void {						}					// -------o protected					/**			* 			*			* @param 			* @return			*/			final protected function _onMedia( e : Event ) : void {				trc('onMedia');								//					_oMEDIALOADER .contentLoaderInfo.removeEventListener(Event.COMPLETE, _onMedia , false);									//					var oB : BitmapData;					if(_oMEDIALOADER.content is Bitmap)						 oB = ( _oMEDIALOADER.content as Bitmap ).bitmapData.clone();					else{						oB  = new BitmapData( _oMEDIALOADER.content.width , _oMEDIALOADER.content.height , true , 0 );						oB.draw( _oMEDIALOADER.content );					}								//					var o : TileDesc = new TileDesc();					var p : String;					for( p in _oDESC ){						if( p !== 'media' )							trace(p+' /// '+_oDESC[p]);						o[p] = _oDESC[p];					}						o.img = oB;						o.mediaSource = _oMEDIALOADER.content;											TilesCache.addItem( _oDESC.id ,o );					dispatch( null );			}				// -------o misc			public static function trc(...args : *) : void {				Logger.log(STilePreloader, args);			}	}}