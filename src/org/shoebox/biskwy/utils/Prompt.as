	import fl.controls.Button;	import org.shoebox.libs.pimpmyair.behaviors.ZWindow;	import org.shoebox.libs.pimpmyair.utils.NativeWindowUtils;	import org.shoebox.patterns.factory.Factory;	import org.shoebox.utils.logger.Logger;	import flash.display.NativeWindow;
	import flash.display.Screen;	import flash.display.NativeWindowInitOptions;	import flash.display.NativeWindowSystemChrome;	import flash.display.NativeWindowType;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.GridFitType;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFieldType;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	/**	 * org.shoebox.biskwy.utils.Prompt	* @author shoebox	*/	public class Prompt extends NativeWindow {				protected var _oBUTTON1			: Button;		protected var _oBUTTON2			: Button;		protected var _sTEXT			: String;		protected var _tfTEXT			: TextField;		protected var _tfINPUT			: TextField;				// -------o constructor					/**			* Constructor of the Prompt class			*			* @public			* @return	void			*/			public function Prompt( sTITLE : String , sTEXT : String ) : void {				_sTEXT = sTEXT;								super(Factory.build(NativeWindowInitOptions, {systemChrome:NativeWindowSystemChrome.STANDARD, type:NativeWindowType.NORMAL, 													resizable : false, 													maximizable : false, 													minimizable : false 												}));									title = sTITLE;								stage.align = StageAlign.TOP_LEFT;				stage.scaleMode = StageScaleMode.NO_SCALE;				NativeWindowUtils.resizeWindow(this, 300, 150);								stage.nativeWindow.visible = false;					activate();			}		// -------o public						/**			* activate function			* @public			* @param 			* @return			*/
		final override public function activate() : void {
				notifyUser(NotificationType.INFORMATIONAL);				ZWindow.getInstance().register( this , 40000 );				super.activate();				x = (Screen.mainScreen.bounds.width - 300)/2;				y = (Screen.mainScreen.bounds.height - 150)/2;				_draw();			}						/**			* get value function			* @public			* @param 			* @return			*/			final public function get value() : String {				return _tfINPUT.text;			}					// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _draw() : void {								var 	oF : TextFormat = new TextFormat('Verdana', 11 , 0 , false);					oF.align = TextFormatAlign.CENTER;									stage.addChild( Factory.build( TextField , { 											x : 10 , y : 30 , 											width : 280 , 											text :  _sTEXT , 											defaultTextFormat : oF,											selectable : false,											autoSize : TextFieldAutoSize.CENTER,											gridFitType : GridFitType.PIXEL 										}));								_tfINPUT = Factory.build( TextField , { 											x : 10 , y : 60 ,											width : 280 , height : 20 , 											text : '' , 											border : true ,											selectable : true,											defaultTextFormat : oF,											type: TextFieldType.INPUT,											gridFitType : GridFitType.PIXEL										} );				stage.addChild( _tfINPUT );								_oBUTTON1 = Factory.build( Button , { x : 10 , label :'OK' , y : 120 , width : 135 , height : 20 } );				_oBUTTON2 = Factory.build( Button , { x : 155 , label :'CANCEL' , y : 120 , width : 135 , height : 20 } );				stage.addChild( _oBUTTON1 );				stage.addChild( _oBUTTON2 );								_oBUTTON1.addEventListener( MouseEvent.CLICK , _onValidation , false , 10 , true );				_oBUTTON2.addEventListener( MouseEvent.CLICK , _onCancel , false , 10 , true );			}						/**			* 			*			* @param 			* @return			*/			final protected function _onValidation( e : MouseEvent ) : void {				dispatchEvent( new Event( Event.COMPLETE ));				_close();			}						/**			* 			*			* @param 			* @return			*/			final protected function _onCancel( e : MouseEvent ) : void {				dispatchEvent( new Event( Event.CLOSE ));				_close();			}						/**			* 			*			* @param 			* @return			*/			final protected function _close() : void {				_oBUTTON1.removeEventListener( MouseEvent.CLICK , _onValidation , false );				_oBUTTON2.removeEventListener( MouseEvent.CLICK , _onCancel , false );				close();			}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(Prompt, args);			}	}}