	import org.shoebox.events.LightSignal;	import org.shoebox.utils.logger.Logger;	import flash.display.Sprite;	import flash.events.Event;	import flash.utils.Timer;	import flash.utils.getTimer;	/**	 * Bench	* @author shoebox	*/	public class Bench extends Sprite {				protected var _overSleepTime		: Number = 0;		protected var _afterTime		: Number = 0;		protected var _sleepTime		: Number = 0;		protected var _beforeTime		: Number = 0;		protected var _period			: Number = 0;		protected var _nTIMER			: Number = 0;		protected var _oTIMER			: Timer;				// -------o constructor					/**			* Constructor of the Bench class			*			* @public			* @return	void			*/			public function Bench() : void {				//stage.addEventListener( Event.ENTER_FRAME , _onFrame );								_period = 1000 / stage.frameRate;				_nTIMER = getTimer();				_oTIMER = new Timer( _period , 1 );				_oTIMER.delay = stage.frameRate;				_oTIMER.addEventListener( TimerEvent.TIMER , _onTimer );				_oTIMER.start();								//LightSignal.getInstance().connect( Event.ENTER_FRAME , _onFrameFunc );			}		// -------o public				// -------o protected						/**			* 			*			* @param 			* @return			*/			final protected function _onTimer( e : TimerEvent ) : void {				trace( getTimer() - _nTIMER);				_nTIMER = getTimer();				_beforeTime = getTimer();				_overSleepTime = (_beforeTime - _afterTime) - _sleepTime;															_afterTime = getTimer();									var nExcess : Number = 0;				var ntimeDiff : Number = _afterTime - _beforeTime;				     				_sleepTime = (_period - ntimeDiff) - _overSleepTime;        				if (_sleepTime <= 0) {					nExcess -= _sleepTime;					_sleepTime = 2;				}    				       				_oTIMER.reset();				_oTIMER.delay = _sleepTime;				_oTIMER.start();								while (nExcess > _period) {													nExcess -= _period;				}											e.updateAfterEvent();			}			/**			* 			*			* @param 			* @return			*/			final protected function _onFrame( e : Event ) : void {				LightSignal.getInstance().emit(Event.ENTER_FRAME);			}						/**			* 			*			* @param 			* @return			*/			final protected function _onFrameFunc() : void {							}					// -------o misc			public static function trc(...args : *) : void {				Logger.log(Bench, args);			}	}}	